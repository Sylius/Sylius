<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">

    <class name="Sylius\Bundle\ApiBundle\Command\Account\RequestResetPasswordToken">
        <property name="email">
            <constraint name="NotBlank">
                <option name="message">sylius.customer.email.not_blank</option>
                <option name="groups">sylius</option>
            </constraint>
            <constraint name="Email">
                <option name="message">sylius.customer.email.invalid</option>
                <option name="mode">strict</option>
                <option name="groups">sylius</option>
            </constraint>
        </property>
        <property name="localeCode">
            <constraint name="Locale">
                <option name="groups">sylius</option>
                <option name="message">sylius.locale.code.locale</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
