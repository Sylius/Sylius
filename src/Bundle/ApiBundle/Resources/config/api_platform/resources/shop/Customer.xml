<resources
    xmlns="https://api-platform.com/schema/metadata/resources-3.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://api-platform.com/schema/metadata/resources-3.0 https://api-platform.com/schema/metadata/resources-3.0.xsd"
>
    <resource class="%sylius.model.customer.class%">
        <operations>
            <operation
                name="sylius_api_shop_customer_get"
                class="ApiPlatform\Metadata\Get"
                uriTemplate="/shop/customers/{id}"
                security="is_granted('SYLIUS_SHOP_USER')"
            >
                <normalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius:shop:customer:show</value>
                            </values>
                        </value>
                    </values>
                </normalizationContext>
            </operation>

            <operation
                name="sylius_api_shop_customer_post"
                class="ApiPlatform\Metadata\Post"
                uriTemplate="/shop/customers"
                messenger="input"
                input="Sylius\Bundle\ApiBundle\Command\Account\RegisterShopUser"
                output="false"
            >
                <denormalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius:shop:customer:create</value>
                            </values>
                        </value>
                    </values>
                </denormalizationContext>
                <validationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius</value>
                            </values>
                        </value>
                    </values>
                </validationContext>
                <openapiContext>
                    <values>
                        <value name="summary">Registers a new shop user</value>
                    </values>
                </openapiContext>
            </operation>

            <operation
                name="sylius_api_shop_customer_put"
                class="ApiPlatform\Metadata\Put"
                uriTemplate="/shop/customers/{id}"
                security="is_granted('SYLIUS_SHOP_USER')"
            >
                <denormalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius:shop:customer:update</value>
                            </values>
                        </value>
                    </values>
                </denormalizationContext>
                <normalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius:shop:customer:show</value>
                            </values>
                        </value>
                    </values>
                </normalizationContext>
                <validationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius</value>
                                <value>sylius_api_user_update</value>
                                <value>sylius_customer_profile</value>
                            </values>
                        </value>
                    </values>
                </validationContext>
            </operation>

            <operation
                name="sylius_api_shop_customer_put_password"
                class="ApiPlatform\Metadata\Put"
                uriTemplate="/shop/customers/{id}/password"
                messenger="input"
                input="Sylius\Bundle\ApiBundle\Command\Account\ChangeShopUserPassword"
                output="false"
                security="is_granted('SYLIUS_SHOP_USER')"
            >
                <denormalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius:shop:customer:password:update</value>
                            </values>
                        </value>
                    </values>
                </denormalizationContext>
                <validationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius</value>
                            </values>
                        </value>
                    </values>
                </validationContext>
                <openapiContext>
                    <values>
                        <value name="summary">Change password for logged in customer.</value>
                    </values>
                </openapiContext>
            </operation>
        </operations>
    </resource>
</resources>
