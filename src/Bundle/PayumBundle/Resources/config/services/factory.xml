<?xml version="1.0" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="sylius_payum.factory.get_status" class="Sylius\Bundle\PayumBundle\Factory\GetStatusFactory" />
        <service id="Sylius\Bundle\PayumBundle\Factory\GetStatusFactoryInterface" alias="sylius_payum.factory.get_status" />

        <service id="sylius_payum.factory.resolve_next_route" class="Sylius\Bundle\PayumBundle\Factory\ResolveNextRouteFactory" />
        <service id="Sylius\Bundle\PayumBundle\Factory\ResolveNextRouteFactoryInterface" alias="sylius_payum.factory.resolve_next_route" />

        <service id="sylius_payum.factory.capture" class="Sylius\Bundle\PayumBundle\Factory\CaptureFactory" />
        <service id="sylius_payum.factory.authorize" class="Sylius\Bundle\PayumBundle\Factory\AuthorizeFactory" />
    </services>
</container>
