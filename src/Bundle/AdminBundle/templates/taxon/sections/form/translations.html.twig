{% import '@SyliusAdmin/shared/helper/translations.html.twig' as translations %}

{% set form = hookable_metadata.context.form %}
{% set prefixes = hookable_metadata.prefixes %}

<div class="card mb-3">
    <div class="card-header">
        <h2 class="card-title">
            {{ 'sylius.ui.translations'|trans }}
        </h2>
    </div>
    <div class="">
        {{ translations.with_hook(form.translations, prefixes, null, { accordion_id: 'taxon-translations', accordion_flush: true }) }}
    </div>
</div>
