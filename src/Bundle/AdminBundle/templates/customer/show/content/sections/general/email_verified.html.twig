{% from '@SyliusAdmin/shared/helper/icon.html.twig' import icon %}

{% set user = hookable_metadata.context.user|default(null) %}

<div class="row">
    <div class="col-12 col-md-4 fw-bold">{{ 'sylius.ui.email_verified'|trans }}</div>
    <div class="col-12 col-md-8" {{ sylius_test_html_attribute('customer-verified-email') }}>
        <span>
            {% if user != null and user.verifiedAt != null %}
                {{ icon({icon: 'check', class: 'icon text-green'}) }}
            {% else %}
                {{ icon({icon: 'x', class: 'icon icon-sm text-secondary'}) }}
            {% endif %}
        </span>
    </div>
</div>
