<div class="card mb-3">
    <div class="card-header">
        <div class="card-title">
            {{ 'sylius.ui.members'|trans }}
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            {{ form_errors(hookable_metadata.context.form.members) }}

            <div {{ sylius_test_html_attribute('members') }} >
                {% for member_form in hookable_metadata.context.form.members %}
                    {% hook 'members' with { member_form } %}
                {% endfor %}

                {{ form_row(hookable_metadata.context.form.members.vars.button_add, sylius_test_form_attribute('add-member')) }}
            </div>
        </div>
    </div>
</div>
