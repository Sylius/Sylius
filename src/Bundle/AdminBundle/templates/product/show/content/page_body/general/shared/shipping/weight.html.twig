{% set variant = hookable_metadata.context.variant %}

<div class="row">
    <div class="col-12 col-md-4 fw-bold">{{ 'sylius.ui.weight'|trans }}:</div>
    <div class="col-12 col-md-8" {{ sylius_test_html_attribute('weight') }}>
        {% if variant.weight is null %}
            <i>{{ 'sylius.ui.no_weight'|trans }}</i>
        {% else %}
            {{ variant.weight }}
        {% endif %}
    </div>
</div>
