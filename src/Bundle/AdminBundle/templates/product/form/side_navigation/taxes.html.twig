{% set product = hookable_metadata.context.resource %}

{% if product.isSimple %}
    <button
        type="button"
        class="list-group-item list-group-item-action {% if hookable_metadata.configuration.active|default(false) %}active{% endif %}"
        data-bs-toggle="tab"
        data-bs-target="#taxes"
        role="tab"
        {{ sylius_test_html_attribute('side-navigation-tab', 'taxes') }}
    >
        {{ 'sylius.ui.taxes'|trans }}
    </button>
{% endif %}
