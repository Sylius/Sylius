{% import '@SyliusAdmin/shared/helper/translations.html.twig' as translations %}

{% set form = hookable_metadata.context.form %}
{% set prefixes = hookable_metadata.prefixes %}

<div class="card g-col-12 g-col-xl-6">
    <div class="card-header">
        <div class="card-title">
            {{ 'sylius.ui.translations'|trans }}
        </div>
    </div>
    <div>
        {{ translations.with_hook(form.translations, prefixes, null, { accordion_id: 'product-attribute-translations', accordion_flush: true }) }}
    </div>
</div>
