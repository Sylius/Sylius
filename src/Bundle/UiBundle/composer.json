{
    "name": "sylius/ui-bundle",
    "type": "symfony-bundle",
    "description": "Generic UI bundle for Sylius eCommerce components.",
    "keywords": [
        "shop",
        "ecommerce",
        "store",
        "webshop",
        "sylius",
        "ui",
        "user interface"
    ],
    "homepage": "https://sylius.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Paweł Jędrzejewski",
            "homepage": "https://pjedrzejewski.com"
        },
        {
            "name": "Sylius project",
            "homepage": "https://sylius.com"
        },
        {
            "name": "Community contributions",
            "homepage": "https://github.com/Sylius/Sylius/contributors"
        }
    ],
    "require": {
        "php": "^8.2",
        "doctrine/collections": "^2.2",
        "knplabs/knp-menu": "^3.5",
        "knplabs/knp-menu-bundle": "^3.4",
        "laminas/laminas-stdlib": "^3.19",
        "sylius/grid-bundle": "^1.13",
        "sylius/twig-extra": "^0.4",
        "symfony/config": "^6.4 || ^7.1",
        "symfony/expression-language": "^6.4 || ^7.1",
        "symfony/framework-bundle": "^6.4.1 || ^7.1",
        "symfony/security-core": "^6.4 || ^7.1",
        "symfony/security-bundle": "^6.4 || ^7.1",
        "symfony/ux-icons": "^2.20",
        "symfony/ux-live-component": "^2.20",
        "symfony/ux-twig-component": "^2.20",
        "symfony/webpack-encore-bundle": "^2.2"
    },
    "require-dev": {
        "matthiasnoback/symfony-config-test": "^5.1",
        "matthiasnoback/symfony-dependency-injection-test": "^5.1",
        "phpspec/phpspec": "^7.5",
        "phpunit/phpunit": "^9.5",
        "symfony/dependency-injection": "^6.4.1 || ^7.1",
        "symfony/form": "^6.4.1 || ^7.1",
        "twig/twig": "^3.14"
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.0-dev"
        },
        "symfony": {
            "allow-contrib": false,
            "require": "^7.1"
        }
    },
    "autoload": {
        "psr-4": {
            "Sylius\\Bundle\\UiBundle\\": ""
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../*/*"
        }
    ],
    "scripts": {
        "test": [
            "@composer validate --strict",
            "bin/phpunit --colors=always",
            "bin/phpspec run --ansi --no-interaction"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
