{
    "name": "sylius/promotion",
    "type": "library",
    "description": "Flexible promotion management for PHP applications.",
    "keywords": [
        "shop",
        "ecommerce",
        "promotion",
        "sylius"
    ],
    "homepage": "https://sylius.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Paweł Jędrzejewski",
            "homepage": "https://pjedrzejewski.com"
        },
        {
            "name": "Sylius project",
            "homepage": "https://sylius.com"
        },
        {
            "name": "Community contributions",
            "homepage": "https://github.com/Sylius/Sylius/contributors"
        }
    ],
    "require": {
        "php": "^8.1",
        "doctrine/orm": "^2.13",
        "sylius/registry": "^1.5",
        "sylius/resource": "^1.9"
    },
    "require-dev": {
        "phpspec/phpspec": "^7.2"
    },
    "conflict": {
        "doctrine/orm": "2.15.2"
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.13-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Sylius\\Component\\Promotion\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sylius\\Component\\Promotion\\spec\\": "spec/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../*/*"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
