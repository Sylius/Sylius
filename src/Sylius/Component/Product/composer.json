{
    "name": "sylius/product",
    "type": "library",
    "description": "Product catalog system with support for product options and variants.",
    "keywords": ["shop", "ecommerce", "products", "product", "assortment", "options", "variants"],
    "homepage": "http://sylius.org",
    "license": "MIT",
    "authors": [
        {
            "name": "Paweł Jędrzejewski",
            "homepage": "http://pjedrzejewski.com"
        },
        {
            "name": "Sylius project",
            "homepage": "http://sylius.org"
        },
        {
            "name": "Community contributions",
            "homepage": "http://github.com/Sylius/Sylius/contributors"
        }
    ],
    "require": {
        "php": "^5.6|^7.0",

        "sylius/attribute": "^1.0",
        "sylius/association": "^1.0",
        "sylius/resource": "^1.0",
        "sylius/variation": "^1.0",
        "symfony/polyfill-iconv": "~1.0"
    },
    "require-dev": {
        "phpspec/phpspec": "^3.0"
    },
    "suggest": {
        "ext-iconv": "For better performance than using Symfony Polyfill Component"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": { "Sylius\\Component\\Product\\": "" }
    },
    "autoload-dev": {
        "psr-4": { "Sylius\\Component\\Product\\spec\\": "spec/" }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../../*/*"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
