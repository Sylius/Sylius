{
    "name": "sylius/product",
    "type": "library",
    "description": "Product catalog system with support for product options and variants.",
    "keywords": [
        "shop",
        "ecommerce",
        "products",
        "product",
        "assortment",
        "options",
        "variants"
    ],
    "homepage": "https://sylius.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Paweł Jędrzejewski",
            "homepage": "https://pjedrzejewski.com"
        },
        {
            "name": "Sylius project",
            "homepage": "https://sylius.com"
        },
        {
            "name": "Community contributions",
            "homepage": "https://github.com/Sylius/Sylius/contributors"
        }
    ],
    "require": {
        "php": "^8.2",
        "behat/transliterator": "^1.3",
        "sylius/attribute": "^2.0",
        "sylius/resource": "^1.10",
        "symfony/polyfill-iconv": "^1.28",
        "webmozart/assert": "^1.9"
    },
    "require-dev": {
        "phpspec/phpspec": "^7.2"
    },
    "suggest": {
        "ext-iconv": "For better performance than using Symfony Polyfill Component"
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Sylius\\Component\\Product\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sylius\\Component\\Product\\spec\\": "spec/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../*/*"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
