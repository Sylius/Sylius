{
    "name": "sylius/core",
    "type": "library",
    "description": "Sylius e-commerce core. It integrates all components.",
    "keywords": ["shop", "ecommerce", "core", "store", "sylius"],
    "homepage": "http://sylius.org",
    "license": "MIT",
    "authors": [
        {
            "name": "Paweł Jędrzejewski",
            "homepage": "http://pjedrzejewski.com"
        },
        {
            "name": "Sylius project",
            "homepage": "http://sylius.org"
        },
        {
            "name": "Community contributions",
            "homepage": "http://github.com/Sylius/Sylius/contributors"
        }
    ],
    "require": {
        "php": "^7.1",

        "knplabs/gaufrette": "^0.2",
        "payum/payum": "^1.3",
        "php-http/guzzle6-adapter": "^1.1",
        "sylius/addressing": "^1.0",
        "sylius/attribute": "^1.0",
        "sylius/channel": "^1.0",
        "sylius/currency": "^1.0",
        "sylius/customer": "^1.0",
        "sylius/inventory": "^1.0",
        "sylius/locale": "^1.0",
        "sylius/order": "^1.0",
        "sylius/payment": "^1.0",
        "sylius/product": "^1.0",
        "sylius/promotion": "^1.0",
        "sylius/registry": "^1.0",
        "sylius/resource": "^1.0",
        "sylius/review": "^1.0",
        "sylius/shipping": "^1.0",
        "sylius/taxation": "^1.0",
        "sylius/taxonomy": "^1.0",
        "sylius/user": "^1.0",
        "webmozart/assert": "^1.0",
        "zendframework/zend-stdlib": "^3.1"
    },
    "require-dev": {
        "phpspec/phpspec": "^4.0",
        "symfony/property-access": "^3.2"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": { "Sylius\\Component\\Core\\": "" }
    },
    "autoload-dev": {
        "psr-4": { "Sylius\\Component\\Core\\spec\\": "spec/" }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../../*/*"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
