{
    "name": "sylius/user",
    "type": "library",
    "description": "User handling for PHP applications.",
    "keywords": ["user", "registration", "login", "groups"],
    "homepage": "http://sylius.org",
    "license": "MIT",
    "authors": [
        {
            "name": "Paweł Jędrzejewski",
            "homepage": "http://pjedrzejewski.com"
        },
        {
            "name": "Michał Marcinkowski",
            "email": "michal.marcinkowski@lakion.com"
        },
        {
            "name": "Łukasz Chruściel",
            "email": "lukasz.chrusciel@lakion.com"
        },
        {
            "name": "Sylius project",
            "homepage": "http://sylius.org"
        },
        {
            "name": "Community contributions",
            "homepage": "http://github.com/Sylius/Sylius/contributors"
        }
    ],
    "require": {
        "php": "^7.1",

        "doctrine/collections": "^1.1",
        "sylius/resource": "^1.0",
        "symfony/polyfill-mbstring": "^1.3",
        "symfony/security": "^3.2"
    },
    "require-dev": {
        "phpspec/phpspec": "^4.0"
    },
    "suggest": {
        "ext-mbstring": "For better performance than using Symfony Polyfill Component"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": { "Sylius\\Component\\User\\": "" }
    },
    "autoload-dev": {
        "psr-4": { "Sylius\\Component\\User\\spec\\": "spec/" }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../../*/*"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
