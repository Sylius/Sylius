<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping">
    <mapped-superclass name="Sylius\Component\Promotion\Model\CatalogPromotionAction" table="sylius_catalog_promotion_action">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="type" />
        <field name="configuration" type="array" />

        <many-to-one field="catalogPromotion" target-entity="Sylius\Component\Promotion\Model\CatalogPromotionInterface" inversed-by="actions">
            <join-column name="catalog_promotion_id" referenced-column-name="id" nullable="true" />
        </many-to-one>
    </mapped-superclass>
</doctrine-mapping>
