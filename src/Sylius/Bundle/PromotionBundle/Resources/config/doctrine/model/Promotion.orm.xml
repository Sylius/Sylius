<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping">

    <mapped-superclass name="Sylius\Component\Promotion\Model\Promotion" table="sylius_promotion">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="name" type="string" />
        <field name="description" type="string" />
        <field name="priority" type="integer">
            <gedmo:sortable-position/>
        </field>
        <field name="exclusive" type="boolean" />
        <field name="usageLimit" column="usage_limit" type="integer" nullable="true" />
        <field name="used" type="integer" />
        <field name="couponBased" column="coupon_based" type="boolean" />
        <field name="startsAt" column="starts_at" type="datetime" nullable="true"/>
        <field name="endsAt" column="ends_at" type="datetime" nullable="true"/>

        <one-to-many field="coupons" target-entity="Sylius\Component\Promotion\Model\CouponInterface" mapped-by="promotion">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-many>
        <one-to-many field="rules" target-entity="Sylius\Component\Promotion\Model\RuleInterface" mapped-by="promotion">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-many>
        <one-to-many field="actions" target-entity="Sylius\Component\Promotion\Model\ActionInterface" mapped-by="promotion">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-many>
        
        <many-to-many field="orders" target-entity="Sylius\Component\Promotion\Model\PromotionInterface">
            <join-table name="sylius_promotion_order">
                <join-columns>
                    <join-column name="promotion_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="order_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
            <cascade>
                <cascade-persist />
            </cascade>
        </many-to-many>

        <field name="createdAt" column="created_at" type="datetime">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updatedAt" column="updated_at" type="datetime" nullable="true">
            <gedmo:timestampable on="update"/>
        </field>
    </mapped-superclass>

</doctrine-mapping>
