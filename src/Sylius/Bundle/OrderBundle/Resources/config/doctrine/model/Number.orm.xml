<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Sylius\Component\Order\Model\Number" table="sylius_number">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <one-to-one field="order" target-entity="Sylius\Component\Order\Model\OrderInterface">
            <join-column name="order_id" referenced-column-name="id" nullable="false" />
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-one>
    </mapped-superclass>

</doctrine-mapping>
