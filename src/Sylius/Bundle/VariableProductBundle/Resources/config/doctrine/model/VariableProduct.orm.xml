<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>

    <mapped-superclass name="Sylius\Component\VariableProduct\Model\VariableProduct" table="sylius_product">
        <one-to-many field="variants" target-entity="Sylius\Component\VariableProduct\Model\VariantInterface" mapped-by="product">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-many>

        <many-to-many field="options" target-entity="Sylius\Component\VariableProduct\Model\OptionInterface">
            <join-table name="sylius_product_option">
                <join-columns>
                    <join-column name="product_id" referenced-column-name="id" nullable="false" unique="false" on-delete="CASCADE" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="option_id" referenced-column-name="id" nullable="false" unique="false" on-delete="CASCADE" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </mapped-superclass>

</doctrine-mapping>
