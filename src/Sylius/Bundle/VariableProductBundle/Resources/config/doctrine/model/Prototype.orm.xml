<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <mapped-superclass name="Sylius\Component\VariableProduct\Model\Prototype" table="sylius_prototype">
        <many-to-many field="options" target-entity="Sylius\Component\VariableProduct\Model\OptionInterface">
            <join-table name="sylius_prototype_option">
                <join-columns>
                    <join-column name="prototype_id" referenced-column-name="id" nullable="false" unique="false" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="option_id" referenced-column-name="id" nullable="false" unique="false" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </mapped-superclass>

</doctrine-mapping>
