<h1>Updating product <small>Use this form to update existing product</small></h1>
<hr />

<form action="{{ path('sylius_product_update', {'id': product.id}) }}" method="post" class="form-horizontal" novalidate>
    {% include 'SyliusVariableProductBundle:Product:_form.html.twig' %}
    <div class="form-actions">
        <input type="submit" value="save changes" class="btn btn-large btn-primary" />
        <a href="{{ path('sylius_product_index') }}" class="btn btn-large">cancel</a>
    </div>
</form>
