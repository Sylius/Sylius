<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <mapped-superclass name="Sylius\Bundle\SettingsBundle\Model\Settings" table="sylius_settings">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="schema" type="string" nullable="false"/>

        <one-to-many target-entity="Sylius\Bundle\SettingsBundle\Model\ParameterInterface" mapped-by="setting" field="parameters" index-by="name">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>
    </mapped-superclass>

</doctrine-mapping>
