<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <mapped-superclass name="Sylius\Bundle\SettingsBundle\Model\Settings" table="sylius_settings">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="namespace" column="namespace" type="string" />
        <field name="schemaAlias" column="schemaAlias" type="string" />

        <one-to-many target-entity="Sylius\Bundle\SettingsBundle\Model\ParameterInterface" mapped-by="name" field="parameters"/>

    </mapped-superclass>

</doctrine-mapping>
