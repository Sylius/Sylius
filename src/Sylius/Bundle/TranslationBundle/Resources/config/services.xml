<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius.doctrine.orm.event_subscriber.translatable.class">Sylius\Bundle\TranslationBundle\Doctrine\ORM\TranslatableListener</parameter>
        <parameter key="sylius.doctrine.mongodb_odm.event_subscriber.class">Sylius\Bundle\TranslationBundle\EventListener\ODM\MongoDB\TranslatableListener</parameter>
        <parameter key="sylius.translation.locale_provider.request.class">Sylius\Bundle\TranslationBundle\Provider\RequestLocaleProvider</parameter>
    </parameters>

    <services>
        <service id="sylius.doctrine.orm.event_subscriber.translatable" class="%sylius.doctrine.orm.event_subscriber.translatable.class%">
            <argument type="service" id="sylius.registry.resource" />
            <argument type="service" id="sylius.translation.locale_provider" />
            <tag name="doctrine.event_subscriber" connection="default" priority="99" />
        </service>
        <!--
        <service id="sylius.doctrine.mongodb_odm.event_subscriber.translatable" class="%sylius.doctrine.mongodb_odm.event_subscriber.translatable.class%">
            <argument type="service" id="sylius.translation.locale_provider" />
            <argument>%sylius.translation.mapping%</argument>
            <tag name="doctrine_mongodb.odm.event_subscriber" connection="default" priority="99" />
        </service>
        -->

        <service id="sylius.translation.locale_provider.request" class="%sylius.translation.locale_provider.request.class%">
            <argument>%sylius.translation.default_locale%</argument>
            <tag name="kernel.event_subscriber" priority="98" />
        </service>
    </services>
</container>
