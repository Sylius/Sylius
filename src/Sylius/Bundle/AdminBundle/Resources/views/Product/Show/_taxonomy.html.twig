<div id="taxonomy">
    <h4 class="ui top attached inverted black header">{{ 'sylius.ui.taxonomy'|trans }}</h4>
    <div class="ui attached segment">
        <table class="ui definition table">
            <tbody>
            {% if product.mainTaxon != null %}
                <tr>
                    <td class="five wide">{{ 'sylius.ui.main_taxon'|trans }}</td>
                    <td>{{ product.mainTaxon.getFullName }}</td>
                </tr>
            {% endif %}
            <tr>
                <td class="five wide">{{ 'sylius.ui.product_taxon'|trans }}</td>
                <td>
                    <ul class="ui bulleted list">
                        {% for productTaxon in product.productTaxons %}
                            <li>{{ productTaxon.getTaxon.getFullName }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>

