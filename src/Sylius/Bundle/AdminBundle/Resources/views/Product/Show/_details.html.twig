<div id="details">
    <h4 class="ui top attached inverted black header">Details</h4>
    <div class="ui attached black segment">
        <div>
            {% if product.enabled %}
                <span class="ui teal label"><i class="checkmark icon"></i>{{ 'sylius.ui.enabled'|trans }}</span>
            {% else %}
                <span class="ui red label"><i class="remove icon">{{ 'sylius.ui.disabled'|trans }}</i></span>
            {% endif %}

            {% if product.variants.first().tracked %}
                <span class="ui teal label"><i class="checkmark icon"></i>{{ 'sylius.ui.tracked'|trans }}</span>
            {% else %}
                <span class="ui red label"><i class="remove icon"></i>{{ 'sylius.ui.not_tracked'|trans }}</span>
            {% endif %}

            {% if product.variants.first().shippingRequired %}
                <span class="ui teal label"><i class="checkmark icon"></i>{{ 'sylius.ui.shipping_required'|trans }}</span>
            {% else %}
                <span class="ui orange label"><i class="remove icon"></i>{{ 'sylius.ui.shipping_not_required'|trans }}</span>
            {% endif %}

            <table class="ui definition table">
                <tbody>
                <tr>
                    <td class="five wide">{{ 'sylius.ui.code'|trans }}</td>
                    <td>{{ product.code }}</td>
                </tr>
                <tr>
                    <td class="five wide">{{ 'sylius.ui.options'|trans }}</td>
                    <td>
                        <ul class="ui bulleted list">
                            {% for option in product.options %}
                                <li>{{ option }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
                <tr>
                    <td class="five wide">{{ 'sylius.ui.channels'|trans }}</td>
                    {% for channel in product.channels %}
                        <td>
                            <span class="ui large empty horizontal circular label" style="background-color: teal"></span>
                            <span class="channel-name">{{ channel }}</span>
                        </td>
                    {% endfor %}
                </tr>
                <tr>
                    <td class="five wide">{{ 'sylius.ui.current_stock'|trans }}</td>
                    <td>{{ product.variants.first().onHand - product.variants.first().onHold }}</td>
                </tr>
                <tr>
                    <td class="five wide">{{ 'sylius.ui.tax_category'|trans }}</td>
                    <td>{{ product.variants.first().taxCategory }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

