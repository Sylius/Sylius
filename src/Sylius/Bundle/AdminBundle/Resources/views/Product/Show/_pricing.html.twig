{% import "@SyliusAdmin/Common/Macro/money.html.twig" as money %}
<div id="pricing">
    <h4 class="ui top attached inverted black header">{{ 'sylius.ui.pricing'|trans }}</h4>
    <div class="ui attached black segment">
        <table id="pricing" class="ui definition table">
            <thead>
                <th>{{ 'sylius.ui.channels'|trans }}</th>
                <th>{{ 'sylius.ui.price'|trans }}</th>
                <th>{{ 'sylius.ui.original_price'|trans }}</th>
            </thead>
            <tbody>
            {% for channelPricing in product.variants.first.channelPricings %}
                <tr>
                    <td class="five wide">United States</td>
                    <td>{{ money.format(channelPricing.price, product.channels.first.baseCurrency) }}</td>
                    {% if channelPricing.originalPrice != null %}
                        <td>{{ money.format(channelPricing.originalPrice, product.channels.first.baseCurrency) }}</td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
