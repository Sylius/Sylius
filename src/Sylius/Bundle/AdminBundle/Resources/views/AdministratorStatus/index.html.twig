{% extends '@SyliusAdmin/layout.html.twig' %}

{% block title %}{{ 'sylius.ui.administrator_status'|trans }} {{ parent() }}{% endblock %}

{% block content %}

    <div class="ui stackable two column grid">
        <div class="ten wide column">
            {% include '@SyliusAdmin/AdministratorStatus/_header.html.twig' %}
        </div>

        {% set menu = knp_menu_get('sylius.admin.administrator_status') %}
        {{ knp_menu_render(menu, {'template': '@SyliusUi/Menu/top.html.twig'}) }}
    </div>

    {% include '@SyliusAdmin/AdministratorStatus/_statistics.html.twig' %}

    <div class="ui grid">
        <div class="ui row huge labels">
            {% for property in modules %}
                <div class="ui label">
                    {{ property }}
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
