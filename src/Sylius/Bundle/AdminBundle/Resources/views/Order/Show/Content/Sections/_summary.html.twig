{% import '@SyliusAdmin/Shared/Helper/money.html.twig' as _money %}

{% set main_hook = hook_name(hookable_data.parent_main_hook, 'summary') %}
{% set fallback_hook = hook_name(hookable_data.parent_fallback_hook, 'summary') %}

{% set order = hookable_data.resource %}

<div class="card mb-3">
    <div class="card-header">
        <div class="card-title">{{ (_context.title|default('sylius.ui.summary'))|trans }}</div>
    </div>
    <div class="py-3">
        {% block content %}
            <table class="table table-sm table-hover table-borderless card-table">
                {% block table %}
                    <tbody>
                        {% hook [main_hook, fallback_hook] with hookable_data|merge({
                            parent_main_hook: main_hook,
                            parent_fallback_hook: fallback_hook,
                        }) %}
                    </tbody>
                {% endblock %}
            </table>
        {% endblock %}
    </div>
    <div class="card-footer">
        {% block footer %}
            <div class="d-flex justify-content-between">
                <div class="h3 mb-0">{{ 'sylius.ui.order_total'|trans }}:</div>
                <div class="h3 mb-0">{{ _money.format(order.total, order.currencyCode) }}</div>
            </div>
        {% endblock %}
    </div>
</div>
