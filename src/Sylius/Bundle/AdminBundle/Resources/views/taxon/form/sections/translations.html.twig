{% import '@SyliusAdmin/shared/helper/translations.html.twig' as _translations %}

<div class="bg-white mb-3">
    {% set body %}
        {% verbatim %}
            <div class="row"
                data-controller="taxon-slug"
                data-taxon-slug-url-value="{{ path('sylius_admin_ajax_generate_taxon_slug') }}"
                data-taxon-slug-locale-value="{{ locale }}"
                data-taxon-slug-taxon-parent-code-value="{{ translationForm.vars.data.translatable.code ?? null }}"
            >
                <div class="col-12 col-md-6">
                    {{ form_row(translationForm.name, { attr: { 'data-taxon-slug-target': 'sluggable', 'data-action': 'change->taxon-slug#generateSlug' } }) }}
                </div>
                <div class="col-12 col-md-6">
                    {{ form_row(translationForm.slug, { attr: { 'data-taxon-slug-target': 'slug' } }) }}
                </div>
                <div class="col-12">
                    {{ form_row(translationForm.description) }}
                </div>
            </div>
        {% endverbatim %}
    {% endset %}
    {{ _translations.default(hookable_metadata.context.form.translations, body, {accordionId: 'taxon-translations'}) }}
</div>
