{% if breadcrumbs|default([])|length > 0 %}
    {% set update_url = path(
            configuration.vars.index.route.name|default(configuration.getRouteName('update')),
            configuration.vars.index.route.parameters|default(configuration.vars.route.parameters|default({ 'id': resource.id }))
        )
    %}

    {% include '@SyliusAdmin/Crud/_breadcrumb.html.twig' with {
        'breadcrumbs': [
            { label: resource.name|default(resource.code|default(resource.id)), url: update_url }
        ]|merge(breadcrumbs|default([]))
    } %}
{% else %}
    {% include '@SyliusAdmin/Crud/_breadcrumb.html.twig' with {
        'breadcrumbs': [
            { label: resource.name|default(resource.code|default(resource.id)) },
            { label: 'sylius.ui.edit'|trans }
        ]|merge(breadcrumbs|default([]))
    } %}
{% endif %}
