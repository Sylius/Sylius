{# Rendered with \Sylius\Bundle\AdminBundle\Twig\Component\ShippingMethod\FormComponent #}

{% form_theme form '@SyliusAdmin/shipping_method/form_theme.html.twig' %}

{% set main_hook = hook_name(parent_main_hook, 'form') %}
{% set fallback_hook = hook_name(parent_fallback_hook, 'form') %}

<div class="container-xl" {{ attributes }}>
    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': form.vars.id}}) }}
    <div class="row">
        {% if hookable_configuration.method is defined %}
            <input type="hidden" name="_method" value="{{ hookable_configuration.method }}" />
        {% endif %}
        {{ form_errors(form) }}
        {{ form_widget(form._token) }}

        {% hook [main_hook, fallback_hook] with {
            parent_main_hook: main_hook,
            parent_fallback_hook: fallback_hook,
            form,
        } %}
    </div>
    <div class="row">
        <div class="col-6">
            {% hook [main_hook ~ '#left', fallback_hook] with {
                parent_main_hook: main_hook,
                parent_fallback_hook: fallback_hook,
                form,
            } %}
        </div>
        <div class="col-6">
            {% hook [main_hook ~ '#right', fallback_hook] with {
                parent_main_hook: main_hook,
                parent_fallback_hook: fallback_hook,
                form,
            } %}
        </div>
    </div>
    {{ form_end(form, {render_rest: hookable.configuration.render_rest|default(false)}) }}
</div>
