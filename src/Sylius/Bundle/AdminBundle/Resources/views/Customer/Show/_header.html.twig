<div class="ui stackable two column grid">
    <div class="column">
        <h1 class="ui header">
            <i class="circular user icon"></i>
            <div class="content">
                {{ customer.fullName|default('sylius.ui.guest_customer'|trans) }}
                <div class="sub header">
                    {{ customer.email }}
                </div>
            </div>
        </h1>
    </div>
    {% if customer.user is not null %}
        <div class="right aligned column" id="actions">
            <div class="ui buttons">
                {{ buttons.edit(path('sylius_admin_customer_update', {'id': customer.id})) }}
                {{ buttons.show(path('sylius_admin_customer_order_index', {'id': customer.id}), 'sylius.ui.show_orders'|trans) }}
                {{ buttons.delete(path('sylius_admin_shop_user_delete', {'id': customer.user.id }), null, true, customer.id) }}
            </div>
        </div>
    {% else %}
        <div class="right aligned column" id="no-account">
            <span class="ui huge icon label">
                <i class="spy icon"></i> {{ 'sylius.ui.guest'|trans }}
            </span>

            {{ buttons.show(path('sylius_admin_customer_order_index', {'id': customer.id}), 'sylius.ui.show_orders'|trans) }}
        </div>
    {% endif %}
</div>
