{% set main_hook = hook_name(hookable_data.parent_main_hook, 'scopes') %}
{% set fallback_hook = hook_name(hookable_data.parent_fallback_hook, 'scopes') %}

<div class="card mb-3">
    <div class="card-header">
        <div class="card-title">
            {{ 'sylius.ui.scopes'|trans }}
        </div>
    </div>
    <div class="card-body">
        {% hook [main_hook, fallback_hook] with hookable_data|merge({
            parent_main_hook: main_hook,
            parent_fallback_hook: fallback_hook,
        }) %}
    </div>
</div>
