{
    "name": "sylius/pricing-bundle",
    "type": "symfony-bundle",
    "description": "Pricing system for Symfony2 projects.",
    "keywords": ["shop", "ecommerce", "pricing", "coupons", "discounts", "sylius"],
    "homepage": "http://sylius.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Paweł Jędrzejewski",
            "homepage": "http://pjedrzejewski.com"
        },
        {
            "name": "Sylius project",
            "homepage": "http://sylius.org"
        },
        {
            "name": "Community contributions",
            "homepage": "http://github.com/Sylius/Sylius/contributors"
        }
    ],
    "require": {
        "php": "^5.6|^7.0",

        "stof/doctrine-extensions-bundle": "^1.2",
        "sylius/pricing": "^1.0",
        "sylius/resource-bundle": "^1.0",
        "symfony/framework-bundle": "^3.2@rc",
        "symfony/templating": "^3.2@rc"
    },
    "require-dev": {
        "doctrine/orm": "^2.5",
        "phpspec/phpspec": "^3.2",
        "symfony/form": "^3.2@rc",
        "symfony/validator": "^3.2@rc"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": { "Sylius\\Bundle\\PricingBundle\\": "" }
    },
    "autoload-dev": {
        "psr-4": { "Sylius\\Bundle\\PricingBundle\\spec\\": "spec/" }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../../*/*"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
