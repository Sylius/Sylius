<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <mapped-superclass name="Sylius\Component\Promotion\Model\Rule" table="sylius_promotion_rule">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="type" type="string" />
        <field name="configuration" type="array" />

        <many-to-one field="promotion" target-entity="Sylius\Component\Promotion\Model\PromotionInterface" inversed-by="rules">
            <join-column name="promotion_id" referenced-column-name="id" nullable="true" />
        </many-to-one>
    </mapped-superclass>

</doctrine-mapping>
