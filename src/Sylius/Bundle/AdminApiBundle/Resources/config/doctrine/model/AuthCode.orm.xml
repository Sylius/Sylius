<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass name="Sylius\Bundle\AdminApiBundle\Model\AuthCode" table="sylius_admin_api_auth_code">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <many-to-one field="client" target-entity="Sylius\Bundle\AdminApiBundle\Model\ClientInterface">
            <join-column name="client_id" referenced-column-name="id" />
        </many-to-one>
        <many-to-one field="user" target-entity="Sylius\Bundle\AdminApiBundle\Model\UserInterface">
            <join-column name="user_id" referenced-column-name="id" nullable="true" />
        </many-to-one>
    </mapped-superclass>
</doctrine-mapping>
