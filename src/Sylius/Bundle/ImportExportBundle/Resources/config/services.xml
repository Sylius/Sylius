<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius.registry.class">Sylius\Component\Registry\ServiceRegistry</parameter>
        
        <parameter key="sylius.import_export.exporter.class">Sylius\Component\ImportExport\Exporter</parameter>
        <parameter key="sylius.form.type.export_writer_choice.class">Sylius\Bundle\ImportExportBundle\Form\Type\Writer\ExportWriterChoiceType</parameter>
        <parameter key="sylius.form.type.export_reader_choice.class">Sylius\Bundle\ImportExportBundle\Form\Type\Reader\ExportReaderChoiceType</parameter>

        <parameter key="sylius.form.type.reader.csv.class">Sylius\Bundle\ImportExportBundle\Form\Type\Reader\csvReaderType</parameter>

        <parameter key="sylius.form.type.writer.csv_type.class">Sylius\Bundle\ImportExportBundle\Form\Type\Writer\CsvWriterType</parameter>

        <parameter key="sylius.import_export.importer.class">Sylius\Component\ImportExport\Importer</parameter> 
        <parameter key="sylius.form.type.import_writer_choice.class">Sylius\Bundle\ImportExportBundle\Form\Type\Writer\ImportWriterChoiceType</parameter>
        <parameter key="sylius.form.type.import_reader_choice.class">Sylius\Bundle\ImportExportBundle\Form\Type\Reader\ImportReaderChoiceType</parameter>

        <parameter key="sylius.export.csv_writer.class">Sylius\Component\ImportExport\Writer\CsvWriter</parameter>

        <parameter key="sylius.import.csv_reader.class">Sylius\Component\ImportExport\Reader\CsvReader</parameter>
    </parameters>

    <services>
        <service id="sylius.registry.export.writer" class="%sylius.registry.class%">
            <argument>Sylius\Component\ImportExport\Writer\WriterInterface</argument>
        </service>
        <service id="sylius.registry.export.reader" class="%sylius.registry.class%">
            <argument>Sylius\Component\ImportExport\Reader\ReaderInterface</argument>
        </service>
        <service id="sylius.registry.import.writer" class="%sylius.registry.class%">
            <argument>Sylius\Component\ImportExport\Writer\WriterInterface</argument>
        </service>
        <service id="sylius.registry.import.reader" class="%sylius.registry.class%">
            <argument>Sylius\Component\ImportExport\Reader\ReaderInterface</argument>
        </service>
        
        <!-- Export Config -->

        <service id="sylius.import_export.exporter" class="%sylius.import_export.exporter.class%">
            <argument type="service" id="sylius.registry.export.writer" />
            <argument type="service" id="sylius.repository.export_job" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="logger" />
            <tag name="monolog.logger" channel="exporter" />
        </service>
        <service id="exporter_filesystem" class="%sylius.filesystem%" factory-service="knp_gaufrette.filesystem_map" factory-method="get">
            <argument>%sylius.filesystem.exporter%</argument>
        </service>
        
        <service id="sylius.form.type.export_writer_choice" class="%sylius.form.type.export_writer_choice.class%">
            <argument>%sylius.export.writers%</argument>
            <tag name="form.type" alias="sylius_export_writer_choice" />
        </service>

        <service id="sylius.export.csv_writer" class="%sylius.export.csv_writer.class%">
            <argument type="service" id="exporter_filesystem" />
            <tag name="sylius.export.writer" writer="csv_writer" label="CSV writer" />
        </service>
        <service id="sylius.form.type.writer.csv_type" class="%sylius.form.type.writer.csv_type.class%">
            <tag name="form.type" alias="sylius_csv_writer" />
        </service>

        <service id="sylius.form.type.export_reader_choice" class="%sylius.form.type.export_reader_choice.class%">
            <argument>%sylius.export.readers%</argument>
            <tag name="form.type" alias="sylius_export_reader_choice" />
        </service>
        <!-- Import Config -->
        
        <service id="sylius.import_export.importer" class="%sylius.import_export.importer.class%">
            <argument type="service" id="sylius.registry.import.reader" />
            <argument type="service" id="sylius.registry.import.writer" />
            <argument type="service" id="sylius.repository.import_job" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="logger" />
            <tag name="monolog.logger" channel="importer" />
        </service>
        
        <service id="sylius.form.type.import_writer_choice" class="%sylius.form.type.import_writer_choice.class%">
            <argument>%sylius.import.writers%</argument>
            <tag name="form.type" alias="sylius_import_writer_choice" />
        </service>
        <service id="sylius.form.type.import_reader_choice" class="%sylius.form.type.import_reader_choice.class%">
            <argument>%sylius.import.readers%</argument>
            <tag name="form.type" alias="sylius_import_reader_choice" />
        </service>

        <service id="sylius.import.csv_reader" class="%sylius.import.csv_reader.class%">
            <tag name="sylius.import.reader" reader="csv_reader" label="CSV reader" />
        </service>

        <service id="sylius.form.type.reader.csv" class="%sylius.form.type.reader.csv.class%">
            <tag name="form.type" alias="sylius_csv_reader" />
        </service>

    </services>

</container>
