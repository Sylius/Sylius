<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                                        http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">
    
    <class name="Sylius\Component\ImportExport\Model\ExportProfile">
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">code</option>
            <option name="message">sylius.export_profile.code.in_use</option>
            <option name="groups">sylius</option>
        </constraint>
        <property name="name">
            <constraint name="NotBlank">
                <option name="message">sylius.export_profile.name.not_blank</option>
                <option name="groups">sylius</option>
            </constraint>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">255</option>
                <option name="minMessage">sylius.export_profile.name.min_length</option>
                <option name="maxMessage">sylius.export_profile.name.max_length</option>
                <option name="groups">sylius</option>
            </constraint>
        </property>
        <property name="code">
            <constraint name="NotBlank">
                <option name="message">sylius.export_profile.code.not_blank</option>
                <option name="groups">sylius</option>
            </constraint>
            <constraint name="Regex">
                <option name="pattern">(^\S*$)</option>
                <option name="groups">sylius</option>
                <option name="message">sylius.export_profile.code.single_word</option>
            </constraint>
        </property>
    </class>
    
    <class name="Sylius\Component\ImportExport\Model\ExportJob">
        <property name="status">
            <constraint name="NotBlank">
                <option name="message">sylius.export_job.status.not_blank</option>
                <option name="groups">sylius</option>
            </constraint>
        </property>
    </class>
    
    <class name="Sylius\Component\ImportExport\Model\ImportProfile">
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">code</option>
            <option name="message">sylius.import_profile.code.in_use</option>
            <option name="groups">sylius</option>
        </constraint>
        <property name="name">
            <constraint name="NotBlank">
                <option name="message">sylius.import_profile.name.not_blank</option>
                <option name="groups">sylius</option>
            </constraint>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">255</option>
                <option name="minMessage">sylius.import_profile.name.min_length</option>
                <option name="maxMessage">sylius.import_profile.name.max_length</option>
                <option name="groups">sylius</option>
            </constraint>
        </property>
        <property name="code">
            <constraint name="NotBlank">
                <option name="message">sylius.import_profile.code.not_blank</option>
                <option name="groups">sylius</option>
            </constraint>
            <constraint name="Regex">
                <option name="pattern">(^\S*$)</option>
                <option name="groups">sylius</option>
                <option name="message">sylius.import_profile.code.single_word</option>
            </constraint>
        </property>
    </class>
    
    <class name="Sylius\Component\ImportExport\Model\ImportJob">
        <property name="status">
            <constraint name="NotBlank">
                <option name="message">sylius.import_job.status.not_blank</option>
                <option name="groups">sylius</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
