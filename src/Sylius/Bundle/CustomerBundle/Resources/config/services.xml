<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius.form.type.customer.class">Sylius\Bundle\CustomerBundle\Form\Type\CustomerType</parameter>
    </parameters>

    <services>
        <service id="sylius.customer.user_provider" class="Sylius\Component\Customer\Provider\CustomerProvider" public="false">
            <argument type="service" id="sylius.repository.customer"/>
        </service>

        <service id="sylius.customer_authenticator" class="Sylius\Component\Customer\Security\CustomerAuthenticator">
            <argument type="service" id="sylius.customer.user_provider"/>
        </service>

        <service id="sylius.customer_manager" class="Sylius\Component\Customer\Manager\CustomerManager">
            <argument type="service" id="sylius.repository.customer"/>
        </service>

        <service id="sylius.listener.customer_response" class="Sylius\Component\Customer\EventListener\CustomerListener">
            <tag name="kernel.event_listener" event="kernel.response" method="onKernelResponse" />
        </service>
        <service id="sylius.listener.customer_inject" class="Sylius\Component\Customer\EventListener\CustomerInjectListener" abstract="true">
            <argument type="service" id="security.context" />
        </service>

        <service id="sylius.form.type.customer" class="%sylius.form.type.customer.class%">
            <argument>%sylius.model.customer.class%</argument>
            <argument type="collection">
                <argument>sylius</argument>
            </argument>
            <tag name="form.type" alias="sylius_customer" />
        </service>
    </services>

</container>
