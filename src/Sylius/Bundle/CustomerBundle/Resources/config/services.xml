<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sylius.customer.user_provider" class="Sylius\Component\Customer\Provider\CustomerProvider" public="false">
            <argument type="service" id="sylius.repository.customer"/>
        </service>

        <service id="sylius.customer_authenticator" class="Sylius\Component\Customer\Security\CustomerAuthenticator">
            <argument type="service" id="sylius.customer.user_provider"/>
        </service>

        <service id="sylius.customer_listener" class="Sylius\Component\Customer\EventListener\CustomerListener">
            <tag name="kernel.event_listener" event="kernel.response" method="onKernelResponse" />
        </service>
    </services>

</container>
