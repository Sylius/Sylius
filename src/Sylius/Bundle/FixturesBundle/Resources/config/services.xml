<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd"
        >

    <parameters>
        <parameter key="sylius.fixtures_loader.class">Sylius\Bundle\FixturesBundle\Loader\Loader</parameter>
        <parameter key="sylius.fixtures_builder.group.class">Sylius\Bundle\FixturesBundle\Builder\GroupBuilder</parameter>
    </parameters>

    <services>
        <service id="sylius.fixtures_loader" class="%sylius.fixtures_loader.class%">
            <call method="setBuilder">
                <argument type="service" id="sylius.fixtures_builder.group" />
            </call>
        </service>

        <service id="sylius.fixtures_builder.group" class="%sylius.fixtures_builder.group.class%">
            <argument type="string">%sylius.model.group.class%</argument>
        </service>
    </services>

</container>
