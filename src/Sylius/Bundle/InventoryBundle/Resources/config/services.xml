<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd"
>

    <parameters>
        <parameter key="sylius_inventory.operator.class">Sylius\Bundle\InventoryBundle\Operator\InventoryOperator</parameter>
        <parameter key="sylius_inventory.resolver.class">Sylius\Bundle\InventoryBundle\Resolver\StockResolver</parameter>
    </parameters>

    <services>
        <service id="sylius_inventory.operator" class="%sylius_inventory.operator.class%">
            <argument type="service" id="sylius_inventory.manager.iu" />
            <argument type="service" id="sylius_inventory.repository.iu" />
            <argument>%sylius_inventory.backorders%</argument>
        </service>
        <service id="sylius_inventory.resolver" class="%sylius_inventory.resolver.class%">
            <argument type="service" id="sylius_inventory.manager.iu" />
            <argument>%sylius_inventory.backorders%</argument>
        </service>
    </services>

</container>
