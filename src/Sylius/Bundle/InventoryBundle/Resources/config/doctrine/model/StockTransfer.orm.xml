<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping">
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Sylius\Component\Inventory\Model\StockTransfer" table="sylius_stock_transfer">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <many-to-one target-entity="Sylius\Component\Inventory\Model\StockLocationInterface" field="source">
            <join-column name="source_location_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>

        <many-to-one target-entity="Sylius\Component\Inventory\Model\StockLocationInterface" field="destination">
            <join-column name="destination_location_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
    </mapped-superclass>

</doctrine-mapping>
