<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping">
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Sylius\Component\Inventory\Model\StockItem" table="sylius_stock_item">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO"/>
        </id>
        <field name="onHold" column="on_hold" type="integer"/>
        <field name="onHand" column="on_hand" type="integer"/>

        <many-to-one target-entity="Sylius\Component\Inventory\Model\StockLocationInterface" field="location">
            <join-column name="stock_location_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
        <many-to-one target-entity="Sylius\Component\Inventory\Model\StockableInterface" field="stockable" inversed-by="items">
            <join-column name="stockable_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>

    </mapped-superclass>

</doctrine-mapping>
