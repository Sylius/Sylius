{
    "name": "sylius/inventory-bundle",
    "type": "symfony-bundle",
    "description": "Flexible inventory management for Symfony2 applications.",
    "keywords": ["shop", "ecommerce", "stock", "inventory", "sylius"],
    "homepage": "http://sylius.org",
    "license": "MIT",
    "authors": [
        {
            "name":     "Paweł Jędrzejewski",
            "homepage": "http://pjedrzejewski.com"
        },
        {
            "name":     "Sylius project",
            "homepage": "http://sylius.org"
        },
        {
            "name":     "Community contributions",
            "homepage": "http://github.com/Sylius/Sylius/contributors"
        }
    ],
    "require": {
        "php": ">=5.3.3",

        "symfony/framework-bundle":        "~2.3",
        "stof/doctrine-extensions-bundle": "1.1.*",
        "sylius/resource-bundle":          "0.10.*@dev",
        "sylius/inventory":                "0.10.*@dev"
    },
    "require-dev": {
        "phpspec/phpspec": "~2.0",
        "symfony/form":    "~2.3",
        "twig/twig":       "~1.0"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": { "Sylius\\Bundle\\InventoryBundle\\": "" }
    },
    "target-dir": "Sylius/Bundle/InventoryBundle",
    "extra": {
        "branch-alias": {
            "dev-master": "0.10-dev"
        }
    }
}
