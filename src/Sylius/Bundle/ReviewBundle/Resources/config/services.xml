<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!--Forms-->
        <service id="sylius.form.type.review" class="Sylius\Bundle\ReviewBundle\Form\Type\ReviewType">
            <argument>%sylius.model.review.class%</argument>
            <tag name="form.type" alias="sylius_review" />
        </service>
        <service id="sylius.form.type.review_admin" class="Sylius\Bundle\ReviewBundle\Form\Type\ReviewAdminType">
            <argument>%sylius.model.review.class%</argument>
            <tag name="form.type" alias="sylius_review_admin" />
        </service>

        <!--Validators-->
        <service id="sylius.review.validator.unique_customer_email" class="Sylius\Bundle\ReviewBundle\Validator\Constraints\UniqueCustomerEmailValidator">
            <argument type="service" id="sylius.repository.customer" />
            <tag name="validator.constraint_validator" alias="unique_customer_email_validator" />
        </service>

        <!--Calculators-->
        <service id="sylius.review.calculator.average_rating" class="Sylius\Component\Review\Calculator\AverageRatingCalculator" />

        <!--Listeners-->
        <service id="sylius.listener.review_create" class="Sylius\Bundle\ReviewBundle\EventListener\ReviewCreateListener">
            <argument type="service" id="sylius.review.calculator.average_rating" />
            <argument type="service" id="sylius.context.customer" />
            <argument type="service" id="sylius.manager.product" />
            <tag name="kernel.event_listener" event="sylius.review.pre_create" method="controlReviewAuthor" />
            <tag name="kernel.event_listener" event="sylius.review.post_create" method="calculateProductAverageRating" />
        </service>
    </services>
</container>
