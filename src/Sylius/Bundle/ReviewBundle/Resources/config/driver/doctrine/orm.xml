<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius.repository.review.class">Sylius\Bundle\ReviewBundle\Doctrine\ORM\ReviewRepository</parameter>
        <parameter key="sylius.repository.guest_reviewer.class">Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository</parameter>
    </parameters>

    <services>
        <service id="sylius.manager.review" alias="doctrine.orm.entity_manager" />
        <service id="sylius.manager.guest_reviewer" alias="doctrine.orm.entity_manager" />

        <service id="sylius.repository.review" class="%sylius.repository.review.class%">
            <argument type="service" id="sylius.manager.review" />
            <argument type="service">
                <service
                    factory-service="sylius.manager.review"
                    factory-method="getClassMetadata"
                    class="Doctrine\ORM\Mapping\ClassMetadata"
                >
                    <argument>%sylius.model.review.class%</argument>
                </service>
            </argument>
        </service>

        <service id="sylius.repository.guest_reviewer" class="%sylius.repository.guest_reviewer.class%">
            <argument type="service" id="sylius.manager.guest_reviewer" />
            <argument type="service">
                <service
                        factory-service="sylius.manager.guest_reviewer"
                        factory-method="getClassMetadata"
                        class="Doctrine\ORM\Mapping\ClassMetadata"
                        >
                    <argument>%sylius.model.guest_reviewer.class%</argument>
                </service>
            </argument>
        </service>
    </services>

</container>
