{
    "name": "sylius/review-bundle",
    "type": "symfony-bundle",
    "description": "Review system for Symfony ecommerce applications.",
    "keywords": [
        "review",
        "shop",
        "webshop",
        "ecommerce",
        "sylius"
    ],
    "homepage": "https://sylius.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Paweł Jędrzejewski",
            "homepage": "https://pjedrzejewski.com"
        },
        {
            "name": "Mateusz Zalewski",
            "email": "mateusz.zalewski@lakion.com"
        },
        {
            "name": "Grzegorz Sadowski",
            "email": "grzegorz.sadowski@lakion.com"
        },
        {
            "name": "Daniel Richter",
            "email": "nexyz9@gmail.com"
        },
        {
            "name": "Sylius project",
            "homepage": "https://sylius.com"
        },
        {
            "name": "Community contributions",
            "homepage": "https://github.com/Sylius/Sylius/contributors"
        }
    ],
    "require": {
        "php": "^8.0",
        "stof/doctrine-extensions-bundle": "^1.4",
        "sylius/mailer-bundle": "^1.4",
        "sylius/resource-bundle": "^1.7",
        "sylius/review": "^1.6",
        "sylius/user-bundle": "^1.6",
        "symfony/framework-bundle": "^5.4"
    },
    "conflict": {
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "phpspec/phpspec": "^7.2",
        "phpunit/phpunit": "^8.5",
        "polishsymfonycommunity/symfony-mocker-container": "^1.0",
        "symfony/browser-kit": "^5.4",
        "symfony/dependency-injection": "^5.4",
        "symfony/form": "^5.4",
        "symfony/security-bundle": "^5.4",
        "symfony/swiftmailer-bundle": "^3.1",
        "symfony/validator": "^5.4"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.9-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Sylius\\Bundle\\ReviewBundle\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sylius\\Bundle\\ReviewBundle\\spec\\": "spec/"
        },
        "classmap": [
            "test/app/AppKernel.php"
        ]
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../*/*"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
