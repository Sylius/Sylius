{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Review:macros.html.twig' as review_macros %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.review.show'|trans }}</li>
    <li><a href="{{ path('sylius_backend_review_index') }}">Reviews</a></li>
    <li>{{ review.title }}</li>
    <li>Show</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <div class="actions-menu">
        {{ buttons.manage(path('sylius_backend_review_index'), 'sylius.review.manage'|trans) }}
        {{ buttons.edit(path('sylius_backend_review_update', {'id': review.id})) }}
        {{ buttons.delete(path('sylius_backend_review_delete', {'id': review.id})) }}
    </div>
    <h1><i class="icon-ellipsis-vertical"></i> Review Details</h1>
</div>

<table class="table table-bordered">
    <tbody>
        <tr>
            <td><strong>ID</strong></td>
            <td>{{ review.id }}</td>
        </tr>
        <tr>
            <td><strong>Product</strong></td>
            <td>{{ review.product.name }}</td>
        </tr>
        <tr>
            <td><strong>Title</strong></td>
            <td>{{ review.title }}</td>
        </tr>
        <tr>
            <td><strong>Comment</strong></td>
            <td>{{ review.comment }}</td>
        </tr>
        <tr>
            <td><strong>Rating</strong></td>
            <td><span class="label label-default">{{ review.rating }}</span></td>
        </tr>
        <tr>
            <td><strong>Moderation Status</strong></td>
            <td><span class="label label-{{ review_macros.moderation_label(review) }}">{{ review.status }}</span></td>
        </tr>
        <tr>
            <td><strong>Author</strong></td>
            <td>{{ review.author.email }}</td>
        </tr>
    </tbody>
</table>

{% if review.status == 'new' %}
    {{ review_macros.transition(review.id, 'accept', 'info', 'Accept', 'share') }}
    {{ review_macros.transition(review.id, 'reject', 'warning', 'Reject', 'remove') }}
{% endif %}

{% endblock %}
