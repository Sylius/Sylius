{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% from 'SyliusResourceBundle:Macros:actions.html.twig' import create %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.review'|trans }}</li>
    <li><a href="{{ path('sylius_backend_review_index') }}">Reviews</a></li>
    <li>New</li>
</ol>
{% endblock %}

{% block content %}
	<div class="page-header">
	    <h1><i class="icon-plus-sign"></i> New Review</h1>
	</div>

	{{ form_errors(form) }}

	<form action="{{ path('sylius_backend_review_create') }}" method="post" class="form-horizontal" {{ form_enctype(form) }} novalidate>
	    {% include 'SyliusWebBundle:Backend/Review:_form.html.twig' %}
	    {{ create() }}
	</form>
{% endblock %}
