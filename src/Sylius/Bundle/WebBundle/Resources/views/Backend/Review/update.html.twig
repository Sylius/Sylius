{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% from 'SyliusResourceBundle:Macros:actions.html.twig' import update %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.review'|trans }}</li>
    <li><a href="{{ path('sylius_backend_product_review_index') }}">{{ 'sylius.review.index'|trans }}</a></li>
    <li>{{ product_review.title }}</li>
    <li>{{ 'sylius.breadcrumb.edit'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <h1><i class="icon-pencil"></i> {{ 'sylius.review.editing'|trans }}</h1>
</div>

{{ form_errors(form) }}

<form action="{{ path('sylius_backend_product_review_update', {'id': product_review.id}) }}" method="post" class="form-horizontal" novalidate>
    <input type="hidden" name="_method" value="PUT">
    {% include 'SyliusWebBundle:Backend/Review:_form.html.twig' %}
    {{ update() }}
</form>
{% endblock %}
