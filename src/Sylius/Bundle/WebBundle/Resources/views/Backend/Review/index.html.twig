{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% from 'SyliusWebBundle:Backend/Macros:misc.html.twig' import pagination %}
{% from 'SyliusWebBundle:Backend/Review:macros.html.twig' import list %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.ui.reviews'|trans }}</li>
    <li>{{ 'sylius.ui.product_reviews'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <div class="actions-menu">
        {{ buttons.create(path('sylius_backend_product_review_create'), 'sylius.ui.new_review'|trans) }}
        {{ buttons.manage(path('sylius_backend_product_review_index'), 'sylius.ui.manage_reviews'|trans) }}
    </div>
    <h1><i class="icon-th"></i> {{ 'sylius.ui.product_reviews'|trans }}</h1>
</div>

{{ pagination(product_reviews) }}
{{ list(product_reviews) }}
{{ pagination(product_reviews) }}

{% endblock %}
