{% form_theme form 'SyliusWebBundle:Backend/Form:_filter.html.twig' %}

<form method="get" action="" class="form-inline form-filter">
{{ form_row(form.number) }}
{{ form_row(form.shippingAddress) }}
{{ form_row(form.createdAtFrom, {'attr': {'class': 'datepicker'}}) }}
{{ form_row(form.createdAtTo, {'attr': {'class': 'datepicker'}}) }}
<button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> {{ 'sylius.filter'|trans }}</button>
<a href="{{ path('sylius_backend_shipment_index') }}" class="btn btn-danger"><i class="fa fa-remove"></i> {{ 'sylius.cancel'|trans }}</a>
</form>
