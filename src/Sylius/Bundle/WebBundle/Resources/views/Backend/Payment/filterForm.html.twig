{% form_theme form 'SyliusWebBundle:Backend:filterForms.html.twig' %}

<form method="get" action="" class="form-inline form-filter">
<div class="row">
    <div class="col-xs-3">
        {{ form_row(form.number) }}
        {{ form_row(form.channel) }}
    </div>
    <div class="col-xs-3">
        {{ form_row(form.billingAddress) }}
    </div>
    <div class="col-xs-1">
        {{ form_row(form.createdAtFrom, {'attr': {'class': 'datepicker'}}) }}
    </div>
    <div class="col-xs-1">
        {{ form_row(form.createdAtTo, {'attr': {'class': 'datepicker'}}) }}
    </div>
    <div class="col-xs-4">
        <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-search"></i> {{ 'sylius.filter'|trans }}</button>
        <a href="{{ path('sylius_backend_shipment_index') }}" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i> {{ 'sylius.cancel'|trans }}</a>
    </div>
</div>
</form>
