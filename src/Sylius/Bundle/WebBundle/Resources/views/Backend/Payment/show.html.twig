{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}
{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:misc.html.twig' as misc %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.sales'|trans }}</li>
    <li><a href="{{ path('sylius_backend_payment_index') }}">{{ 'sylius.breadcrumb.payment.index'|trans }}</a></li>
    <li>{{ payment.method.name }} - {{ payment.amount|sylius_price(payment.currency) }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <h1><i class="glyphicon glyphicon-plane"></i> {{ 'sylius.payment.history_header'|trans }}</h1>
</div>

<div class="panel panel-default">
    <div class="panel-body">
        {{ buttons.manage(path('sylius_backend_payment_index'), 'sylius.payment.manage'|trans) }}
        {{ buttons.edit(path('sylius_backend_payment_update', {'id': payment.id}), 'sylius.payment.update'|trans) }}
        {{ buttons.delete(path('sylius_backend_payment_delete', {'id': payment.id})) }}
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th colspan="2">{{ 'sylius.payment.general_info'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><strong>{{ 'sylius.payment.created_at'|trans }}</strong></td>
                    <td>{{ payment.createdAt|date }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

{% include "SyliusWebBundle:Backend:_history_table.html.twig" %}

{% endblock %}
