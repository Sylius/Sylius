{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% from 'SyliusResourceBundle:Macros:actions.html.twig' import update %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.section.customer'|trans }}</li>
    <li><a href="{{ path('sylius_backend_customer_index') }}">{{ 'sylius.breadcrumb.customer.index'|trans }}</a></li>
    <li><a href="{{ path('sylius_backend_customer_show', {'id': customer.id}) }}">{{ customer.fullName }}</a></li>
    <li>{{ 'sylius.breadcrumb.edit'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <h1><i class="glyphicon glyphicon-pencil"></i> {{ 'sylius.customer.update_header'|trans|raw }}</h1>
</div>

<form action="{{ path('sylius_backend_customer_update', {'id': customer.id}) }}" method="post" class="form-horizontal" novalidate>
    <input type="hidden" name="_method" value="PUT">
    {% include 'SyliusWebBundle:Backend/Customer:_form.html.twig' %}
    {{ update() }}
</form>
{% endblock %}
