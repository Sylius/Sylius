{% macro list(customers) %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}
{% import 'SyliusWebBundle:Backend/Macros:misc.html.twig' as misc %}

{% if customers|length > 0 %}
<table id="customers" class="table">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('id', 'sylius.customer.id'|trans) }}</th>
            <th>{{ sylius_resource_sort('firstName', 'sylius.address.firstname'|trans) }}</th>
            <th>{{ sylius_resource_sort('lastName', 'sylius.address.lastname'|trans) }}</th>
            <th>{{ sylius_resource_sort('email', 'sylius.customer.email'|trans) }}</th>
            <th>{{ sylius_resource_sort('createdAt', 'sylius.customer.registration_date'|trans) }}</th>
            <th>{{ sylius_resource_sort('registered', 'sylius.customer.registered'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for customer in customers %}
        <tr id="{{ customer.id }}">
            <td>{{ customer.id }}</td>
            <td>{{ customer.firstName }}</td>
            <td>{{ customer.lastName }}</td>
            <td><a href="{{ path('sylius_backend_customer_show', {'id': customer.id}) }}">{{ customer.email }}</a></td>
            <td>{{ customer.createdAt|date('d-m-Y H:i') }}</td>
            <td>{{ misc.state_label(customer.registered) }}</td>
            <td>
                <div class="pull-right">
                    {% if customer.registered %}
                        {{ buttons.show(path('sylius_backend_user_show', {'id': customer.user.id}), 'sylius.customer.user_details'|trans) }}
                    {% endif %}
                    {{ buttons.show(path('sylius_backend_customer_show', {'id': customer.id})) }}
                    {{ buttons.edit(path('sylius_backend_customer_update', {'id': customer.id})) }}
                </div>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
    {{ alerts.info('sylius.customer.no_results'|trans) }}
{% endif %}

{% endmacro %}

