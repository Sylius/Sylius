{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.customers'|trans }}</li>
    <li><a href="{{ path('sylius_backend_customer_index') }}">{{ 'sylius.breadcrumb.customer.index'|trans }}</a></li>
    <li>{{ customer.fullName }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <div class="actions-menu">
        {% if customer.registered %}
            {{ buttons.show(path('sylius_backend_user_show', {'id': customer.user.id}), 'sylius.customer.user_details'|trans) }}
        {% endif %}
        {{ buttons.manage(path('sylius_backend_customer_index'), 'sylius.customer.manage'|trans) }}
        {{ buttons.edit(path('sylius_backend_customer_update', {'id': customer.id})) }}
    </div>
    <h1><i class="glyphicon glyphicon-info-sign"></i> {{ 'sylius.customer.show_header'|trans|raw }}</h1>
</div>

<div class="row">
    <div class="col-md-7">
        <table class="table table-bordered">
            <thead>
            <tr>
                <th colspan="2">{{ 'sylius.customer.general_info'|trans({'%customer%': customer.email}) }}</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td><strong>{{ 'sylius.customer.id'|trans }}</strong></td>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <td><strong>{{ 'sylius.customer.email'|trans }}</strong></td>
                <td>{{ customer.email }}</td>
            </tr>
            {% if customer.firstName %}
                <tr>
                    <td><strong>{{ 'sylius.customer.first_name'|trans }}</strong></td>
                    <td>{{ customer.firstName }}</td>
                </tr>
            {% endif %}
            {% if customer.lastName %}
                <tr>
                    <td><strong>{{ 'sylius.customer.last_name'|trans }}</strong></td>
                    <td>{{ customer.lastName }}</td>
                </tr>
            {% endif %}
            {% if customer.currency %}
                <tr>
                    <td><strong>{{ 'sylius.customer.currency'|trans }}</strong></td>
                    <td>{{ customer.currency }}</td>
                </tr>
            {% endif %}
            <tr>
                <td><strong>{{ 'sylius.customer.registered'|trans }}</strong></td>
                <td>
                    <span class="label label-{{ customer.registered ? 'success' : 'danger'}}">
                        {{ customer.registered ? 'sylius.yes'|trans : 'sylius.no'|trans }}
                    </span>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        {% render(url('sylius_backend_order_by_customer', app.request.query.all|merge({id: customer.id}) )) %}
    </div>
</div>

{% endblock %}
