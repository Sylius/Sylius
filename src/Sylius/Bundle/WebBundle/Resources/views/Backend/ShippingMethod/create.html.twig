{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% from 'SyliusWebBundle:Backend/Macros:actions.html.twig' import create %}

{% block javascripts %}
{{ parent() }}
{% javascripts output='assets/compiled/backend_shipping_method.js'
    '@SyliusShippingBundle/Resources/assets/js/prototype-handler.js'
    '@SyliusShippingBundle/Resources/assets/js/sylius-shipping-method.js'
%}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}

{% block content %}
<div class="page-header">
    <h1>{{ 'sylius.shipping_method.create_header'|trans|raw }}</h1>
</div>

{{ form_errors(form) }}

<form action="{{ path('sylius_backend_shipping_method_create') }}" method="post" class="form-horizontal" novalidate>
    {% include 'SyliusWebBundle:Backend/ShippingMethod:_form.html.twig' %}
    {{ create() }}
</form>
{% endblock %}
