{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusUiBundle::buttons.html.twig' as buttons %}
{% import 'SyliusUiBundle::pagination.html.twig' as pagination %}
{% from 'SyliusWebBundle:Backend/ShippingMethod:macros.html.twig' import list %}

{% block breadcrumb %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.configuration'|trans }}</li>
    <li>{{ 'sylius.breadcrumb.shipping_method.index'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <div class="actions-menu">
        {{ buttons.create(path('sylius_backend_shipping_method_create'), 'sylius.shipping_method.create'|trans) }}
        {{ buttons.manage(path('sylius_backend_shipping_category_index'), 'sylius.shipping_category.manage'|trans) }}
    </div>
    <h1><i class="fa fa-cog"></i> {{ 'sylius.shipping_method.index_header'|trans|raw }}</h1>
</div>

{{ pagination.standard(shipping_methods) }}
{{ list(shipping_methods) }}
{{ pagination.standard(shipping_methods) }}

{% endblock %}
