{% form_theme form 'SyliusWebBundle::forms.html.twig' %}

<fieldset>
    {{ form_row(form.name, {'attr': {'class': 'input-lg'}}) }}
    {{ form_row(form.nameEn, {'attr': {'class': 'input-lg', 'placeholder': "sylius.form.taxon.name_en.placeholder"|trans}}) }}
    {{ form_row(form.parent, {'attr': {'class': 'input-lg'} }) }}
    {{ form_row(form.permalink, {'attr': {'class': 'input-lg'} }) }}
    {{ form_row(form.file) }}
    <br>
    {{ form_row(form.description) }}
</fieldset>

{{ form_rest(form) }}
