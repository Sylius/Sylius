{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% set taxonomy = taxon.taxonomy %}

{% import 'SyliusUiBundle::page.html.twig' as page  %}

{% block breadcrumb %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.assortment'|trans }}</li>
    <li><a href="{{ path('sylius_backend_taxonomy_index') }}">{{ 'sylius.breadcrumb.taxonomy.index'|trans }}</a></li>
    <li><a href="{{ path('sylius_backend_taxonomy_show', {'id': taxon.taxonomy.id}) }}">{{ taxon.taxonomy.name }}</a></li>
    <li>{{ 'sylius.breadcrumb.new'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
{{ form_start(form, {'action': path('sylius_backend_taxon_create', {'taxonomyId': taxonomy.id}), 'method': 'POST', 'attr': {'class': 'form-horizontal'}}) }}

{{ page.header('taxon.create', 'plus-circle', 'SyliusUiBundle:Form/Actions:_create.html.twig') }}

{{ form_errors(form) }}
{% include 'SyliusWebBundle:Backend/Taxon:_form.html.twig' %}

{{ form_end(form) }}
{% endblock %}
