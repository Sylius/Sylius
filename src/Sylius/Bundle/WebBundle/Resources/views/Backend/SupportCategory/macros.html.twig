{% macro list(support_categories) %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

{% if support_categories|length > 0 %}
<table class="table table-hover">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('title', 'sylius.support_category.title'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for support_category in support_categories %}
        <tr id="{{ support_category.id }}">
            <td>{{ support_category.title }}</td>
            <td>
                <div class="pull-right">
                {{ buttons.edit(path('sylius_backend_support_category_update', {'id': support_category.id})) }}
                {{ buttons.delete(path('sylius_backend_support_category_delete', {'id': support_category.id})) }}
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.support_category.no_results'|trans) }}
{% endif %}

{% endmacro %}
