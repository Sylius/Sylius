{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% from 'SyliusUiBundle::forms.html.twig' import update %}

{% block breadcrumb %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.sales'|trans }}</li>
    <li><a href="{{ path('sylius_backend_page_index') }}">{{ 'sylius.breadcrumb.page.index'|trans }}</a></li>
    <li>{{ 'sylius.breadcrumb.edit'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <h1><i class="fa fa-pencil"></i> {{ 'sylius.page.update_header'|trans|raw }}</h1>
</div>

{{ form_errors(form) }}

<form action="{{ path('sylius_backend_page_update', {'id': page.id}) }}" method="post" class="form-horizontal" novalidate>
    <input type="hidden" name="_method" value="PUT">
    {% include 'SyliusWebBundle:Backend/Page:_form.html.twig' %}
    {{ update() }}
</form>
{% endblock %}
