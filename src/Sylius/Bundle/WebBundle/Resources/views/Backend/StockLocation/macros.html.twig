{% macro list(stock_locations) %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

{% if stock_locations|length > 0 %}
<table class="table table-hover">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('name', 'sylius.stock_location.name'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for location in stock_locations %}
        <tr id="{{ location.id }}">
            <td>{{ location.name }}</td>
            <td>
                <div class="pull-right">
                {{ buttons.edit(path('sylius_backend_stock_location_update', {'id': location.id})) }}
                {{ buttons.delete(path('sylius_backend_stock_location_delete', {'id': location.id})) }}
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.stock_location.no_results'|trans) }}
{% endif %}

{% endmacro %}
