{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% from 'SyliusWebBundle:Backend/Macros:actions.html.twig' import create %}

{% block javascripts %}
{{ parent() }}
{% javascripts
    '@SyliusShippingBundle/Resources/assets/js/prototype-handler.js'
    '@SyliusReportBundle/Resources/assets/js/sylius-report.js'
%}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}

{% block content %}
<div class="page-header">
    <h1>{{ 'sylius.report.create_header'|trans|raw }}</h1>
</div>

<form action="{{ path('sylius_backend_report_create') }}" method="post" class="form-horizontal" novalidate>
    {% include 'SyliusWebBundle:Backend/Report:_form.html.twig' %}
    {{ create() }}
</form>
{% endblock %}
