{% macro list(reports) %}

{% import 'SyliusWebBundle:Backend/Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

{% if reports|length > 0 %}
<table class="table table-bordered">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('id', 'sylius.report.id'|trans) }}</th>
            <th>{{ sylius_resource_sort('name', 'sylius.report.name'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for report in reports %}
        <tr>
            <td>{{ report.id }}</td>
            <td>{{ report.name }}</td>
            <td>
                <div class="pull-right">
                {{ buttons.show(path('sylius_backend_report_show', {'id': report.id})) }}
                {{ buttons.edit(path('sylius_backend_report_update', {'id': report.id})) }}
                {{ buttons.delete(path('sylius_backend_report_delete', {'id': report.id})) }}
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.report.no_results'|trans) }}
{% endif %}

{% endmacro %}

{% macro configuration(configurable) %}

<table class="table table-bordered table-condensed">
    <thead>
        <tr>
            <th>{{ 'sylius.report.configurable_type'|trans }}</th>
            {% for k, v in configurable.configuration %}
                <th>{{ k|replace('_', ' ') }}</th>
            {% endfor %}
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ configurable.type|capitalize|replace('_', ' ') }}</td>
            {% for k, v in configurable.configuration %}
                <td>{{ v }}</td>
            {% endfor %}
        </tr>
    </tbody>
</table>

{% endmacro %}
