{% macro list(contact_topics) %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

{% if contact_topics|length > 0 %}
<table class="table table-hover">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('title', 'sylius.ui.title'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for contact_topic in contact_topics %}
        <tr id="{{ contact_topic.id }}">
            <td>{{ contact_topic.title }}</td>
            <td>
                <div class="pull-right">
                {{ buttons.edit(path('sylius_backend_contact_topic_update', {'id': contact_topic.id})) }}
                {{ buttons.delete(path('sylius_backend_contact_topic_delete', {'id': contact_topic.id})) }}
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.ui.there_are_no_contact_topics_to_display'|trans) }}
{% endif %}

{% endmacro %}
