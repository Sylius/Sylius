{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% from 'SyliusWebBundle:Backend/Macros:misc.html.twig' import pagination %}
{% from 'SyliusWebBundle:Backend/Property:macros.html.twig' import list %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.assortment'|trans }}</li>
    <li>{{ 'sylius.breadcrumb.property.index'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <div class="actions-menu">
        {{ buttons.create(path('sylius_backend_property_create'), 'sylius.property.create'|trans) }}
        {{ buttons.manage(path('sylius_backend_option_index'), 'sylius.option.manage'|trans) }}
    </div>
    <h1><i class="glyphicon glyphicon-list-alt"></i> {{ 'sylius.property.index_header'|trans|raw }}</h1>
</div>

{{ pagination(properties) }}
{{ list(properties) }}
{{ pagination(properties) }}

{% endblock %}
