{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% from 'SyliusUiBundle::forms.html.twig' import create %}

{% block breadcrumb %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.configuration'|trans }}</li>
    <li><a href="{{ path('sylius_backend_block_index') }}">{{ 'sylius.breadcrumb.block.index'|trans }}</a></li>
    <li>{{ 'sylius.breadcrumb.new'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <h1><i class="fa fa-plus-sign"></i> {{ 'sylius.block.create_header'|trans|raw }}</h1>
</div>

{{ form_errors(form) }}

<form action="{{ path('sylius_backend_block_create') }}" method="post" class="form-horizontal" novalidate>
    {% include 'SyliusWebBundle:Backend/Block:_form.html.twig' %}
    {{ create() }}
</form>
{% endblock %}
