{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% from 'SyliusWebBundle:Backend/Macros:misc.html.twig' import pagination %}
{% from 'SyliusWebBundle:Backend/Content/Block/Simple:macros.html.twig' import list %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.content'|trans }}</li>
    <li><a href="{{ path('sylius_backend_block_overview') }}">{{ 'sylius.breadcrumb.block.index'|trans }}</a></li>
    <li>{{ 'sylius.breadcrumb.block.simple.index'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <div class="actions-menu">
        {{ buttons.create(path('sylius_backend_simple_block_create'), 'sylius.block.simple.create'|trans) }}
    </div>
    <h1><i class="glyphicon glyphicon-th-large"></i> {{ 'sylius.block.simple.index_header'|trans|raw }}</h1>
</div>

{{ pagination(simple_blocks) }}
{{ list(simple_blocks) }}
{{ pagination(simple_blocks) }}

{% endblock %}
