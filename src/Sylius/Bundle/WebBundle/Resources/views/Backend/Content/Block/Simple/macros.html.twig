{% macro list(blocks) %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}
{% import 'SyliusWebBundle:Backend/Macros:misc.html.twig' as misc %}

{% if blocks|length > 0 %}
    <table class="table">
        <thead>
            <tr>
                <th>{{ 'sylius.block.id'|trans }}</th>
                <th>{{ sylius_resource_sort('title', 'sylius.block.title'|trans) }}</th>
                <th>{{ sylius_resource_sort('updatedAt', 'sylius.block.updated_at'|trans) }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for block in blocks %}
            <tr id="{{ block.id }}">
                <td><i>{{ block.id }}</i></td>
                <td>{{ block.title }}</td>
                <td>{{ block.updatedAt|date }}</td>
                <td>
                    <div class="pull-right">
                    {{ buttons.edit(path('sylius_backend_simple_block_update', {'id': block.id})) }}
                    {{ buttons.delete(path('sylius_backend_simple_block_delete', {'id': block.id})) }}
                   </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
{{ alerts.info('sylius.block.no_results'|trans) }}
{% endif %}

{% endmacro %}
