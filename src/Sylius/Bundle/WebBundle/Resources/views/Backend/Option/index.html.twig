{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% from 'SyliusWebBundle:Backend/Macros:misc.html.twig' import pagination %}
{% from 'SyliusWebBundle:Backend/Option:macros.html.twig' import list %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.assortment'|trans }}</li>
    <li>{{ 'sylius.breadcrumb.option.index'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <div class="actions-menu">
        {{ buttons.create(path('sylius_backend_option_create'), 'sylius.option.create'|trans) }}
        {{ buttons.manage(path('sylius_backend_property_index'), 'sylius.property.manage'|trans) }}
    </div>
    <h1><i class="glyphicon glyphicon-th"></i> {{ 'sylius.option.index_header'|trans|raw }}</h1>
</div>

{{ pagination(options) }}
{{ list(options) }}
{{ pagination(options) }}

{% endblock %}
