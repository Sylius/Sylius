{% macro list(users) %}

{% import 'SyliusUiBundle::alerts.html.twig' as alerts %}
{% import 'SyliusUiBundle::buttons.html.twig' as buttons %}
{% import 'SyliusUiBundle::labels.html.twig' as labels %}

{% if users|length > 0 %}
<table id="users" class="table">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('id', 'sylius.user.id'|trans) }}</th>
            <th>{{ sylius_resource_sort('firstName', 'sylius.address.firstname'|trans) }}</th>
            <th>{{ sylius_resource_sort('lastName', 'sylius.address.lastname'|trans) }}</th>
            <th>{{ sylius_resource_sort('email', 'sylius.user.email'|trans) }}</th>
            <th>{{ sylius_resource_sort('createdAt', 'sylius.user.registration_date'|trans) }}</th>
            <th>{{ sylius_resource_sort('enabled', 'sylius.user.enabled'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr id="{{ user.id }}" {% if user.deleted %} class="danger"{% endif %}>
            <td>{{ user.id }}</td>
            <td>{{ user.firstName }}</td>
            <td>{{ user.lastName }}</td>
            <td><a href="{{ path('sylius_backend_user_update', {'id': user.id}) }}">{{ user.email }}</a></td>
            <td>{{ user.createdAt|date('d-m-Y H:i') }}</td>
            <td>
                {{ labels.boolean(user.enabled) }}
            </td>
            <td>
                <div class="pull-right">
                    {% if not user.deleted %}
                    {{ buttons.edit(path('sylius_backend_user_update', {'id': user.id})) }}
                    {{ buttons.delete(path('sylius_backend_user_delete', {'id': user.id}), null, user.id is sameas(app.user.id)) }}
                    {% endif %}
                </div>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.user.no_results'|trans) }}
{% endif %}

{% endmacro %}

{% macro simple_list(users) %}

{% import 'SyliusUiBundle::alerts.html.twig' as alerts %}
{% import 'SyliusUiBundle::buttons.html.twig' as buttons %}
{% import 'SyliusUiBundle::labels.html.twig' as labels %}

{% if users|length > 0 %}
<table id="users" class="table table-inversed">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('email', 'sylius.user.email'|trans) }}</th>
            <th>{{ sylius_resource_sort('enabled', 'sylius.user.enabled'|trans) }}</th>
            <th class="text-right">{{ sylius_resource_sort('createdAt', 'sylius.user.registration_date'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr id="{{ user.id }}" {% if user.deleted %} class="danger"{% endif %}>
            <td>
                {{ user.fullname }}<br>
                <a href="{{ path('sylius_backend_user_update', {'id': user.id}) }}">
                    {{ user.email }}
                </a>
                </td>
            <td>
                {{ labels.boolean(user.enabled) }}
            </td>
            <td class="text-right">
                {{ user.createdAt|date }}
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.user.no_results'|trans) }}
{% endif %}

{% endmacro %}
