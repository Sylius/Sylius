{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusUiBundle::page.html.twig' as page %}

{% set product = product_variant.product %}

{% block breadcrumb %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.assortment'|trans }}</li>
    <li><a href="{{ path('sylius_backend_product_index') }}">{{ 'sylius.breadcrumb.product.index'|trans }}</a></li>
    <li><a href="{{ path('sylius_backend_product_update', {'id': product.id}) }}">{{ product.name }}</a></li>
    <li>{{ 'sylius.breadcrumb.new'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
{{ form_start(form, {'action': path('sylius_backend_product_variant_create', {'productId': product.id}), 'method': 'POST', 'attr': {'class': 'form-horizontal'}}) }}

{{ page.header('product_variant.create', 'plus-sign', 'SyliusUiBundle:Form/Actions:_create.html.twig') }}

{% include 'SyliusWebBundle:Backend/ProductVariant:_form.html.twig' %}

{{ form_end(form) }}
{% endblock %}
