{% macro list(zones) %}

{% import 'SyliusWebBundle:Backend/Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

{% if zones|length > 0 %}
<table class="table table-bordered">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('id', '#id') }}</th>
            <th>{{ sylius_resource_sort('name') }}</th>
            <th>{{ sylius_resource_sort('type') }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for zone in zones %}
        <tr>
            <td>{{ zone.id }}</td>
            <td>{{ zone.name }}</td>
            <td>{{ zone.type }}</td>
            <td>
                <div class="pull-right">
                {{ buttons.show(path('sylius_backend_zone_show', {'id': zone.id})) }}
                {{ buttons.edit(path('sylius_backend_zone_update', {'id': zone.id})) }}
                {{ buttons.delete(path('sylius_backend_zone_delete', {'id': zone.id})) }}
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.zone.no_results'|trans) }}
{% endif %}

{% endmacro %}
