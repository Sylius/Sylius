{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusUiBundle::page.html.twig' as page %}

{% block javascripts %}
    {% javascripts output='assets/compiled/backend_addressing_zone.js'
        'bundles/syliusaddressing/js/sylius-addressing-zone.js'
    %}
        {{ parent() }}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block breadcrumb %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.configuration'|trans }}</li>
    <li><a href="{{ path('sylius_backend_zone_index') }}">{{ 'sylius.breadcrumb.zone.index'|trans }}</a></li>
    <li>{{ 'sylius.breadcrumb.new'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
{{ form_start(form, {'action': path('sylius_backend_zone_create'), 'method': 'POST', 'attr': {'class': 'form-horizontal'}}) }}

{{ page.header('zone.create', 'plus-circle', 'SyliusUiBundle:Form/Actions:_create.html.twig') }}

{% include 'SyliusWebBundle:Backend/Zone:_form.html.twig' %}

{{ form_end(form) }}
{% endblock %}
