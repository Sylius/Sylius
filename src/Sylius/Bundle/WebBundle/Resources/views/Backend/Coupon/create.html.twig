{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% set promotion = promotion_coupon.promotion %}

{% from 'SyliusWebBundle:Backend/Macros:actions.html.twig' import create %}

{% block content %}
<div class="page-header">
    <h1><i class="icon-plus-sign"></i> {{ 'sylius.promotion_coupon.create_header'|trans|raw }}</h1>
</div>

{{ form_errors(form) }}

<form action="{{ path('sylius_backend_promotion_coupon_create', {'promotionId': promotion.id}) }}" method="post" class="form-horizontal" novalidate>
    {% include 'SyliusWebBundle:Backend/Coupon:_form.html.twig' %}
    {{ create() }}
</form>
{% endblock %}
