{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% set promotionId = app.request.get('promotionId') %}

{% import 'SyliusWebBundle:Backend/Macros:buttons.html.twig' as buttons %}
{% from 'SyliusWebBundle:Backend/Macros:misc.html.twig' import pagination %}
{% from 'SyliusWebBundle:Backend/Coupon:macros.html.twig' import list %}

{% block content %}
<div class="page-header">
    <h1>{{ 'sylius.promotion.index_header'|trans|raw }}</h1>
</div>

<div class="well">
    {{ buttons.show(path('sylius_backend_promotion_show', {'id': promotionId}), 'sylius.show'|trans) }}
    {{ buttons.create(path('sylius_backend_promotion_coupon_create', {'promotionId': promotionId}), 'sylius.promotion_coupon.create'|trans) }}
</div>

{{ pagination(promotion_coupons) }}
{{ list(promotion_coupons) }}
{{ pagination(promotion_coupons) }}

{% endblock %}
