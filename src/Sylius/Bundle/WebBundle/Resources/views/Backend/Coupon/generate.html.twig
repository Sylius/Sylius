{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.sales'|trans }}</li>
    <li><a href="{{ path('sylius_backend_promotion_index') }}">{{ 'sylius.breadcrumb.promotion.index'|trans }}</a></li>
    <li><a href="{{ path('sylius_backend_promotion_show', {'id': promotion.id}) }}">{{ promotion.name }}</a></li>
    <li><a href="{{ path('sylius_backend_promotion_coupon_index', {'promotionId': promotion.id}) }}">{{ 'sylius.breadcrumb.promotion_coupon.index'|trans }}</a></li>
    <li>{{ 'sylius.breadcrumb.generate'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <h1><i class="glyphicon glyphicon-random"></i> {{ 'sylius.promotion_coupon.generate_header'|trans|raw }}</h1>
</div>

{{ form_errors(form) }}

<form action="{{ path('sylius_backend_promotion_coupon_generate', {'promotionId': promotion.id}) }}" method="post" class="form-horizontal" novalidate>
    {% include 'SyliusWebBundle:Backend/Coupon:_generateForm.html.twig' %}
    <div class="form-actions">
        <button type="submit" class="btn btn-primary btn-lg"><i class="glyphicon glyphicon-random"></i> {{ 'sylius.generate'|trans }}</button>
        <a href="{{ app.request.headers.get('referer') }}" class="btn btn-lg"><i class="glyphicon glyphicon-remove"></i> {{ 'sylius.cancel'|trans }}</a>
    </div>
</form>
{% endblock %}
