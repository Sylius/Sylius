<address>
    <strong>{{ address.firstName }} {{ address.lastName }}</strong><br/>
    {% if address.company %}
        {{ address.company }}<br/>
    {% endif %}
    {{ address.street }}<br/>
    {{ address.city }}
    {% if address.province %}
        ({{ address.province }})
    {% endif %}
    <br/>
    {{ address.country|upper }} {{ address.postcode }}
</address>
