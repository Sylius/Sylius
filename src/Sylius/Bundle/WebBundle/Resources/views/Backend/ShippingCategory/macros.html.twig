{% macro list(shipping_categories) %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

{% if shipping_categories|length > 0 %}
    <table class="table">
        <thead>
        <tr>
            <th>{{ sylius_resource_sort('id', 'sylius.ui.id'|trans) }}</th>
            <th>{{ sylius_resource_sort('code', 'sylius.ui.code'|trans) }}</th>
            <th>{{ sylius_resource_sort('name', 'sylius.ui.name'|trans) }}</th>
            <th>{{ sylius_resource_sort('updatedAt', 'sylius.ui.last_update'|trans) }}</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for shipping_category in shipping_categories %}
            <tr id="{{ shipping_category.id }}">
                <td>{{ shipping_category.id }}</td>
                <td>{{ shipping_category.code }}</td>
                <td>{{ shipping_category.name }}</td>
                <td>{{ shipping_category.updatedAt|date }}</td>
                <td>
                    <div class="pull-right">
                        {{ buttons.edit(path('sylius_backend_shipping_category_update', {'id': shipping_category.id})) }}
                        {{ buttons.delete(path('sylius_backend_shipping_category_delete', {'id': shipping_category.id})) }}
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    {{ alerts.info('sylius.ui.there_are_no_shipping_categories_configured'|trans) }}
{% endif %}
{% endmacro %}
