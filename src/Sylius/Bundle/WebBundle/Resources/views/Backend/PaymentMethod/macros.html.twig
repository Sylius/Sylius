{% macro list(payment_methods) %}

{% import 'SyliusUiBundle::alerts.html.twig' as alerts %}
{% import 'SyliusUiBundle::buttons.html.twig' as buttons %}
{% import 'SyliusUiBundle::labels.html.twig' as labels %}

{% if payment_methods|length > 0 %}
<table class="table">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('id', 'sylius.payment_method.id'|trans) }}</th>
            <th>{{ sylius_resource_sort('name', 'sylius.payment_method.name'|trans) }}</th>
            <th>{{ sylius_resource_sort('gateway', 'sylius.payment_method.gateway'|trans) }}</th>
            <th>{{ sylius_resource_sort('enabled', 'sylius.payment_method.enabled'|trans) }}</th>
            <th>{{ sylius_resource_sort('updatedAt', 'sylius.payment_method.updated_at'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for payment_method in payment_methods %}
        <tr id="{{ payment_method.id }}">
            <td>{{ payment_method.id }}</td>
            <td>
                <a href="{{ path('sylius_backend_payment_method_update', {'id': payment_method.id}) }}"><strong>{{ payment_method.name }}</strong></a>
                <p>{{ payment_method.description }}</p>
            </td>
            <td>{{ payment_method.gateway|humanize }}</td>
            <td>
                {{ labels.status(payment_method.enabled) }}
            </td>
            <td>{{ payment_method.updatedAt|date }}</td>
            <td>
                <div class="pull-right">
                {{ buttons.edit(path('sylius_backend_payment_method_update', {'id': payment_method.id})) }}
                {{ buttons.delete(path('sylius_backend_payment_method_delete', {'id': payment_method.id})) }}
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.payment_method.no_results'|trans) }}
{% endif %}

{% endmacro %}
