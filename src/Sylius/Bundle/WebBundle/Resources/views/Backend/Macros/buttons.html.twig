{% macro show(url, message) %}
<a href="{{ url }}" class="btn">
   <i class="icon-book"></i>
    {{ message is empty ? 'sylius.show'|trans : message }}
</a>
{% endmacro %}

{% macro create(url, message) %}
<a href="{{ url }}" class="btn btn-primary">
    <i class="icon-plus-sign"></i>
    {{ message is empty ? 'sylius.create'|trans : message }}
</a>
{% endmacro %}

{% macro edit(url, message) %}
<a href="{{ url }}" class="btn">
    <i class="icon-pencil"></i>
    {{ message is empty ? 'sylius.edit'|trans : message }}
</a>
{% endmacro %}

{% macro delete(url, message, confirmationMessage) %}
<form action="{{ url }}" method="post" class="delete-action-form">
    <input type="hidden" name="_method" value="DELETE">
    <button class="btn btn-danger"
            data-toggle="confirmation"
            data-message="{{ confirmationMessage is empty ? 'sylius.confirmation.message'|trans : confirmationMessage }}"
            data-target="#confirmationModalContainer">
        <i class="icon-trash"></i>
        {{ message is empty ? 'sylius.delete'|trans : message }}
    </button>
</form>
{% endmacro %}

{% macro manage(url, message) %}
<a href="{{ url }}" class="btn btn-success">
    <i class="icon-pencil"></i>
    {{ message is empty ? 'sylius.manage'|trans : message }}
</a>
{% endmacro %}
