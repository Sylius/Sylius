{% macro list(locales) %}

{% import 'SyliusUiBundle::alerts.html.twig' as alerts %}
{% import 'SyliusUiBundle::buttons.html.twig' as buttons %}
{% import 'SyliusUiBundle::labels.html.twig' as labels %}

{% if locales|length > 0 %}
<table class="table">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('code', 'sylius.locale.code'|trans) }}</th>
            <th>{{ sylius_resource_sort('enabled', 'sylius.locale.enabled'|trans) }}</th>
            <th>{{ sylius_resource_sort('updatedAt', 'sylius.locale.updated_at'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for locale in locales %}
        <tr id="{{ locale.id }}">
            <td><img class="flag flag-{{ locale.code|slice(0, 2)}}" /> <i>{{ locale.code }}</i></td>
            <td>
                {{ labels.status(locale.enabled) }}
            </td>
            <td>{{ locale.updatedAt|date }}</td>
            <td>
                <div class="pull-right">
                {{ buttons.edit(path('sylius_backend_locale_update', {'id': locale.id})) }}
                {{ buttons.delete(path('sylius_backend_locale_delete', {'id': locale.id})) }}
               </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.locale.no_results'|trans) }}
{% endif %}

{% endmacro %}
