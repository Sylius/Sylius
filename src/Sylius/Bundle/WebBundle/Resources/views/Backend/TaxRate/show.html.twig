{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}
{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.configuration'|trans }}</li>
    <li><a href="{{ path('sylius_backend_tax_rate_index') }}">{{ 'sylius.breadcrumb.tax_rate.index'|trans }}</a></li>
    <li>{{ tax_rate.name }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <div class="actions-menu">
        {{ buttons.manage(path('sylius_backend_tax_rate_index'), 'sylius.tax_rate.manage'|trans) }}
        {{ buttons.edit(path('sylius_backend_tax_rate_update', {'id': tax_rate.id})) }}
        {{ buttons.delete(path('sylius_backend_tax_rate_delete', {'id': tax_rate.id}), null, null, false) }}
    </div>

    <h1><i class="glyphicon glyphicon-cog"></i> {{ 'sylius.tax_rate.show_header'|trans|raw }}</h1>
</div>

<table class="table table-bordered table-condensed">
    <thead>
        <tr>
            <th>{{ 'sylius.tax_rate.category'|trans }}</th>
            <th>{{ 'sylius.tax_rate.name'|trans }}</th>
            <th>{{ 'sylius.tax_rate.zone'|trans }}</th>
            <th>{{ 'sylius.tax_rate.amount'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ tax_rate.category }}</td>
            <td>{{ tax_rate.name }}</td>
            <td>{{ tax_rate.zone }}</td>
            <td>{{ tax_rate.amountAsPercentage }}%</td>
        </tr>
    </tbody>
</table>
{% endblock %}
