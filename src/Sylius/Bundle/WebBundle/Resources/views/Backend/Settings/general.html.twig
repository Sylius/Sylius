{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusUiBundle::page.html.twig' as page %}

{% block breadcrumb %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.configuration'|trans }}</li>
    <li>{{ 'sylius.breadcrumb.general_settings'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
{{ form_start(form, {'action': path('sylius_backend_general_settings'), 'method': 'POST', 'attr': {'class': 'form-horizontal'}}) }}

{{ page.header('settings.general', 'cog', 'SyliusUiBundle:Form/Actions:_update.html.twig') }}

{% include 'SyliusWebBundle:Backend/Settings:_nav.html.twig' %}

{{ form_errors(form) }}

<div class="box box-form">
{{ form_row(form.title, {'attr': {'class': 'input-lg'}}) }}
{{ form_row(form.meta_keywords, {'attr': {'class': 'input-lg'}}) }}
{{ form_row(form.meta_description, {'attr': {'class': 'input-lg'}}) }}
{{ form_rest(form) }}
</div>

{{ form_end(form) }}
{% endblock %}
