{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.configuration'|trans }}</li>
    <li><a href="{{ path('sylius_backend_country_index') }}">{{ 'sylius.breadcrumb.country.index'|trans }}</a></li>
    <li>{{ country.code|sylius_country_name }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <div class="actions-menu">
        {{ buttons.manage(path('sylius_backend_country_index'), 'sylius.country.manage'|trans) }}
        {{ buttons.edit(path('sylius_backend_country_update', {'id': country.id})) }}
    </div>
    <h1><i class="glyphicon glyphicon-flag"></i> {{ 'sylius.country.show_header'|trans|raw }}</h1>
</div>

<table class="table table-bordered table-condensed">
    <thead>
        <tr>
            <th>{{ 'sylius.country.name'|trans }}</th>
            <th>{{ 'sylius.ui.code'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ country.code|sylius_country_name }}</td>
            <td>{{ country.code }}</td>
        </tr>
    </tbody>
</table>
{% if country.hasAdministrativeAreas %}
    <div class="page-header">
        <h1>{{ 'sylius.administrative_area.administrative_areas'|trans|raw }}</h1>
    </div>
    <table id="administrative-areas" class="table table-bordered table-condensed">
        <thead>
            <tr>
                <th>{{ 'sylius.form.administrative_area.name'|trans }}</th>
                <th>{{ 'sylius.ui.code'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for administrativeArea in country.administrativeAreas %}
                <tr id="{{ administrativeArea.id }}">
                    <td>{{ administrativeArea.name }}</td>
                    <td>{{ administrativeArea.code }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endif %}
{% endblock %}
