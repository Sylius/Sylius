{% macro list(import_jobs) %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}
{% import 'SyliusWebBundle:Backend/Macros:misc.html.twig' as misc %}

{% if import_jobs|length > 0 %}
<table class="table">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('id', 'sylius.import_job.id'|trans) }}</th>
            <th>{{ sylius_resource_sort('importProfile', 'sylius.import_job.import_profile_id'|trans) }}</th>
            <th>{{ sylius_resource_sort('status', 'sylius.import_job.status'|trans) }}</th>
            <th>{{ sylius_resource_sort('startTime', 'sylius.import_job.startTime'|trans) }}</th>
            <th>{{ sylius_resource_sort('endTime', 'sylius.import_job.endTime'|trans) }}</th>
            <th>{{ sylius_resource_sort('createdAt', 'sylius.import_job.createdAt'|trans) }}</th>
            <th>{{ sylius_resource_sort('updatedAt', 'sylius.import_job.updatedAt'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for import_job in import_jobs %}
        <tr id="{{ import_job.id }}">
            <td>{{ import_job.id }}</td>
            <td>{{ import_job.import_profile_id }}</td>
            <td>{{ import_job.status }}</td>
            <td>{{ import_job.startTime|date }}</td>
            <td>{{ import_job.endTime|date }}</td>
            <td>{{ import_job.createdAt|date }}</td>
            <td>{{ import_job.updatedAt|date }}</td>
            <div class="pull-right">
                {{ buttons.show(path('sylius_backend_import_job_show', {'id': import_job.id})) }}
            </div>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.import_profile.no_results'|trans) }}
{% endif %}

{% endmacro %}
