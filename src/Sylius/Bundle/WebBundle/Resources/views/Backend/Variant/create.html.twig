{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% from 'SyliusWebBundle:Backend/Macros:actions.html.twig' import create %}

{% block content %}
<div class="page-header">
    <h1><i class="icon-plus-sign"></i> {{ 'sylius.variant.create_header'|trans|raw }}</h1>
</div>

{{ form_errors(form) }}

<form action="{{ path('sylius_backend_variant_create', {'productId': variant.product.id}) }}" method="post" class="form-horizontal" {{ form_enctype(form) }} novalidate>
    {% include 'SyliusWebBundle:Backend/Variant:_form.html.twig' %}
    {{ create() }}
</form>
{% endblock %}
