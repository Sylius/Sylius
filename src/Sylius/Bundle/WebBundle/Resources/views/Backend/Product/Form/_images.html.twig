<div class="tab-pane" id="images">
    <div id="sylius-assortment-product-images" data-toggle="modal-gallery" data-target="#modal-gallery" class="collection-container" data-prototype="{{ form_widget(form.masterVariant.images.vars.prototype)|e }}">
        {% set images = product.images %}

        {% for image in product.images %}
        <div class="sylius-assortment-variant-images-image">
            <div class="control-group">
                <div class="controls">
                    {% if image.path|length > 0 %}
                    <a href="{{ image.path|imagine_filter('sylius_gallery') }}"  data-gallery="gallery">
                        <img class="img-polaroid" src="{{ image.path|imagine_filter('sylius_90x60') }}" alt="" />
                    </a>
                    {% endif %}
                    &nbsp;
                    {{ form_widget(form.masterVariant.images[loop.index0].file) }}
                    &nbsp;
                    <a href="#" class="btn btn-danger" data-collection-button="delete" data-prototype="sylius-assortment-product-images" data-collection="sylius-assortment-product-images"><i class="icon-trash"></i>&nbsp;{{ 'sylius.variant.delete_image'|trans }}</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

    <div class="control-group">
        <div class="controls">
            <a href="#" class="btn btn-success" data-collection-button="add" data-prototype="sylius-assortment-product-images" data-collection="sylius-assortment-product-images">{{ 'sylius.variant.add_image'|trans }}</a>
        </div>
    </div>
</div>
