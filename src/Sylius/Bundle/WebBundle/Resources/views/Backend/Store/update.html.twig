{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% from 'SyliusResourceBundle:Macros:actions.html.twig' import update %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.configuration'|trans }}</li>
    <li><a href="{{ path('sylius_backend_store_index') }}">{{ 'sylius.breadcrumb.store.index'|trans }}</a></li>
    <li><a href="{{ path('sylius_backend_store_show', {'id': store.id}) }}">{{ store.name }}</a></li>
    <li>{{ 'sylius.breadcrumb.edit'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <h1><i class="glyphicon glyphicon-pencil"></i> {{ 'sylius.store.update_header'|trans|raw }}</h1>
</div>

{{ form_errors(form) }}

<form action="{{ path('sylius_backend_store_update', {'id': store.id}) }}" method="post" class="form-horizontal">
    <input type="hidden" name="_method" value="PUT">
    {% include 'SyliusWebBundle:Backend/Store:_form.html.twig' %}
    {{ update() }}
</form>
{% endblock %}
