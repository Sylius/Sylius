{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% from 'SyliusWebBundle:Backend/SupportTicket:macros.html.twig' import list %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.support'|trans }}</li>
    <li>{{ 'sylius.breadcrumb.support_ticket.index'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <div class="actions-menu">
        {{ buttons.create(path('sylius_backend_support_ticket_create'), 'sylius.support_ticket.create'|trans) }}
    </div>
    <h1><i class="fa fa-comments"></i> {{ 'sylius.support_ticket.index_header'|trans|raw }}</h1>
</div>

{{ list(support_tickets) }}

{% endblock %}
