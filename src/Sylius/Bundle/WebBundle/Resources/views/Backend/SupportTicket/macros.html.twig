{% macro list(support_tickets) %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

{% if support_tickets|length > 0 %}
<table class="table table-hover">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('firstName', 'sylius.support_ticket.firstName'|trans) }}</th>
            <th>{{ sylius_resource_sort('lastName', 'sylius.support_ticket.lastName'|trans) }}</th>
            <th>{{ sylius_resource_sort('email', 'sylius.support_ticket.email'|trans) }}</th>
            <th>{{ sylius_resource_sort('category', 'sylius.support_ticket.category'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for support_ticket in support_tickets %}
        <tr id="{{ support_ticket.id }}">
            <td>{{ support_ticket.firstName }}</td>
            <td>{{ support_ticket.lastName }}</td>
            <td>{{ support_ticket.email }}</td>
            <td>{{ support_ticket.category }}</td>
            <td>
                <div class="pull-right">
                {{ buttons.show(path('sylius_backend_support_ticket_show', {'id': support_ticket.id})) }}
                {{ buttons.edit(path('sylius_backend_support_ticket_update', {'id': support_ticket.id})) }}
                {{ buttons.delete(path('sylius_backend_support_ticket_delete', {'id': support_ticket.id})) }}
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.support_ticket.no_results'|trans) }}
{% endif %}

{% endmacro %}
