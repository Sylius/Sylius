{% block content %}
{{ form_start(form, {'action': path('sylius_backend_exchange_rate_update', {'id': exchange_rate.id}), 'method': 'POST', 'attr': {'class': 'form-horizontal'}}) }}

{{ page.header('exchange_rate.update', 'pencil', 'SyliusUiBundle:Form/Actions:_update.html.twig') }}

