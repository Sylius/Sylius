{% import 'SyliusUiBundle::page.html.twig' as page %}

{% block breadcrumb %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.configuration'|trans }}</li>
    <li><a href="{{ path('sylius_backend_exchange_rate_index') }}">{{ 'sylius.breadcrumb.exchange_rate.index'|trans }}</a></li>
