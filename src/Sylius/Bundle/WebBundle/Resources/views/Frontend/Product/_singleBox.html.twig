<div class="product-box">
    <a href="{{ path('sylius_product_show', {'slug': product.slug}) }}" class="image">
        <img class="img-circle" src="{{ product.image ? product.image.path|imagine_filter('sylius_262x255') : 'http://placehold.it/262x255' }}" alt="{{ product.name }}" />
    </a>

    <div class="menu">
        <a href="{{ path('sylius_product_show', {'slug': product.slug}) }}" class="title">
            {{ product.name }}
        </a>
        {% if not product.hasOptions %}
        <span class="label label-success label-price">{{ product.price|sylius_price }}</span>
        {% endif %}
    </div>
</div>
