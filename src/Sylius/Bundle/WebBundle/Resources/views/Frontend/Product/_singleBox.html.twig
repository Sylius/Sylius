<div class="product-box">
    <a href="{{ path('sylius_product_show', {'slug': product.slug}) }}" class="product-title">{{ product.name|truncate(30) }}</a>
    <a href="{{ path('sylius_product_show', {'slug': product.slug}) }}">
        <img  src="{{ product.image.path|default('http://placehold.it/250x250')|imagine_filter('sylius_262x255') }}" alt="{{ product.name }}" class="thumb" />
    </a>
    <div class="product-menu">
        <span class="label">{{ product.price|sylius_price }}</span>
        <a class="btn btn-success" href="{{ path('sylius_product_show', {'slug': product.slug}) }}"><i class="icon-shopping-cart icon-white"></i> {{ 'sylius.add_to_cart'|trans }}</a>
    </div>
</div>
