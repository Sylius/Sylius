{% extends 'SyliusWebBundle:Frontend:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>{{ 'sylius.checkout.security.header'|trans|raw }}</h1>
</div>

{% include 'SyliusWebBundle:Frontend/Checkout:_progressBar.html.twig' %}

<div class="row form-vertical">
    <div class="col-md-6 checkout-existing-customer">
        <div class="well">
            <form action="{{ path('fos_user_security_check') }}" method="post" class="form-horizontal">
                <fieldset>
                    <legend>{{ 'sylius.checkout.security.existing_customer'|trans }}</legend>
                    <div class="form-group">
                        <label for="username" class="control-label col-lg-3">{{ 'sylius.form.login.email'|trans }}</label>
                        <div class="controls col-lg-9">
                            <input type="text" id="username" name="_username" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                    <label for="password" class="control-label col-lg-3">{{ 'sylius.form.login.password'|trans }}</label>
                        <div class="controls col-lg-9">
                            <input type="password" id="password" name="_password" class="form-control" />
                        </div>
                    </div>
                </fieldset>
                <div class="form-actions">
                    <input type="submit" class="btn btn-primary btn-block" name="login" value="{{ 'sylius.checkout.security.login'|trans }}" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-6 checkout-new-customer">
        <div class="well">
            <form action="{{ path('sylius_checkout_forward', {'stepName': context.currentStep.name}) }}" method="post" novalidate class="form-horizontal">
                <fieldset>
                    <legend>{{ 'sylius.checkout.security.guest'|trans }}</legend>
                    {{ form_widget(guest_form) }}
                </fieldset>
                <div class="form-actions">
                    <button type="submit" class="btn btn-success btn-block">
                        {{ 'sylius.checkout.security.proceed_order'|trans }}
                    </button>
                </div>
            </form>
        </div>
        <div class="well">
            <form action="{{ path('fos_user_registration_register') }}" method="post" novalidate class="form-horizontal">
                <fieldset>
                    <legend>{{ 'sylius.checkout.security.new_customer'|trans }}</legend>
                    {{ form_widget(registration_form) }}
                    <input type="hidden" name="_target_path" value="sylius_checkout_security">
                </fieldset>
                <div class="form-actions">
                    <input type="submit" class="btn btn-success btn-block" value="{{ 'sylius.checkout.security.register'|trans }}" />
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
