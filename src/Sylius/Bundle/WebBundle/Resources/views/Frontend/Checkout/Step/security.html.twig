{% extends 'SyliusWebBundle:Frontend:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>{{ 'sylius.checkout.security.header'|trans|raw }}</h1>
</div>

{% include 'SyliusWebBundle:Frontend/Checkout:_progressBar.html.twig' %}

<div class="row form-vertical">
    <div class="col-md-6">
        <div class="box">
            <h3>{{ 'sylius.checkout.security.existing_customer'|trans }}</h3>
                <form action="{{ path('fos_user_security_check') }}" method="post">
                <fieldset>
                    <div class="form-group">
                        <label for="username" class="control-label">{{ 'sylius.form.login.email'|trans }}</label>
                        <div class="controls">
                            <input type="text" id="username" name="_username" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                    <label for="password" class="control-label">{{ 'sylius.form.login.password'|trans }}</label>
                        <div class="controls">
                            <input type="password" id="password" name="_password" class="form-control" />
                        </div>
                    </div>
                </fieldset>
                <div class="form-actions">
                    <input type="submit" class="btn btn-primary btn-block" name="login" value="{{ 'sylius.checkout.security.login'|trans }}" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-6">
        <div class="box">
            <h3>{{ 'sylius.checkout.security.new_customer'|trans }}</h3>
                <form action="{{ path('sylius_checkout_forward', {'stepName': context.currentStep.name}) }}" method="post" class="form-horizontal" novalidate>
                <fieldset>
                    {{ form_widget(registration_form) }}
                </fieldset>
                <div class="form-actions">
                    <input type="submit" class="btn btn-success btn-block" value="{{ 'sylius.checkout.security.register'|trans }}" />
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
