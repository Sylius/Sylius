{% for review in reviews %}
    <div class="review">
        <span class="pull-right">{{ review.createdAt|date }}</span>
            <h4 class="title">
                Title: {{ review.title }}
            </h4>
            Rating: {{ review.rating }}
            <br>
            Author: {{ review.author.email }}
            <p class="comment">
                {{ review.comment }}
            </p>
    </div>
{% else %}
    <p>{{ 'sylius.review.no_results'|trans }}</p>
{% endfor %}
