{% extends 'SyliusWebBundle:Frontend:layout.html.twig' %}

{% block flashes %}
    {% for name, flashes in app.session.flashbag.all if name in ['success', 'error', 'fos_user_success'] %}
        {% for flash in flashes %}
            <div class="alert alert-{{ name == 'fos_user_success' ? 'success' : name }}">
                <a class="close" data-dismiss="alert" href="#">Ã—</a>
                {{ flash|trans({}, 'FOSUserBundle') }}
            </div>
        {% endfor %}
    {% endfor %}
{% endblock %}

{% block main %}
<div class="row row-main">
    <div class="col-md-3" id="sidebar">
        {{ knp_menu_render('sylius.frontend.account', {'template': 'SyliusWebBundle:Frontend:menu.html.twig'}) }}
    </div>
    <div class="col-md-9">
        <div class="content-container">
        {% block content %}
        {% endblock %}
        </div>
    </div>
</div>
{% endblock %}
