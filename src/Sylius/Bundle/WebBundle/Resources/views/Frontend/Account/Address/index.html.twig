{% extends 'SyliusWebBundle:Frontend/Account:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>{{ 'sylius.address.header'|trans }}</h1>
</div>

<div class="row-fluid">
    <div class="span6">
        <div class="well">
            <h4>{{ 'sylius.address.default_billing'|trans }}</h4>
            {% if user.billingAddress is not null %}
                <p>
                    {% include 'SyliusAddressingBundle:Address:_address.html.twig' with {'address': user.billingAddress} %}
                </p>
                <a href="#" class="btn"><i class="icon-edit"></i> {{ 'sylius.address.edit'|trans }}</a>
                <a href="#" class="btn btn-danger"><i class="icon-trash"></i> {{ 'sylius.address.delete'|trans }}</a>
            {% else %}
                <span class="label">{{ 'sylius.address.no_default_billing'|trans }}</span>
            {% endif %}
        </div>
    </div>
    <div class="span6">
        <div class="well">
            <h4>{{ 'sylius.address.default_shipping'|trans }}</h4>
            {% if user.shippingAddress is not null %}
                <p>
                    {% include 'SyliusAddressingBundle:Address:_address.html.twig' with {'address': user.shippingAddress} %}
                </p>
                <a href="#" class="btn"><i class="icon-edit"></i> {{ 'sylius.address.edit'|trans }}</a>
                <a href="#" class="btn btn-danger"><i class="icon-trash"></i> {{ 'sylius.address.delete'|trans }}</a>
            {% else %}
                <span class="label">{{ 'sylius.address.no_default_shipping'|trans }}</span>
            {% endif %}
        </div>
    </div>
</div>

<a href="#" class="btn btn-primary">{{ 'sylius.address.add'|trans }}</a>

{% if user.addresses|length > 0 %}
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>{{ 'sylius.address.addresses'|trans }}</th>
                <th>{{ 'sylius.address.actions'|trans }}</th>
                <th>{{ 'sylius.address.default'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for address in user.addresses if (address != user.billingAddress and address != user.shippingAddress) %}
                <tr>
                    <td>
                        {{ loop.index }}
                    </td>
                    <td>
                        {% include 'SyliusAddressingBundle:Address:_address.html.twig' %}
                    </td>
                    <td>
                        <a href="#" class="btn"><i class="icon-edit"></i> {{ 'sylius.address.edit'|trans }}</a>
                        <a href="#" class="btn btn-danger"><i class="icon-trash"></i> {{ 'sylius.address.delete'|trans }}</a>
                    </td>
                    <td>
                        <a href="#" class="btn">{{ 'sylius.address.set_default_billing'|trans }}</a><br>
                        <a href="#" class="btn">{{ 'sylius.address.set_default_shipping'|trans }}</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <div class="alert alert-info">
        {{ 'sylius.address.no_result'|trans }}
    </div>
{% endif %}

{% endblock %}
