{% import 'SyliusWebBundle:Frontend/Macros:buttons.html.twig' as buttons %}
{% extends 'SyliusWebBundle:Frontend:layout.html.twig' %}
{% from 'SyliusWebBundle:Frontend/Macros:actions.html.twig' import update %}

{% block content %}

<h4>{{ 'sylius.ui.reset_password'|trans }}</h4>

{{ form_errors(form) }}

<form action="{{ path('sylius_user_password_reset', { 'token' : user.confirmationToken}) }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
    <fieldset>
        {{ form_row(form.password.first, {'label': 'sylius.ui.new_password'|trans}) }}
        {{ form_row(form.password.second, {'label': 'sylius.ui.confirmation'|trans}) }}
    </fieldset>
    {{ form_rest(form) }}
    {{ update() }}
</form>

{% endblock %}
