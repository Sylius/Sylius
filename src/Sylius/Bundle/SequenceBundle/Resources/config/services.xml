<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius.registry.number_generator.class">Sylius\Component\Registry\ServiceRegistry</parameter>
        <parameter key="sylius.sequence.provider.class">Sylius\Component\Sequence\Provider\SequenceProvider</parameter>
        <parameter key="sylius.sequence.number_generator.interface">Sylius\Component\Sequence\Number\GeneratorInterface</parameter>
        <parameter key="sylius.sequence.sequential_number_generator.class">Sylius\Component\Sequence\Generator\SequentialGenerator</parameter>
        <parameter key="sylius.sequence.hash_number_generator.class">Sylius\Component\Sequence\Generator\HashGenerator</parameter>
    </parameters>

    <services>
        <service id="sylius.registry.number_generator" class="%sylius.registry.number_generator.class%">
          <argument type="string">Sylius\Component\Sequence\Generator\GeneratorInterface</argument>
        </service>
        <service id="sylius.sequence.provider" class="%sylius.sequence.provider.class%">
          <argument type="service" id="sylius.repository.sequence" />
          <argument type="service" id="sylius.manager.sequence" />
        </service>
    </services>
</container>
