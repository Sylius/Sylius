{% macro list(taxonomies) %}

{% if taxonomies|length > 0 %}
<table class="table table-hover">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('id') }}</th>
            <th>{{ sylius_resource_sort('name') }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for taxonomy in taxonomies %}
        <tr>
            <td>
                <a href="{{ path('sylius_taxonomy_show', {'id': taxonomy.id}) }}" class="btn btn-link">
                    {{ taxonomy.id }}
                </a>
            </td>
            <td>
                <a href="{{ path('sylius_taxonomy_show', {'id': taxonomy.id}) }}">
                    <strong>{{ taxonomy.name }}</strong>
                </a>
            </td>
            <td>
                <div class="pull-right">
                    <a href="{{ path('sylius_taxon_create', {'taxonomyId': taxonomy.id}) }}" class="btn btn-primary">
                        <i class="icon-plus-sign"></i> create taxon
                    </a>
                    <a href="{{ path('sylius_taxonomy_show', {'id': taxonomy.id}) }}" class="btn">
                        <i class="icon-book"></i> details
                    </a>
                    <a href="{{ path('sylius_taxonomy_update', {'id': taxonomy.id}) }}" class="btn">
                        <i class="icon-pencil"></i> edit
                    </a>
                    <form action="{{ path('sylius_taxonomy_delete', {'id': taxonomy.id}) }}" method="post" style="display: inline;">
                        <button class="btn btn-danger">
                            <i class="icon-trash"></i>
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
<div class="alert alert-info">
    <h4 class="alert-heading">Information</h4>
    No taxonomies to show
</div>
{% endif %}

{% endmacro %}
