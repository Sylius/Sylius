{% set taxonomy = taxon.taxonomy %}

<h1>New taxon <small>Use this form to create new taxon</small></h1>
<hr />

<form action="{{ path('sylius_taxon_update', {'taxonomyId': taxonomy.id, 'id': taxon.id}) }}" method="post" class="form-horizontal">
    {% include 'SyliusTaxonomiesBundle:Taxon:_form.html.twig' %}
    <div class="form-actions">
        <input type="submit" value="save changes" class="btn btn-large btn-primary" />
        <a href="{{ path('sylius_taxonomy_show', {'id': taxonomy.id}) }}" class="btn btn-large">cancel</a>
    </div>
</form>
