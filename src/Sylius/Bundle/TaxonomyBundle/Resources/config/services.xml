<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius.form.type.taxon_choice.class">Sylius\Bundle\TaxonomyBundle\Form\Type\TaxonChoiceType</parameter>
        <parameter key="sylius.form.type.taxon_selection.class">Sylius\Bundle\TaxonomyBundle\Form\Type\TaxonSelectionType</parameter>
        <parameter key="sylius.form.event_listener.build_taxonomy_form.class">Sylius\Bundle\TaxonomyBundle\Form\EventListener\BuildTaxonomyFormListener</parameter>
    </parameters>

    <services>
        <service id="sylius.form.type.taxonomy" class="%sylius.form.type.taxonomy.class%">
            <argument>%sylius.model.taxonomy.class%</argument>
            <argument type="service" id="sylius.form.event_listener.build_taxonomy_form" />
            <argument>%sylius.validation_group.taxonomy%</argument>
            <tag name="form.type" alias="sylius_taxonomy" />
        </service>
        <service id="sylius.form.type.taxonomy_translation" class="%sylius.form.type.taxonomy_translation.class%">
            <argument>%sylius.model.taxonomy_translation.class%</argument>
            <argument>%sylius.validation_group.taxonomy_translation%</argument>
            <tag name="form.type" alias="sylius_taxonomy_translation" />
        </service>
        <service id="sylius.form.type.taxonomy_choice" class="%sylius.form.type.taxonomy_choice.class%">
            <argument>%sylius.model.taxonomy.class%</argument>
            <tag name="form.type" alias="sylius_taxonomy_choice" />
        </service>

        <service id="sylius.form.type.taxon" class="%sylius.form.type.taxon.class%">
            <argument>%sylius.model.taxon.class%</argument>
            <argument>%sylius.validation_group.taxon%</argument>
            <tag name="form.type" alias="sylius_taxon" />
        </service>
        <service id="sylius.form.type.taxon_translation" class="%sylius.form.type.taxon_translation.class%">
            <argument>%sylius.model.taxon_translation.class%</argument>
            <argument>%sylius.validation_group.taxon_translation%</argument>
            <tag name="form.type" alias="sylius_taxon_translation" />
        </service>
        <service id="sylius.form.type.taxon_choice" class="%sylius.form.type.taxon_choice.class%">
            <argument type="service" id="sylius.repository.taxon" />
            <tag name="form.type" alias="sylius_taxon_choice" />
        </service>

        <service id="sylius.form.type.taxon_selection" class="%sylius.form.type.taxon_selection.class%">
            <argument type="service" id="sylius.repository.taxonomy" />
            <argument type="service" id="sylius.repository.taxon" />
            <tag name="form.type" alias="sylius_taxon_selection" />
        </service>
        <service id="sylius.form.event_listener.build_taxonomy_form" class="%sylius.form.event_listener.build_taxonomy_form.class%">
            <tag name="form.event_listener" alias="sylius_build_taxonomy_form" />
        </service>
    </services>

</container>
