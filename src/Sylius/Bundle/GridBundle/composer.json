{
    "name": "sylius/grid-bundle",
    "type": "symfony-bundle",
    "description": "Amazing grids with support of filters and custom fields integrated into Symfony.",
    "keywords": ["shop", "ecommerce", "store", "webshop", "sylius", "grid", "admin", "crud"],
    "homepage": "http://sylius.org",
    "license": "MIT",
    "authors": [
        {
            "name":     "Paweł Jędrzejewski",
            "homepage": "http://pjedrzejewski.com"
        },
        {
            "name":     "Sylius project",
            "homepage": "http://sylius.org"
        },
        {
            "name":     "Community contributions",
            "homepage": "http://github.com/Sylius/Sylius/contributors"
        }
    ],
    "require": {
        "php": "^5.6|^7.0",

        "sylius/grid": "^1.0",
        "symfony/form": "^3.2@rc",
        "symfony/framework-bundle": "^3.2@rc"
    },
    "require-dev": {
        "doctrine/orm": "^2.5",
        "matthiasnoback/symfony-config-test": "^2.0",
        "matthiasnoback/symfony-dependency-injection-test": "^1.0",
        "pagerfanta/pagerfanta": "^1.0",
        "phpspec/phpspec": "^3.2",
        "phpunit/phpunit": "^5.6",
        "twig/twig": "^1.11"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": { "Sylius\\Bundle\\GridBundle\\": "" }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../../*/*"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
