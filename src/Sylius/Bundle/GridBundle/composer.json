{
    "name": "sylius/grid-bundle",
    "type": "symfony-bundle",
    "description": "Amazing grids with support of filters and custom fields integrated into Symfony.",
    "keywords": ["shop", "ecommerce", "store", "webshop", "sylius", "grid", "admin", "crud"],
    "homepage": "http://sylius.org",
    "license": "MIT",
    "authors": [
        {
            "name":     "Paweł Jędrzejewski",
            "homepage": "http://pjedrzejewski.com"
        },
        {
            "name":     "Sylius project",
            "homepage": "http://sylius.org"
        },
        {
            "name":     "Community contributions",
            "homepage": "http://github.com/Sylius/Sylius/contributors"
        }
    ],
    "require": {
        "php": "^5.6|^7.0",

        "sylius/grid": "^0.18",

        "symfony/form": "^2.7",
        "symfony/framework-bundle": "^2.7.7"
    },
    "require-dev": {
        "doctrine/orm": "^2.4.8,<2.5",
        "jackalope/jackalope-doctrine-dbal": "^1.2",
        "doctrine/phpcr-odm": "^1.3.0",
        "matthiasnoback/symfony-dependency-injection-test": "0.*",
        "phpspec/phpspec": "^2.4",
        "phpunit/phpunit": "^4.8",
        "twig/twig": "~1.11",
        "matthiasnoback/symfony-config-test": "^1.4",
        "pagerfanta/pagerfanta": "^1.0"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": { "Sylius\\Bundle\\GridBundle\\": "" }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../../*/*"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "0.18-dev"
        }
    }
}
