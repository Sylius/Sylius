<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">
    <class name="Sylius\Component\Core\Model\ProductImage">
        <property name="file">
            <constraint name="Image">
                <option name="maxSize">10M</option>
                <option name="maxSizeMessage">sylius.product_image.file.max_size</option>
                <option name="uploadIniSizeErrorMessage">sylius.product_image.file.upload_ini_size</option>
                <option name="groups">sylius</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
