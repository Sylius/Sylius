<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">
    <class name="Sylius\Component\Promotion\Model\CatalogPromotionAction">
        <property name="configuration">
            <constraint name="AtLeastOneOf">
                <option name="constraints">
                    <constraint name="NotBlank">
                        <option name="message">sylius.catalog_promotion.action.configuration.not_blank</option>
                        <option name="groups">sylius</option>
                    </constraint>
                    <constraint name="Collection">
                        <option name="fields">
                            <value key="discount">
                                <constraint name="NotBlank">
                                    <option name="message">sylius.catalog_promotion.action.configuration.percentage_discount.discount.not_blank</option>
                                    <option name="groups">sylius</option>
                                </constraint>
                            </value>
                        </option>
                    </constraint>
                </option>
                <option name="groups">sylius</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
