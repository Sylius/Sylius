<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">
    <class name="Sylius\Component\Core\Model\ChannelPricing">
        <property name="price">
            <constraint name="Range">
                <option name="min">0.01</option>
                <option name="minMessage">sylius.channel_pricing.price.min</option>
                <option name="groups">sylius</option>
            </constraint>
        </property>
        <property name="originalPrice">
            <constraint name="Range">
                <option name="min">0.01</option>
                <option name="minMessage">sylius.channel_pricing.original_price.min</option>
                <option name="groups">sylius</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
