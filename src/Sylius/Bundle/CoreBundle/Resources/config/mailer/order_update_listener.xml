<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius.listener.order_update_email.class">Sylius\Bundle\CoreBundle\EventListener\OrderUpdateEmailListener</parameter>
    </parameters>

    <services>

        <service id="sylius.listener.order_update_email" class="%sylius.listener.order_update_email.class%">
            <argument type="service" id="sylius.mailer.order_update" />
            <tag name="kernel.event_listener" event="sylius.order.update" method="processOrderUpdate" />
        </service>

    </services>

</container>
