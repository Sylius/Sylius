<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius.listener.customer_welcome.class">Sylius\Bundle\CoreBundle\EventListener\CustomerWelcomeEmailListener</parameter>

        <parameter key="fos.constant.event.user.registration_completed" type="constant">FOS\UserBundle\FOSUserEvents::REGISTRATION_COMPLETED</parameter>
        <parameter key="fos.constant.event.user.registration_confirmed" type="constant">FOS\UserBundle\FOSUserEvents::REGISTRATION_CONFIRMED</parameter>
    </parameters>

    <services>

        <service id="sylius.listener.customer_welcome" class="%sylius.listener.customer_welcome.class%">
            <argument type="service" id="sylius.mailer.customer_welcome" />
            <tag name="kernel.event_listener" event="%fos.constant.event.user.registration_completed%" method="handleEvent" />
            <tag name="kernel.event_listener" event="%fos.constant.event.user.registration_confirmed%" method="handleEvent" />
        </service>

    </services>

</container>
