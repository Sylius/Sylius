<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius.mailer.product_change.class">Sylius\Bundle\CoreBundle\Mailer\ProductChangeMailer</parameter>
    </parameters>

    <services>

        <service id="sylius.mailer.product_change" class="%sylius.mailer.product_change.class%">
            <argument type="service" id="sylius.mailer" />
            <argument type="collection">
                <argument key="template">%sylius.email.product_change.template%</argument>
                <argument key="from_email">%sylius.email.product_change.from_email%</argument>
            </argument>
        </service>

    </services>

</container>
