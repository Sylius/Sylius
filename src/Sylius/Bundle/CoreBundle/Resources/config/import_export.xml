<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd"> 
    <parameters>    
        <!-- Readers -->
        <parameter key="sylius.export.doctrine_orm.user.reader.class">Sylius\Bundle\CoreBundle\Export\Reader\ORM\UserReader</parameter>

        <!-- Readers processors -->
        <parameter key="sylius.export.doctrine_orm.user_processor.class">Sylius\Bundle\CoreBundle\Export\Reader\ORM\Processor\UserProcessor</parameter>

        <!-- Readers form type-->
        <parameter key="sylius.form.type.doctrine_orm.user.reader.class">Sylius\Bundle\CoreBundle\Form\Type\Export\Reader\UserReaderType</parameter>

        <!-- Writers -->

        <!-- Writer form types-->
    </parameters>

    <services>
        <!-- Export reader -->
        <service id="sylius.export.doctrine_orm.user.reader" class="%sylius.export.doctrine_orm.user.reader.class%">
            <argument type="service" id="sylius.export.doctrine_orm.user_processor" />
            <argument type="service" id="doctrine" />
            <tag name="sylius.export.reader" reader="user_orm" label="User doctrine reader" />
        </service>

        <!-- Export reader form types-->
        <service id="sylius.form.type.doctrine_orm.user.reader" class="%sylius.form.type.doctrine_orm.user.reader.class%">
            <argument>%sylius.model.order.class%</argument>
            <argument>%sylius.validation_group.order%</argument>
            <tag name="form.type" alias="sylius_user_orm_reader" />
        </service>

        <!-- Readers processors -->
        <service id="sylius.export.doctrine_orm.user_processor" class="%sylius.export.doctrine_orm.user_processor.class%">
            <argument type="service" id="sylius.import_export.data_converter" />
        </service>

    </services>
</container>