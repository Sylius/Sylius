<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="sylius_payment_request.action.get_http_request" class="Sylius\Bundle\CoreBundle\PaymentRequest\Payum\Action\SyliusGetHttpRequestAction">
            <argument type="service" id="sylius.payment_request.payum.context" />

            <tag name="payum.action" all="true" prepend="true" />
        </service>

        <service id="sylius_payment_request.action.render_template" class="Sylius\Bundle\CoreBundle\PaymentRequest\Payum\Action\SyliusRenderTemplateAction">
            <argument type="service" id="sylius.payment_request.payum.context" />

            <tag name="payum.action" all="true" prepend="true" />
        </service>

    </services>
</container>
