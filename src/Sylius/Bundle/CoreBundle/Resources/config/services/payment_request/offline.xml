<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="sylius.payment_request.command_provider.offline" class="Sylius\Bundle\CoreBundle\PaymentRequest\Provider\PaymentRequestTypeCommandProvider">
            <argument type="tagged_locator" tag="sylius.payment_request.command_provider.offline" index-by="type" />
            <tag name="sylius.payment_request.command_provider" factory="offline" priority="-100" />
        </service>

        <service id="sylius.payment_request.command_provider.offline.capture" class="Sylius\Bundle\CoreBundle\PaymentRequest\Provider\Offline\CapturePaymentRequestCommandProvider">
            <tag name="sylius.payment_request.command_provider.offline" type="capture" />
        </service>

        <service id="sylius.payment_request.command_provider.offline.status" class="Sylius\Bundle\CoreBundle\PaymentRequest\Provider\Offline\StatusPaymentRequestCommandProvider">
            <tag name="sylius.payment_request.command_provider.offline" type="status" />
        </service>

        <service id="sylius.payment_request.offline.capture" class="Sylius\Bundle\CoreBundle\PaymentRequest\CommandHandler\Offline\CapturePaymentRequestHandler">
            <argument type="service" id="sylius.repository.payment_request" />
            <argument type="service" id="Sylius\Bundle\CoreBundle\PaymentRequest\Processor\OfflineCaptureProcessorInterface" />
            <argument type="service" id="Sylius\Bundle\CoreBundle\PaymentRequest\Processor\AfterOfflineCaptureProcessorInterface" />
            <tag name="messenger.message_handler" bus="sylius.command_bus" />
            <tag name="messenger.message_handler" bus="sylius_default.bus" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\PaymentRequest\Processor\OfflineCaptureProcessorInterface" class="Sylius\Bundle\CoreBundle\PaymentRequest\Processor\OfflineCaptureProcessor" />

        <service id="Sylius\Bundle\CoreBundle\PaymentRequest\Processor\AfterOfflineCaptureProcessorInterface" class="Sylius\Bundle\CoreBundle\PaymentRequest\Processor\AfterOfflineCaptureProcessor">
            <argument type="service" id="sylius_abstraction.state_machine" />
        </service>

    </services>
</container>
