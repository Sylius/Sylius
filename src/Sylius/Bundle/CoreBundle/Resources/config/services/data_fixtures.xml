<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />

        <service id="sylius.data_fixtures.shop_configuration" class="Sylius\Bundle\CoreBundle\DataFixtures\ShopConfigurationFixtures">
            <tag name="doctrine.fixture.orm" />
        </service>

        <service id="sylius.data_fixtures.factory.locale" class="Sylius\Bundle\CoreBundle\DataFixtures\Factory\LocaleFactory">
            <argument type="service" id="sylius.factory.locale" />
            <argument>%sylius_locale.locale%</argument>
            <tag name="foundry.factory" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\DataFixtures\Factory\LocaleFactoryInterface" alias="sylius.data_fixtures.factory.locale" />

        <service id="sylius.data_fixtures.factory.country" class="Sylius\Bundle\CoreBundle\DataFixtures\Factory\CountryFactory">
            <argument type="service" id="sylius.factory.country" />
            <tag name="foundry.factory" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\DataFixtures\Factory\CountryFactoryInterface" alias="sylius.data_fixtures.factory.country" />

        <service id="sylius.data_fixtures.factory.currency" class="Sylius\Bundle\CoreBundle\DataFixtures\Factory\CurrencyFactory">
            <argument type="service" id="sylius.factory.currency" />
            <tag name="foundry.factory" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\DataFixtures\Factory\CurrencyFactoryInterface" alias="sylius.data_fixtures.factory.currency" />
    </services>
</container>
