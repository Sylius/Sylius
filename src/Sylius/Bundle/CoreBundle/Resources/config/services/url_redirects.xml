<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service class="Sylius\Component\Core\URLRedirect\URLRedirectProcessor"
                 id="sylius_bundle_core.application.urlredirect_processor">
            <argument id="sylius.repository.url_redirect" type="service"/>
        </service>

        <service class="Sylius\Bundle\CoreBundle\Validator\Constraints\URLRedirectValidator"
                 id="sylius_bundle_admin.validator_constraints.urlredirect_validator">
            <argument id="sylius.component.core.urlredirect.urlredirect_loop_detector" type="service"/>
            <tag name="validator.constraint_validator" alias="sylius_url_redirect_validator"/>
        </service>

        <service class="Sylius\Bundle\CoreBundle\Validator\Constraints\ActiveRedirectRoutesValidator"
                 id="sylius_bundle_admin.validator_constraints.active_redirect_route_validator">
            <argument id="sylius.repository.url_redirect" type="service"/>
            <tag name="validator.constraint_validator" alias="sylius_url_active_route_validator" />
        </service>


        <service class="Sylius\Component\Core\URLRedirect\URLRedirectLoopDetector"
                 id="sylius.component.core.urlredirect.urlredirect_loop_detector">
            <argument id="sylius.repository.url_redirect" type="service"/>
        </service>


    </services>
</container>