<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="sylius.payment_request.payum.command_provider.stripe" class="Sylius\Bundle\CoreBundle\PaymentRequest\CommandProvider\PaymentRequestTypeCommandProvider">
            <argument type="tagged_locator" tag="sylius.payment_request.payum.command_provider.stripe" index-by="type" />
            <tag name="sylius.payment_request.command_provider" factory="stripe" />
        </service>

        <service id="sylius.payment_request.payum.command_provider.stripe.capture" class="Sylius\Bundle\CoreBundle\PaymentRequest\Payum\CommandProvider\CaptureCommandProvider">
            <tag name="sylius.payment_request.payum.command_provider.stripe" type="capture" />
        </service>

        <service id="sylius.payment_request.payum.command_provider.stripe.authorize" class="Sylius\Bundle\CoreBundle\PaymentRequest\Payum\CommandProvider\AuthorizeCommandProvider">
            <tag name="sylius.payment_request.payum.command_provider.stripe" type="authorize" />
        </service>

        <service id="sylius.payment_request.payum.command_provider.stripe.status" class="Sylius\Bundle\CoreBundle\PaymentRequest\Payum\CommandProvider\StatusCommandProvider">
            <tag name="sylius.payment_request.payum.command_provider.stripe" type="status" />
        </service>

    </services>
</container>
