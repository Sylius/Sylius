<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sylius.custom_shipping_calculator.flat_rate" class="Sylius\Component\Core\Shipping\Calculator\FlatRateCalculator" decorates="sylius.shipping_calculator.flat_rate">
            <argument type="service" id="sylius.custom_shipping_calculator.flat_rate.inner" />
            <argument type="service" id="sylius.context.channel" />
        </service>

        <service id="sylius.custom_shipping_calculator.per_unit_rate" class="Sylius\Component\Core\Shipping\Calculator\PerUnitRateCalculator" decorates="sylius.shipping_calculator.per_unit_rate">
            <argument type="service" id="sylius.custom_shipping_calculator.per_unit_rate.inner" />
            <argument type="service" id="sylius.context.channel" />
        </service>

        <service id="sylius.form.event_subscriber.build_shipping_method" class="Sylius\Bundle\CoreBundle\Form\EventSubscriber\BuildShippingMethodFormSubscriber">
            <argument type="service" id="sylius.registry.shipping_calculator"/>
            <argument type="service" id="form.factory"/>
            <argument type="service" id="form.registry"/>
        </service>
    </services>
</container>
