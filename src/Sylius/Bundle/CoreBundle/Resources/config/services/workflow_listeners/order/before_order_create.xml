<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="false" />

        <service id="Sylius\Bundle\CoreBundle\Workflow\Listener\Order\AssignTokenListener">
            <argument type="service" id="sylius.unique_id_based_order_token_assigner" />
            <tag name="kernel.event_listener"
                 event="workflow.sylius_order.transition.create"
                 method="assignToken"
                 priority="-100" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Listener\Order\AssignNumberListener">
            <argument type="service" id="sylius.order_number_assigner" />
            <tag name="kernel.event_listener"
                 event="workflow.sylius_order.transition.create"
                 method="assignNumber"
                 priority="-200" />
        </service>
    </services>
</container>
