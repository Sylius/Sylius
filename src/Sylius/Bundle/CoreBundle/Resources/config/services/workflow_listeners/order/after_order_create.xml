<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="false" />

        <service id="Sylius\Bundle\CoreBundle\Workflow\Listener\Order\CreateShipmentListener">
            <argument type="service" id="state_machine.sylius_shipment" />
            <tag name="kernel.event_listener"
                 event="workflow.sylius_order.completed.create"
                 method="createShipment"
                 priority="-500" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Listener\Order\CreatePaymentListener">
            <argument type="service" id="state_machine.sylius_payment" />
            <tag name="kernel.event_listener"
                 event="workflow.sylius_order.completed.create"
                 method="createPayment"
                 priority="-600" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Listener\Order\RequestPaymentListener">
            <argument type="service" id="state_machine.sylius_order_payment" />
            <tag name="kernel.event_listener"
                 event="workflow.sylius_order.completed.create"
                 method="requestPayment"
                 priority="-700" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Listener\Order\RequestShippingListener">
            <argument type="service" id="state_machine.sylius_order_shipping" />
            <tag name="kernel.event_listener"
                 event="workflow.sylius_order.completed.create"
                 method="requestShipping"
                 priority="-800" />
        </service>
    </services>
</container>
