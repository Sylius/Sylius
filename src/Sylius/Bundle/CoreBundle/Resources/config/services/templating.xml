<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sylius.templating.helper.money.core" class="Sylius\Bundle\CoreBundle\Templating\Helper\MoneyHelper" decorates="sylius.templating.helper.money" lazy="true">
            <argument type="service" id="sylius.templating.helper.money.core.inner" />
            <argument type="service" id="sylius.context.locale" />
            <argument type="service" id="sylius.context.channel" />
            <tag name="templating.helper" alias="sylius_money" />
        </service>

        <service id="sylius.templating.helper.price.core" class="Sylius\Bundle\CoreBundle\Templating\Helper\PriceHelper" decorates="sylius.templating.helper.price" lazy="true">
            <argument type="service" id="sylius.templating.helper.price.core.inner" />
            <argument type="service" id="sylius.context.currency" />
            <tag name="templating.helper" alias="sylius_price" />
        </service>

        <service id="sylius.templating.helper.channel_based_price" class="Sylius\Bundle\CoreBundle\Templating\Helper\ChannelBasedPriceHelper" lazy="true">
            <argument type="service" id="sylius.context.cart" />
            <argument type="service" id="sylius.templating.helper.price.core" />
            <argument type="service" id="sylius.calculator.product_variant_price" />
            <tag name="templating.helper" alias="sylius_channel_variant_price" />
        </service>

        <service id="sylius.twig.extension.channel_based_price" class="Sylius\Bundle\CoreBundle\Twig\ChannelBasedPriceExtension" public="false">
            <argument type="service" id="sylius.templating.helper.channel_based_price" />
            <tag name="twig.extension" />
        </service>
    </services>
</container>
