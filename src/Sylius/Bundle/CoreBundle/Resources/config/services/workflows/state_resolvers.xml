<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="false" />

        <service id="Sylius\Bundle\CoreBundle\Workflow\StateResolver\OrderCheckoutStateResolver">
            <argument type="service" id="state_machine.sylius_order_checkout" />
            <argument type="service" id="sylius.checker.order_payment_method_selection_requirement" />
            <argument type="service" id="sylius.checker.order_shipping_method_selection_requirement"  />
        </service>
        <service id="Sylius\Bundle\CoreBundle\Workflow\StateResolver\OrderCheckoutStateResolverInterface" alias="Sylius\Bundle\CoreBundle\Workflow\StateResolver\OrderCheckoutStateResolver" />

        <service id="Sylius\Bundle\CoreBundle\Workflow\StateResolver\OrderPaymentStateResolver">
            <argument type="service" id="state_machine.sylius_order_payment" />
        </service>
        <service id="Sylius\Bundle\CoreBundle\Workflow\StateResolver\OrderPaymentStateResolverInterface" alias="Sylius\Bundle\CoreBundle\Workflow\StateResolver\OrderPaymentStateResolver" />

        <service id="Sylius\Bundle\CoreBundle\Workflow\StateResolver\OrderShippingStateResolver">
            <argument type="service" id="state_machine.sylius_order_shipping" />
        </service>
        <service id="Sylius\Bundle\CoreBundle\Workflow\StateResolver\OrderShippingStateResolverInterface" alias="Sylius\Bundle\CoreBundle\Workflow\StateResolver\OrderShippingStateResolver" />

        <service id="Sylius\Bundle\CoreBundle\Workflow\StateResolver\OrderStateResolver">
            <argument type="service" id="state_machine.sylius_order" />
        </service>
        <service id="Sylius\Bundle\CoreBundle\Workflow\StateResolver\OrderStateResolverInterface" alias="Sylius\Bundle\CoreBundle\Workflow\StateResolver\OrderStateResolver" />
    </services>
</container>
