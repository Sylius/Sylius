<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false" />

        <service id="Sylius\Bundle\CoreBundle\Workflow\Callback\OrderCheckout\CreateOrderCallback">
            <argument type="service" id="state_machine.sylius_order" />
            <tag name="sylius.workflow.callback.after_completed_checkout" priority="-100" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Callback\OrderCheckout\SaveCheckoutCompletionDateCallback">
            <tag name="sylius.workflow.callback.after_completed_checkout" priority="-200" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Callback\OrderCheckout\ProcessCartCallback">
            <argument type="service" id="sylius.order_processing.order_processor" />
            <tag name="sylius.workflow.callback.after_selected_shipping" priority="-300" />
            <tag name="sylius.workflow.callback.after_addressed" priority="-300" />
            <tag name="sylius.workflow.callback.after_selected_payment" priority="-300" />
            <tag name="sylius.workflow.callback.after_skipped_shipping" priority="-300" />
            <tag name="sylius.workflow.callback.after_skipped_payment" priority="-300" />
            <tag name="sylius.workflow.callback.after_selected_shipping" priority="-300" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Callback\OrderCheckout\ControlPaymentStateCallback">
            <argument type="service" id="Sylius\Bundle\CoreBundle\Workflow\StateResolver\OrderCheckoutStateResolverInterface" />
            <tag name="sylius.workflow.callback.after_completed_checkout" priority="-300" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Callback\OrderCheckout\SkipShippingCallback">
            <argument type="service" id="Sylius\Bundle\CoreBundle\Workflow\StateResolver\OrderCheckoutStateResolverInterface" />
            <tag name="sylius.workflow.callback.after_addressed" priority="-400" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Callback\OrderCheckout\SkipPaymentCallback">
            <argument type="service" id="Sylius\Bundle\CoreBundle\Workflow\StateResolver\OrderCheckoutStateResolverInterface" />
            <tag name="sylius.workflow.callback.after_selected_shipping" priority="-400" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Callback\OrderCheckout\ControlShippingStateCallback">
            <argument type="service" id="Sylius\Bundle\CoreBundle\Workflow\StateResolver\OrderCheckoutStateResolverInterface" />
            <tag name="sylius.workflow.callback.after_completed_checkout" priority="-400" />
        </service>
    </services>
</container>
