<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Sylius\Bundle\CoreBundle\Workflow\Callback\AfterPlacedOrder\CreatePaymentCallback">
            <argument type="service" id="state_machine.sylius_payment" />
            <tag name="sylius.workflow.callback.after_placed_order" priority="-600" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Callback\AfterPlacedOrder\CreateShipmentCallback">
            <argument type="service" id="state_machine.sylius_shipment" />
            <tag name="sylius.workflow.callback.after_placed_order" priority="-500" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Callback\AfterPlacedOrder\HoldInventoryCallback">
            <argument type="service" id="sylius.custom_inventory.order_inventory_operator.inner" />
            <tag name="sylius.workflow.callback.after_placed_order" priority="-400" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Callback\AfterPlacedOrder\IncrementPromotionUsagesCallback">
            <argument type="service" id="sylius.promotion_usage_modifier" />
            <tag name="sylius.workflow.callback.after_placed_order" priority="-300" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Callback\AfterPlacedOrder\RequestPaymentCallback">
            <argument type="service" id="state_machine.sylius_order_payment" />
            <tag name="sylius.workflow.callback.after_placed_order" priority="-700" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Callback\AfterPlacedOrder\RequestShippingCallback">
            <argument type="service" id="state_machine.sylius_order_shipping" />
            <tag name="sylius.workflow.callback.after_placed_order" priority="-800" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Callback\AfterPlacedOrder\SaveAddressesOnCustomerCallback">
            <argument type="service" id="sylius.customer_order_addresses_saver" />
            <tag name="sylius.workflow.callback.after_placed_order" priority="-200" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Callback\AfterPlacedOrder\SetOrderImmutableNamesCallback">
            <argument type="service" id="sylius.order_item_names_setter" />
            <tag name="sylius.workflow.callback.after_placed_order" priority="-100" />
        </service>
    </services>
</container>
