<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="false" />

        <service id="Sylius\Bundle\CoreBundle\Workflow\Listener\Shipment\AfterShippedListener">
            <argument type="tagged_iterator" tag="sylius.workflow.callback.after_shipped" />
            <tag name="kernel.event_listener"
                 event="workflow.sylius_shipment.completed.ship"
                 method="call"
                 priority="-100" />
        </service>
    </services>
</container>
