<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="false" />

        <service id="Sylius\Bundle\CoreBundle\Workflow\Listener\Payment\AfterAuthorizedPaymentListener">
            <argument type="tagged_iterator" tag="sylius.workflow.callback.after_authorized_payment" />
            <tag name="kernel.event_listener"
                 event="workflow.sylius_payment.completed.authorize"
                 method="call"
                 priority="-100" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Listener\Payment\AfterCompletedPaymentListener">
            <argument type="tagged_iterator" tag="sylius.workflow.callback.after_completed_payment" />
            <tag name="kernel.event_listener"
                 event="workflow.sylius_payment.completed.complete"
                 method="call"
                 priority="-100" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Listener\Payment\AfterProcessedPaymentListener">
            <argument type="tagged_iterator" tag="sylius.workflow.callback.after_processed_payment" />
            <tag name="kernel.event_listener"
                 event="workflow.sylius_payment.completed.process"
                 method="call"
                 priority="-100" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Listener\Payment\AfterRefundedPaymentListener">
            <argument type="tagged_iterator" tag="sylius.workflow.callback.after_refunded_payment" />
            <tag name="kernel.event_listener"
                 event="workflow.sylius_payment.completed.refund"
                 method="call"
                 priority="-100" />
        </service>
    </services>
</container>
