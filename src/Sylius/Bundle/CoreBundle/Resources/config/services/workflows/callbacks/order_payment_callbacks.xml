<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false" />

        <service id="Sylius\Bundle\CoreBundle\Workflow\Callback\OrderPayment\OrderPaidCallback">
            <argument type="service" id="sylius.custom_inventory.order_inventory_operator" />
            <tag name="sylius.workflow.callback.after_paid" priority="-200" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Callback\OrderPayment\ResolveOrderStateCallback">
            <argument type="service" id="Sylius\Bundle\CoreBundle\Workflow\StateResolver\OrderStateResolverInterface" />
            <tag name="sylius.workflow.callback.after_paid" priority="-100" />
        </service>
    </services>
</container>
