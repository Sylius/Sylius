<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Sylius\Bundle\CoreBundle\Workflow\Reactor\AfterPlacedOrder\CreatePaymentReactor">
            <argument type="service" id="state_machine.sylius_payment" />
            <tag name="sylius.workflow.reactor.after_placed_order" priority="-600" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Reactor\AfterPlacedOrder\CreateShipmentReactor">
            <argument type="service" id="state_machine.sylius_shipment" />
            <tag name="sylius.workflow.reactor.after_placed_order" priority="-500" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Reactor\AfterPlacedOrder\HoldInventoryReactor">
            <argument type="service" id="sylius.custom_inventory.order_inventory_operator.inner" />
            <tag name="sylius.workflow.reactor.after_placed_order" priority="-300" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Reactor\AfterPlacedOrder\RequestPaymentReactor">
            <argument type="service" id="state_machine.sylius_order_payment" />
            <tag name="sylius.workflow.reactor.after_placed_order" priority="-700" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\Workflow\Reactor\AfterPlacedOrder\RequestShippingReactor">
            <argument type="service" id="state_machine.sylius_order_shipping" />
            <tag name="sylius.workflow.reactor.after_placed_order" priority="-800" />
        </service>
    </services>
</container>
