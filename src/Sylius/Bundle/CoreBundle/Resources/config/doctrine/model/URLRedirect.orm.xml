<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <entity name="Sylius\Component\Core\Model\URLRedirect" table="sylius_url_redirects">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="oldRoute" type="string" length="255" unique="true"/>
        <field name="newRoute" type="string" length="255"/>

        <field name="enabled" type="boolean" />
    </entity>

</doctrine-mapping>
