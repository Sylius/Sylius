<?xml version="1.0" encoding="UTF-8" ?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Sylius\Bundle\CoreBundle\Entity\ProductTranslation" table="sylius_product_translation">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="locale" type="string" />
        <field name="field" type="string" />
        <field name="content" type="string" nullable="true" />
        <many-to-one field="object" target-entity="Sylius\Bundle\CoreBundle\Entity\Product" inversed-by="translations" />
    </entity>

</doctrine-mapping>
