<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sylius.command_handler.switch_locale" class="Sylius\Bundle\CoreBundle\CommandHandler\SwitchLocaleCommandHandler">
            <argument type="service" id="sylius.storage.locale" />
            <tag name="command_handler" handles="sylius.command.switch_locale" />
        </service>
    </services>

</container>
