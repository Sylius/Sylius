{
    "name": "sylius/core-bundle",
    "type": "symfony-bundle",
    "description": "Sylius core bundle. It integrates all other bundles into full stack Symfony2 ecommerce solution.",
    "keywords": ["shop", "ecommerce", "store", "webshop", "sylius"],
    "homepage": "http://sylius.org",
    "license": "MIT",
    "authors": [
        {
            "name":     "Paweł Jędrzejewski",
            "homepage": "http://pjedrzejewski.com"
        },
        {
            "name":     "Sylius project",
            "homepage": "http://sylius.org"
        },
        {
            "name":     "Community contributions",
            "homepage": "http://github.com/Sylius/Sylius/contributors"
        }
    ],
    "require": {
        "php": "^5.5.9|^7.0",

        "a2lix/translation-form-bundle": "~2.0",
        "hwi/oauth-bundle": "~0.3",
        "jms/serializer-bundle": "^0.13|^1.0",
        "jms/translation-bundle": "1.1.*",
        "knplabs/knp-gaufrette-bundle": "~0.1",
        "mathiasverraes/money": "~1.2",
        "sylius/core": "0.17.*",
        "sylius/addressing-bundle": "0.17.*",
        "sylius/api-bundle": "0.17.*",
        "sylius/attribute-bundle": "0.17.*",
        "sylius/cart-bundle": "0.17.*",
        "sylius/contact-bundle": "0.17.*",
        "sylius/content-bundle": "0.17.*",
        "sylius/currency-bundle": "0.17.*",
        "sylius/flow-bundle": "0.17.*",
        "sylius/inventory-bundle": "0.17.*",
        "sylius/locale-bundle": "0.17.*",
        "sylius/money-bundle": "0.17.*",
        "sylius/order-bundle": "0.17.*",
        "sylius/payment-bundle": "0.17.*",
        "sylius/payum-bundle": "0.17.*",
        "sylius/pricing-bundle": "0.17.*",
        "sylius/product-bundle": "0.17.*",
        "sylius/promotion-bundle": "0.17.*",
        "sylius/rbac-bundle": "0.17.*",
        "sylius/report-bundle": "0.17.*",
        "sylius/resource-bundle": "0.17.*",
        "sylius/settings-bundle": "0.17.*",
        "sylius/shipping-bundle": "0.17.*",
        "sylius/taxation-bundle": "0.17.*",
        "sylius/taxonomy-bundle": "0.17.*",
        "sylius/user-bundle": "0.17.*",
        "sylius/variation-bundle": "0.17.*",
        "symfony/framework-bundle": "^2.7.7",
        "symfony-cmf/routing-bundle": "~1.2",
        "swiftmailer/swiftmailer": "~5.0",
        "winzou/state-machine-bundle": "~0.2"
    },
    "require-dev": {
        "phpspec/phpspec": "^2.4",
        "fzaninotto/faker": "~1.2",
        "symfony/form": "^2.7",
        "lakion/api-test-case": "^1.0@dev",
        "coduo/php-matcher": "^2.1@dev"
    },
    "suggest": {
        "sylius/web-bundle":      "Provides default web interface",
        "sylius/fixtures-bundle": "Provides default Sylius fixtures"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": { "Sylius\\Bundle\\CoreBundle\\": "" }
    },
    "autoload-dev": {
        "psr-4": { "Sylius\\Bundle\\CoreBundle\\spec\\": "spec/" }
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "0.17-dev"
        }
    }
}
