{
    "name": "sylius/core-bundle",
    "type": "symfony-bundle",
    "description": "Sylius core bundle. It integrates all other bundles into full stack Symfony2 ecommerce solution.",
    "keywords": ["shop", "ecommerce", "store", "webshop", "sylius"],
    "homepage": "http://sylius.org",
    "license": "MIT",
    "authors": [
        {
            "name": "Paweł Jędrzejewski",
            "homepage": "http://pjedrzejewski.com"
        },
        {
            "name": "Sylius project",
            "homepage": "http://sylius.org"
        },
        {
            "name": "Community contributions",
            "homepage": "http://github.com/Sylius/Sylius/contributors"
        }
    ],
    "require": {
        "php": "^5.6|^7.0",

        "fzaninotto/faker": "^1.0",
        "jms/serializer-bundle": "^0.13|^1.0",
        "jms/translation-bundle": "^1.1",
        "knplabs/knp-gaufrette-bundle": "~0.1",
        "mathiasverraes/money": "~1.2",
        "sylius/core": "^1.0",
        "sylius/addressing-bundle": "^1.0",
        "sylius/api-bundle": "^1.0",
        "sylius/attribute-bundle": "^1.0",
        "sylius/cart-bundle": "^1.0",
        "sylius/content-bundle": "^1.0",
        "sylius/currency-bundle": "^1.0",
        "sylius/customer-bundle": "^1.0",
        "sylius/flow-bundle": "^1.0",
        "sylius/fixtures-bundle": "^1.0",
        "sylius/inventory-bundle": "^1.0",
        "sylius/locale-bundle": "^1.0",
        "sylius/money-bundle": "^1.0",
        "sylius/order-bundle": "^1.0",
        "sylius/payment-bundle": "^1.0",
        "sylius/payum-bundle": "^1.0",
        "sylius/pricing-bundle": "^1.0",
        "sylius/product-bundle": "^1.0",
        "sylius/promotion-bundle": "^1.0",
        "sylius/resource-bundle": "^1.0",
        "sylius/settings-bundle": "^1.0",
        "sylius/shipping-bundle": "^1.0",
        "sylius/taxation-bundle": "^1.0",
        "sylius/taxonomy-bundle": "^1.0",
        "sylius/theme-bundle": "^1.0",
        "sylius/user-bundle": "^1.0",
        "sylius/variation-bundle": "^1.0",
        "sylius/association-bundle": "^1.0",
        "sylius/review-bundle": "^1.0",
        "symfony/framework-bundle": "^2.8",
        "symfony-cmf/routing-bundle": "~1.2",
        "swiftmailer/swiftmailer": "~5.0",
        "winzou/state-machine-bundle": "~0.2",
        "sonata-project/intl-bundle": "^2.2",
        "simple-bus/symfony-bridge": "^4.1"
    },
    "require-dev": {
        "hwi/oauth-bundle": "~0.3",
        "matthiasnoback/symfony-config-test": "^2.0",
        "matthiasnoback/symfony-dependency-injection-test": "^1.0",
        "phpspec/phpspec": "^3.0",
        "phpunit/phpunit": "^4.8"
    },
    "suggest": {
        "sylius/web-bundle": "Provides default web interface",
        "sylius/fixtures-bundle": "Provides default Sylius fixtures"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": { "Sylius\\Bundle\\CoreBundle\\": "" }
    },
    "autoload-dev": {
        "psr-4": { "Sylius\\Bundle\\CoreBundle\\spec\\": "spec/" }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../../*/*"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
