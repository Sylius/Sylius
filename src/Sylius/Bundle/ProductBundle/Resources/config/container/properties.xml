<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius.form.type.product_property.class">Sylius\Bundle\ProductBundle\Form\Type\ProductPropertyType</parameter>
        <parameter key="sylius.form.type.property_configuration.class">Sylius\Bundle\ProductBundle\Form\Type\PropertyTextChoiceType</parameter>
        <parameter key="sylius.form.type.property_collection.class">Sylius\Bundle\ProductBundle\Form\Type\PropertyCollectionType</parameter>
    </parameters>

    <services>
        <service id="sylius.controller.property" class="%sylius.controller.property.class%">
            <argument>sylius</argument>
            <argument>property</argument>
            <argument>SyliusProductBundle:Property</argument>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="sylius.form.type.property" class="%sylius.form.type.property.class%">
            <argument>%sylius.model.property.class%</argument>
            <argument>%sylius.validation_group.product%</argument>
            <tag name="form.type" alias="sylius_property" />
        </service>
        <service id="sylius.form.type.property_choice" class="%sylius.form.type.property_choice.class%">
            <argument>%sylius.model.property.class%</argument>
            <tag name="form.type" alias="sylius_property_choice" />
        </service>
        <service id="sylius.form.type.property_collection" class="%sylius.form.type.property_collection.class%">
            <tag name="form.type" alias="sylius_property_collection" />
        </service>
        <service id="sylius.form.type.property_configuration" class="%sylius.form.type.property_configuration.class%">
            <tag name="form.type" alias="sylius_property_configuration" />
        </service>

        <service id="sylius.controller.product_property" class="%sylius.controller.product_property.class%">
            <argument>sylius</argument>
            <argument>product_property</argument>
            <argument>SyliusProductBundle:ProductProperty</argument>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="sylius.form.type.product_property" class="%sylius.form.type.product_property.class%">
            <argument>%sylius.model.product_property.class%</argument>
            <argument>%sylius.validation_group.product_property%</argument>
            <argument type="service" id="router" />
            <tag name="form.type" alias="sylius_product_property" />
        </service>
    </services>

</container>
