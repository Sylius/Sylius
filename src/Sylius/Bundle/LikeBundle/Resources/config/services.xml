<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius.event_subscriber.like.load_metadata.class">Sylius\Bundle\LikeBundle\EventListener\LoadMetadataSubscriber</parameter>
    </parameters>

    <services>
        <!--Subscribers-->
        <service id="sylius.event_subscriber.like.load_metadata" class="%sylius.event_subscriber.like.load_metadata.class%">
            <argument>%sylius.like.subjects%</argument>
            <tag name="doctrine.event_subscriber" />
        </service>
    </services>
</container>
