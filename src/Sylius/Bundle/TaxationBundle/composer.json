{
    "name": "sylius/taxation-bundle",
    "type": "symfony-bundle",
    "description": "Flexible taxation system for Symfony2 ecommerce applications.",
    "keywords": ["tax", "taxes", "taxation", "shop", "webshop", "ecommerce"],
    "homepage": "http://sylius.org",
    "license": "MIT",
    "authors": [
        {
            "name": "Paweł Jędrzejewski",
            "homepage": "http://pjedrzejewski.com"
        },
        {
            "name": "Sylius project",
            "homepage": "http://sylius.org"
        },
        {
            "name": "Community contributions",
            "homepage": "http://github.com/Sylius/Sylius/contributors"
        }
    ],
    "require": {
        "php": "^7.1",

        "stof/doctrine-extensions-bundle": "^1.2",
        "sylius/registry": "^1.0",
        "sylius/resource-bundle": "^1.0",
        "sylius/taxation": "^1.0",
        "symfony/framework-bundle": "^3.4"
    },
    "require-dev": {
        "doctrine/orm": "~2.5.0",
        "phpspec/phpspec": "^4.0",
        "phpunit/phpunit": "^5.6",
        "symfony/form": "^3.4",
        "symfony/browser-kit": "^3.4",
        "symfony/dependency-injection": "^3.4",
        "incenteev/composer-parameter-handler": "~2.0",
        "polishsymfonycommunity/symfony-mocker-container": "^1.0"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": { "Sylius\\Bundle\\TaxationBundle\\": "" }
    },
    "autoload-dev": {
        "psr-4": {
            "Sylius\\Bundle\\TaxationBundle\\spec\\": "spec/",
            "AppBundle\\": "test/src/AppBundle/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../../*/*"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.1-dev"
        },
        "incenteev-parameters": {
            "file": "test/app/config/parameters.yml"
        }
    }
}
