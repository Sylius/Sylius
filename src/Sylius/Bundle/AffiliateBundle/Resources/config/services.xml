<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius.listener.banner_upload.class">Sylius\Bundle\AffiliateBundle\EventListener\ImageUploadListener</parameter>
        <parameter key="sylius.listener.referral.class">Sylius\Bundle\AffiliateBundle\EventListener\ReferralListener</parameter>
        <parameter key="sylius.listener.referral_code_generator.class">Sylius\Bundle\AffiliateBundle\EventListener\ReferralCodeGeneratorListener</parameter>
        <parameter key="sylius.event_subscriber.affiliate.load_metadata.class">Sylius\Bundle\AffiliateBundle\EventListener\LoadMetadataSubscriber</parameter>

        <parameter key="sylius.generator.invitation_instructions.class">Sylius\Component\Affiliate\Generator\Instruction</parameter>
        <parameter key="sylius.generator.invitation_generator.class">Sylius\Component\Affiliate\Generator\InvitationGenerator</parameter>

        <parameter key="sylius.affiliate_goal_processor.class">Sylius\Component\Affiliate\Processor\AffiliateProcessor</parameter>

        <parameter key="sylius.affiliate_goal_eligibility_checker.class">Sylius\Component\Affiliate\Checker\AffiliateEligibilityChecker</parameter>
        <parameter key="sylius.affiliate_goal_rule_checker.nth_action.class">Sylius\Component\Affiliate\Checker\NthActionChecker</parameter>
        <parameter key="sylius.affiliate_goal_applicator.class">Sylius\Component\Affiliate\Action\AffiliateApplicator</parameter>

        <parameter key="sylius.affiliate_goal_action.fixed_provision.class">Sylius\Component\Affiliate\Action\FixedProvisionAction</parameter>

        <parameter key="sylius.registry.affiliate_goal_rule_checker.class">Sylius\Component\Registry\ServiceRegistry</parameter>
        <parameter key="sylius.registry.affiliate_goal_action.class">Sylius\Component\Registry\ServiceRegistry</parameter>

        <parameter key="sylius.form.type.affiliate.class">Sylius\Bundle\AffiliateBundle\Form\Type\AffiliateType</parameter>

        <parameter key="sylius.form.type.invitations.class">Sylius\Bundle\AffiliateBundle\Form\Type\InvitationsType</parameter>

        <parameter key="sylius.form.type.affiliate_goal.class">Sylius\Bundle\AffiliateBundle\Form\Type\GoalType</parameter>
        <parameter key="sylius.form.type.affiliate_goal_rule.class">Sylius\Bundle\AffiliateBundle\Form\Type\RuleType</parameter>
        <parameter key="sylius.form.type.affiliate_goal_rule.collection.class">Sylius\Bundle\AffiliateBundle\Form\Type\RuleCollectionType</parameter>
        <parameter key="sylius.form.type.affiliate_goal_action.class">Sylius\Bundle\AffiliateBundle\Form\Type\ActionType</parameter>
        <parameter key="sylius.form.type.affiliate_goal_action.collection.class">Sylius\Bundle\AffiliateBundle\Form\Type\ActionCollectionType</parameter>
        <parameter key="sylius.form.type.affiliate_goal_rule_choice.class">Sylius\Bundle\AffiliateBundle\Form\Type\RuleChoiceType</parameter>
        <parameter key="sylius.form.type.affiliate_goal_rule.nth_action_configuration.class">Sylius\Bundle\AffiliateBundle\Form\Type\Rule\NthActionConfigurationType</parameter>
        <parameter key="sylius.form.type.affiliate_goal_action_choice.class">Sylius\Bundle\AffiliateBundle\Form\Type\ActionChoiceType</parameter>
        <parameter key="sylius.form.type.affiliate_goal_action.fixed_provision_configuration.class">Sylius\Bundle\AffiliateBundle\Form\Type\Action\FixedProvisionConfigurationType</parameter>
        <parameter key="sylius.form.type.affiliate_goal_action.percentage_provision_configuration.class">Sylius\Bundle\AffiliateBundle\Form\Type\Action\PercentageProvisionConfigurationType</parameter>
    </parameters>

    <services>
        <service id="sylius.listener.banner_upload" class="%sylius.listener.banner_upload.class%">
            <argument type="service" id="sylius.image_uploader" />
            <tag name="kernel.event_listener" event="sylius.affiliate_banner.pre_create" method="uploadBannerImage" />
            <tag name="kernel.event_listener" event="sylius.affiliate_banner.pre_update" method="uploadBannerImage" />
        </service>

        <service id="sylius.listener.referral_code_generator" class="%sylius.listener.referral_code_generator.class%">
            <argument type="service" id="sylius.repository.affiliate" />
            <argument type="service" id="sylius.manager.affiliate" />
            <tag name="kernel.event_listener" event="sylius.affiliate.pre_create" method="generateReferralCode" />
        </service>

        <service id="sylius.listener.referral" class="%sylius.listener.referral.class%">
            <argument type="service" id="security.context" />
            <argument type="service" id="sylius.repository.affiliate" />
            <argument /> <!-- Query parameter name -->
            <argument /> <!-- Cookie name -->
            <argument /> <!-- Cookie lifetime -->
            <tag name="kernel.event_listener" event="kernel.response" method="onKernelResponse" />
        </service>

        <service id="sylius.event_subscriber.affiliate.load_metadata" class="%sylius.event_subscriber.affiliate.load_metadata.class%">
            <argument /> <!-- AffiliateGoal model -->
            <argument /> <!-- Referral model -->
            <tag name="doctrine.event_subscriber" />
        </service>

        <service id="sylius.generator.invitation_generator" class="%sylius.generator.invitation_generator.class%">
            <argument type="service" id="sylius.repository.invitation" />
            <argument type="service" id="sylius.manager.invitation" />
            <argument type="service" id="sylius.email_sender" />
        </service>

        <service id="sylius.affiliate_goal_eligibility_checker" class="%sylius.affiliate_goal_eligibility_checker.class%">
            <argument type="service" id="sylius.registry.affiliate_goal_rule_checker" />
            <argument type="service" id="event_dispatcher" />
        </service>
        <service id="sylius.affiliate_goal_rule_checker.nth_action" class="%sylius.affiliate_goal_rule_checker.nth_action.class%">
            <tag name="sylius.affiliate_goal_rule_checker" type="nth_action" label="Nth action" />
        </service>

        <service id="sylius.affiliate_goal_applicator" class="%sylius.affiliate_goal_applicator.class%">
            <argument type="service" id="sylius.registry.affiliate_goal_action" />
        </service>
        <service id="sylius.affiliate_goal_action.fixed_provision" class="%sylius.affiliate_goal_action.fixed_provision.class%">
            <argument type="service" id="sylius.repository.transaction" />
            <tag name="sylius.affiliate_goal_action" type="fixed_provision" label="Fixed provision" />
        </service>

        <service id="sylius.registry.affiliate_goal_rule_checker" class="%sylius.registry.affiliate_goal_rule_checker.class%">
            <argument>Sylius\Component\Affiliate\Checker\RuleCheckerInterface</argument>
        </service>
        <service id="sylius.registry.affiliate_goal_action" class="%sylius.registry.affiliate_goal_action.class%">
            <argument>Sylius\Component\Affiliate\Action\AffiliateActionInterface</argument>
        </service>

        <service id="sylius.form.type.affiliate_goal_rule.collection" class="%sylius.form.type.affiliate_goal_rule.collection.class%">
            <argument type="service" id="sylius.registry.affiliate_goal_rule_checker" />
            <tag name="form.type" alias="sylius_affiliate_goal_rule_collection" />
        </service>
        <service id="sylius.form.type.affiliate_goal_action.collection" class="%sylius.form.type.affiliate_goal_action.collection.class%">
            <argument type="service" id="sylius.registry.affiliate_goal_action" />
            <tag name="form.type" alias="sylius_affiliate_goal_action_collection" />
        </service>

        <service id="sylius.form.type.affiliate_goal_rule.collection" class="%sylius.form.type.affiliate_goal_rule.collection.class%">
            <argument type="service" id="sylius.registry.affiliate_goal_rule_checker" />
            <tag name="form.type" alias="sylius_affiliate_goal_rule_collection" />
        </service>
        <service id="sylius.form.type.affiliate_goal_action.collection" class="%sylius.form.type.affiliate_goal_action.collection.class%">
            <argument type="service" id="sylius.registry.affiliate_goal_action" />
            <tag name="form.type" alias="sylius_affiliate_goal_action_collection" />
        </service>
        
        <service id="sylius.form.type.affiliate_goal" class="%sylius.form.type.affiliate_goal.class%">
            <argument>%sylius.model.affiliate_goal.class%</argument>
            <argument>%sylius.validation_group.affiliate_goal%</argument>
            <tag name="form.type" alias="sylius_affiliate_goal" />
        </service>
        <service id="sylius.form.type.affiliate_goal_rule" class="%sylius.form.type.affiliate_goal_rule.class%">
            <argument>%sylius.model.affiliate_rule.class%</argument>
            <argument>%sylius.validation_group.affiliate_rule%</argument>
            <argument type="service" id="sylius.registry.affiliate_goal_rule_checker" />
            <tag name="form.type" alias="sylius_affiliate_goal_rule" />
        </service>
        <service id="sylius.form.type.affiliate_goal_action" class="%sylius.form.type.affiliate_goal_action.class%">
            <argument>%sylius.model.affiliate_action.class%</argument>
            <argument>%sylius.validation_group.affiliate_action%</argument>
            <argument type="service" id="sylius.registry.affiliate_goal_action" />
            <tag name="form.type" alias="sylius_affiliate_goal_action" />
        </service>
        <service id="sylius.form.type.affiliate_goal_rule_choice" class="%sylius.form.type.affiliate_goal_rule_choice.class%">
            <argument>%sylius.affiliate_goal_rules%</argument>
            <tag name="form.type" alias="sylius_affiliate_goal_rule_choice" />
        </service>
        <service id="sylius.form.type.affiliate_goal_rule.nth_action_configuration" class="%sylius.form.type.affiliate_goal_rule.nth_action_configuration.class%">
            <argument>%sylius.validation_group.affiliate_goal_rule_nth_action_configuration%</argument>
            <tag name="form.type" alias="sylius_affiliate_goal_rule_nth_action_configuration" />
        </service>
        <service id="sylius.form.type.affiliate_goal_action_choice" class="%sylius.form.type.affiliate_goal_action_choice.class%">
            <argument>%sylius.affiliate_goal_actions%</argument>
            <tag name="form.type" alias="sylius_affiliate_goal_action_choice" />
        </service>
        <service id="sylius.form.type.affiliate_goal_action.fixed_provision_configuration" class="%sylius.form.type.affiliate_goal_action.fixed_provision_configuration.class%">
            <argument>%sylius.validation_group.affiliate_goal_action_fixed_provision_configuration%</argument>
            <tag name="form.type" alias="sylius_affiliate_goal_action_fixed_provision_configuration" />
        </service>
        <service id="sylius.form.type.affiliate_goal_action.percentage_provision_configuration" class="%sylius.form.type.affiliate_goal_action.percentage_provision_configuration.class%">
            <argument>%sylius.validation_group.affiliate_goal_action_percentage_provision_configuration%</argument>
            <tag name="form.type" alias="sylius_affiliate_goal_action_percentage_provision_configuration" />
        </service>

        <service id="sylius.form.type.affiliate" class="%sylius.form.type.affiliate.class%">
            <argument>%sylius.model.affiliate.class%</argument>
            <argument>%sylius.validation_group.affiliate%</argument>
            <tag name="form.type" alias="sylius_affiliate" />
        </service>

        <service id="sylius.form.type.affiliate_banner" class="%sylius.form.type.affiliate_banner.class%">
            <argument>%sylius.model.affiliate_banner.class%</argument>
            <tag name="form.type" alias="sylius_affiliate_banner" />
        </service>

        <service id="sylius.form.type.affiliate_invitations" class="%sylius.form.type.invitations.class%">
            <tag name="form.type" alias="sylius_affiliate_invitations" />
        </service>
    </services>

</container>
