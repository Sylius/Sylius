<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <mapped-superclass name="Sylius\Component\Affiliate\Model\Rule" table="sylius_affiliate_rule">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="type" type="string" />
        <field name="configuration" type="array" />

        <many-to-one field="goal" target-entity="Sylius\Component\Affiliate\Model\GoalInterface" inversed-by="rules">
            <join-column name="hoal_id" referenced-column-name="id" nullable="true" />
        </many-to-one>
    </mapped-superclass>

</doctrine-mapping>
