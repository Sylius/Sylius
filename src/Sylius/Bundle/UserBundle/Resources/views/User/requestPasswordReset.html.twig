{% extends 'SyliusUserBundle::layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>{{ 'sylius.ui.reset_password'|trans }}</h1>
</div>

<form action="{{ path('sylius_user_request_password_reset_token') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
    <fieldset>
        {{ form_row(form.email) }}
    </fieldset>
    {{ form_rest(form) }}

    <div class="form-actions clearfix">
        <button class="btn btn-primary" type="submit">
            <i class="icon-lock"></i>
            {{ 'sylius.ui.reset'|trans }}
        </button>
    </div>
</form>
{% endblock %}
