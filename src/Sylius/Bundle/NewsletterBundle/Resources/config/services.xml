<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sylius.form.type.subscriber" class="%sylius.form.type.subscriber.class%">
            <argument>%sylius.model.subscriber.class%</argument>
            <argument>%sylius.validation_group.subscriber%</argument>
            <tag name="form.type" alias="sylius_subscriber"/>
        </service>
        <service id="sylius.form.type.subscription_list"
                 class="%sylius.form.type.subscription_list.class%">
            <argument>%sylius.model.subscription_list.class%</argument>
            <argument>%sylius.validation_group.subscription_list%</argument>
            <tag name="form.type" alias="sylius_subscription_list"/>
        </service>
    </services>
</container>
