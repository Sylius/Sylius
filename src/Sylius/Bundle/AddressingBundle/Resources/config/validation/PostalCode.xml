<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                     http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd"
>
    <class name="Sylius\Component\Addressing\Model\PostalCode">
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">
                <value>postCode</value>
                <value>country</value>
            </option>
            <option name="errorPath">name</option>
            <option name="message">sylius.postcode.unique</option>
        </constraint>

        <property name="postCode">
            <constraint name="NotBlank" />
            <constraint name="Range">
                <option name="min">0</option>
                <option name="minMessage">sylius.postcode.code.not_negative</option>
                <option name="groups">sylius</option>
            </constraint>
        </property>

        <property name="name">
            <constraint name="NotBlank">
                <option name="message">sylius.postcode.name.not_blank</option>
                <option name="groups">sylius</option>
            </constraint>
            <constraint name="Length">
                <option name="max">255</option>
                <option name="maxMessage">sylius.postcode.name.max_length</option>
                <option name="groups">sylius</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>