{
    "name": "sylius/sales-bundle",
    "type": "symfony-bundle",
    "description": "Sales order management for Symfony2 applications.",
    "keywords": ["shop", "ecommerce", "sales", "orders", "order", "sylius"],
    "homepage": "http://sylius.org",
    "license": "MIT",
    "authors": [
        {
            "name": "Paweł Jędrzejewski",
            "email": "pjedrzejewski@diweb.pl",
            "homepage": "http://pjedrzejewski.com"
        },
        {
            "name": "Community contributions",
            "homepage": "https://github.com/Sylius/SyliusSalesBundle/contributors"
        }
    ],
    "require": {
        "php": ">=5.3.3",

        "symfony/framework-bundle":        "~2.3",
        "sylius/resource-bundle":          "1.0.*@dev",
        "stof/doctrine-extensions-bundle": "1.1.*"
    },
    "require-dev": {
        "phpspec/phpspec":    "2.0.*@dev",
        "doctrine/orm":       "~2.2",
        "symfony/form":       "~2.3",
        "symfony/validator":  "~2.3"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": { "Sylius\\Bundle\\SalesBundle\\": "" }
    },
    "target-dir": "Sylius/Bundle/SalesBundle",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
