<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sylius.oauth_server.client_manager" class="Sylius\Bundle\ApiBundle\Model\ClientManager">
            <argument type="service" id="fos_oauth_server.entity_manager" />
            <argument>%fos_oauth_server.model.client.class%</argument>
        </service>

        <!-- Forms -->
        <service id="sylius.form.type.api.order" class="Sylius\Bundle\ApiBundle\Form\Type\OrderType">
            <argument>%sylius.model.order.class%</argument>
            <tag name="form.type" />
        </service>
        <service id="sylius.form.type.api.order_item" class="Sylius\Bundle\ApiBundle\Form\Type\OrderItemType">
            <argument>%sylius.model.order_item.class%</argument>
            <argument type="collection"/>
            <argument type="service" id="sylius.form.data_mapper.order_item_quantity"/>
            <tag name="form.type" />
        </service>
    </services>
</container>
