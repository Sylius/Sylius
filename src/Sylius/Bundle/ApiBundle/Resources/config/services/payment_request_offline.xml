<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="sylius.api.payment_request.command_provider.offline.capture" class="Sylius\Bundle\ApiBundle\Payment\Offline\CapturePaymentRequestCommandProvider">
            <tag name="sylius.api.payment_request.command_provider" factory="offline" type="capture" priority="-100" />
        </service>

        <service id="sylius.api.payment_request.offline.capture" class="Sylius\Bundle\ApiBundle\CommandHandler\Payment\Offline\CapturePaymentRequestHandler">
            <argument type="service" id="sylius.repository.payment_request" />
            <argument type="service" id="Sylius\Bundle\ApiBundle\Payment\Offline\CapturePaymentRequestProcessorInterface" />
            <argument type="service" id="Sylius\Bundle\ApiBundle\Applicator\PaymentStateMachineTransitionApplicatorInterface" />
            <tag name="messenger.message_handler" bus="sylius.command_bus" />
            <tag name="messenger.message_handler" bus="sylius_default.bus" />
        </service>

        <service id="Sylius\Bundle\ApiBundle\Payment\Offline\CapturePaymentRequestProcessorInterface" class="Sylius\Bundle\ApiBundle\Payment\Offline\CapturePaymentRequestProcessor" />

    </services>
</container>
