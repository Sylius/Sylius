<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="Sylius\Bundle\ApiBundle\Controller\Payment\GetPaymentConfiguration">
            <argument type="service" id="sylius.repository.payment" />
            <argument type="service" id="Sylius\Bundle\ApiBundle\Provider\CompositePaymentConfigurationProvider" />
        </service>

        <service id="sylius.api.payment_request.command_provider.locator" class="Symfony\Component\DependencyInjection\ServiceLocator">
            <tag name="container.service_locator" />
        </service>

        <service id="Sylius\Bundle\ApiBundle\Payment\Checker\PaymentRequestDuplicationChecker">
            <argument type="service" id="sylius.repository.payment_request" />
        </service>

        <service id="Sylius\Bundle\ApiBundle\Payment\PaymentRequestCommandProvider">
            <argument type="service" id="Sylius\Bundle\ApiBundle\Payment\Checker\PaymentRequestDuplicationChecker" />
            <argument type="service" id="sylius.api.payment_request.command_provider.locator" />
        </service>

    </services>
</container>
