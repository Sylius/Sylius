<resources xmlns="https://api-platform.com/schema/metadata"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="https://api-platform.com/schema/metadata https://api-platform.com/schema/metadata/metadata-2.0.xsd"
>
    <resource class="Sylius\Bundle\ApiBundle\Command\VerifyCustomerAccount" shortName="VerifyCustomerAccount">
        <attribute name="route_prefix">shop</attribute>
        <attribute name="messenger">input</attribute>

        <collectionOperations />

        <itemOperations>
            <itemOperation name="shop_verify_customer_account">
                <attribute name="method">PATCH</attribute>
                <attribute name="path">/verify-account/{id}</attribute>
                <attribute name="input">Sylius\Bundle\ApiBundle\Command\VerifyCustomerAccount</attribute>
                <attribute name="output">false</attribute>
                <attribute name="status">202</attribute>
                <attribute name="denormalization_context">
                    <attribute name="groups">shop:customer:verify</attribute>
                </attribute>
                <attribute name="openapi_context">
                    <attribute name="summary">Verify Customer account</attribute>
                </attribute>
            </itemOperation>
        </itemOperations>

        <property name="token" identifier="true" />
    </resource>
</resources>
