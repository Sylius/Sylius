<resources
    xmlns="https://api-platform.com/schema/metadata/resources-3.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://api-platform.com/schema/metadata/resources-3.0 https://api-platform.com/schema/metadata/resources-3.0.xsd"
>
    <resource class="Sylius\Component\Core\Model\TaxonImage">
        <validationContext>
            <values>
                <value name="groups">
                    <values>
                        <value>sylius</value>
                    </values>
                </value>
            </values>
        </validationContext>

        <operations>
            <operation class="ApiPlatform\Metadata\GetCollection" uriTemplate="/admin/taxon-images">
                <normalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius:admin:taxon_image:index</value>
                            </values>
                        </value>
                    </values>
                </normalizationContext>
                <openapiContext>
                    <values>
                        <value name="parameters">
                            <values>
                                <value name="imageFilter">
                                    <values>
                                        <value name="name">imageFilter</value>
                                        <value name="in">query</value>
                                        <value name="description">Provide one of supported image liip imagine filters</value>
                                        <value name="schema">
                                            <values>
                                                <value name="type">string</value>
                                            </values>
                                        </value>
                                    </values>
                                </value>
                            </values>
                        </value>
                    </values>
                </openapiContext>
            </operation>

            <operation
                class="ApiPlatform\Metadata\Post"
                uriTemplate="/admin/taxons/{code}/images"
                controller="Sylius\Bundle\ApiBundle\Controller\UploadTaxonImageAction"
                deserialize="false"
            >
                <uriVariables>
                    <uriVariable parameterName="code" fromClass="Sylius\Component\Core\Model\Taxon" fromProperty="images"/>
                </uriVariables>
                <inputFormats>
                    <format name="multipart">multipart/form-data</format>
                </inputFormats>
                <openapiContext>
                    <values>
                        <value name="parameters">
                            <values>
                                <value name="code">
                                    <values>
                                        <value name="name">code</value>
                                        <value name="in">path</value>
                                        <value name="required">true</value>
                                        <value name="schema">
                                            <values>
                                                <value name="type">string</value>
                                            </values>
                                        </value>
                                    </values>
                                </value>
                            </values>
                        </value>
                        <value name="requestBody">
                            <values>
                                <value name="content">
                                    <values>
                                        <value name="multipart/form-data">
                                            <values>
                                                <value name="schema">
                                                    <values>
                                                        <value name="type">object</value>
                                                        <value name="properties">
                                                            <values>
                                                                <value name="file">
                                                                    <values>
                                                                        <value name="type">string</value>
                                                                        <value name="format">binary</value>
                                                                    </values>
                                                                </value>
                                                                <value name="type">
                                                                    <values>
                                                                        <value name="type">string</value>
                                                                    </values>
                                                                </value>

                                                            </values>
                                                        </value>
                                                    </values>
                                                </value>
                                            </values>
                                        </value>
                                    </values>
                                </value>
                            </values>
                        </value>
                    </values>
                </openapiContext>
                <normalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius:admin:taxon_image:show</value>
                            </values>
                        </value>
                    </values>
                </normalizationContext>
            </operation>

            <operation class="ApiPlatform\Metadata\Get" uriTemplate="/admin/taxon-images/{id}">
                <normalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius:admin:taxon_image:show</value>
                            </values>
                        </value>
                    </values>
                </normalizationContext>
                <openapiContext>
                    <values>
                        <value name="parameters">
                            <values>
                                <value name="imageFilter">
                                    <values>
                                        <value name="name">imageFilter</value>
                                        <value name="in">query</value>
                                        <value name="description">Provide one of supported image liip imagine filters</value>
                                        <value name="schema">
                                            <values>
                                                <value name="type">string</value>
                                            </values>
                                        </value>
                                    </values>
                                </value>
                            </values>
                        </value>
                    </values>
                </openapiContext>
            </operation>

            <operation class="ApiPlatform\Metadata\Put" uriTemplate="/admin/taxon-images/{id}">
                <denormalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius:admin:taxon_image:update</value>
                            </values>
                        </value>
                    </values>
                </denormalizationContext>
                <normalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius:admin:taxon_image:show</value>
                            </values>
                        </value>
                    </values>
                </normalizationContext>
            </operation>

            <operation class="ApiPlatform\Metadata\Delete" uriTemplate="/admin/taxon-images/{id}" />


            <operation class="ApiPlatform\Metadata\Get" uriTemplate="/shop/taxon-images/{id}">
                <normalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius:shop:taxon_image:show</value>
                            </values>
                        </value>
                    </values>
                </normalizationContext>
                <openapiContext>
                    <values>
                        <value name="parameters">
                            <values>
                                <value name="imageFilter">
                                    <values>
                                        <value name="name">imageFilter</value>
                                        <value name="in">query</value>
                                        <value name="description">Provide one of supported image liip imagine filters</value>
                                        <value name="schema">
                                            <values>
                                                <value name="type">string</value>
                                            </values>
                                        </value>
                                    </values>
                                </value>
                            </values>
                        </value>
                    </values>
                </openapiContext>
            </operation>

        </operations>
    </resource>

</resources>
