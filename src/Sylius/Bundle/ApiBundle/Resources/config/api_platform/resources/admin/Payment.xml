<resources
    xmlns="https://api-platform.com/schema/metadata/resources-3.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://api-platform.com/schema/metadata/resources-3.0 https://api-platform.com/schema/metadata/resources-3.0.xsd"
>
    <resource class="Sylius\Component\Core\Model\Payment">
        <operations>
            <operation class="ApiPlatform\Metadata\GetCollection" uriTemplate="/admin/payments">
                <normalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius:admin:payment:index</value>
                            </values>
                        </value>
                    </values>
                </normalizationContext>
                <filters>
                    <filter>sylius_api.search_filter.admin.payment</filter>
                    <filter>sylius_api.order_filter.admin.payment</filter>
                </filters>
                <order>
                    <values>
                        <value name="createdAt">DESC</value>
                    </values>
                </order>
            </operation>

            <operation class="ApiPlatform\Metadata\Get" uriTemplate="/admin/payments/{id}">
                <normalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius:admin:payment:show</value>
                            </values>
                        </value>
                    </values>
                </normalizationContext>
            </operation>

            <operation
                class="ApiPlatform\Metadata\Patch"
                uriTemplate="/admin/payments/{id}/complete"
                input="false"
                controller="Sylius\Bundle\ApiBundle\Applicator\PaymentStateMachineTransitionApplicatorInterface::complete"
            >
                <normalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius:admin:payment:show</value>
                            </values>
                        </value>
                    </values>
                </normalizationContext>
                <validationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius</value>
                            </values>
                        </value>
                    </values>
                </validationContext>
                <openapiContext>
                    <values>
                        <value name="summary">Completes Payment.</value>
                    </values>
                </openapiContext>
            </operation>

            <operation
                class="ApiPlatform\Metadata\Patch"
                uriTemplate="/admin/payments/{id}/refund"
                input="false"
                controller="Sylius\Bundle\ApiBundle\Applicator\PaymentStateMachineTransitionApplicatorInterface::refund"
            >
                <normalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius:admin:payment:show</value>
                            </values>
                        </value>
                    </values>
                </normalizationContext>
                <validationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius</value>
                            </values>
                        </value>
                    </values>
                </validationContext>
                <openapiContext>
                    <values>
                        <value name="summary">Refunds Payment.</value>
                    </values>
                </openapiContext>
            </operation>
        </operations>
    </resource>

    <resource class="Sylius\Component\Core\Model\Payment" uriTemplate="/admin/orders/{tokenValue}/payments">
        <uriVariables>
            <uriVariable parameterName="tokenValue" fromClass="Sylius\Component\Core\Model\Order" fromProperty="payments"/>
        </uriVariables>
        <operations>
            <operation class="ApiPlatform\Metadata\GetCollection">
                <normalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius:admin:payment:index</value>
                            </values>
                        </value>
                    </values>
                </normalizationContext>
            </operation>
        </operations>
    </resource>
</resources>
