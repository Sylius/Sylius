<resources
    xmlns="https://api-platform.com/schema/metadata/resources-3.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://api-platform.com/schema/metadata/resources-3.0 https://api-platform.com/schema/metadata/resources-3.0.xsd"
>
    <resource class="%sylius.model.locale.class%">
        <operations>
            <operation
                name="sylius_api_admin_locale_get_collection"
                class="ApiPlatform\Metadata\GetCollection"
                uriTemplate="/admin/locales"
            >
                <normalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius:admin:locale:index</value>
                            </values>
                        </value>
                    </values>
                </normalizationContext>
                <filters>
                    <filter>sylius_api.search_filter.admin.locale</filter>
                </filters>
            </operation>

            <operation name="sylius_api_admin_locale_get" class="ApiPlatform\Metadata\Get" uriTemplate="/admin/locales/{code}">
                <normalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius:admin:locale:show</value>
                            </values>
                        </value>
                    </values>
                </normalizationContext>
            </operation>

            <operation name="sylius_api_admin_locale_post" class="ApiPlatform\Metadata\Post" uriTemplate="/admin/locales">
                <denormalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius:admin:locale:create</value>
                            </values>
                        </value>
                    </values>
                </denormalizationContext>
                <normalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius:admin:locale:show</value>
                            </values>
                        </value>
                    </values>
                </normalizationContext>
                <validationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>sylius</value>
                            </values>
                        </value>
                    </values>
                </validationContext>
            </operation>

            <operation
                name="sylius_api_admin_locale_delete"
                class="ApiPlatform\Metadata\Delete"
                uriTemplate="/admin/locales/{code}"
                processor="sylius_api.state_processor.admin.locale.remove"
            />
        </operations>
    </resource>
</resources>
