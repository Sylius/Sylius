{
    "name": "sylius/api-bundle",
    "type": "symfony-bundle",
    "description": "APIs management for Symfony projects.",
    "keywords": [
        "api",
        "rest"
    ],
    "homepage": "https://sylius.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Paweł Jędrzejewski",
            "homepage": "https://pjedrzejewski.com"
        },
        {
            "name": "Sylius project",
            "homepage": "https://sylius.com"
        },
        {
            "name": "Community contributions",
            "homepage": "https://github.com/Sylius/Sylius/contributors"
        }
    ],
    "require": {
        "php": "^8.2",
        "doctrine/dbal": "^3.9",
        "api-platform/core": "^4.0",
        "enshrined/svg-sanitize": "^0.20",
        "lexik/jwt-authentication-bundle": "^3.1",
        "sylius/core-bundle": "^2.0",
        "sylius/payum-bundle": "^2.0",
        "symfony/messenger": "^6.4 || ^7.1"
    },
    "require-dev": {
        "ext-sqlite3": "*",
        "matthiasnoback/symfony-config-test": "^5.1",
        "matthiasnoback/symfony-dependency-injection-test": "^5.1",
        "nelmio/alice": "^3.13",
        "phparkitect/phparkitect": "^0.3",
        "phpspec/phpspec": "^7.5",
        "phpspec/prophecy-phpunit": "^2.2",
        "phpunit/phpunit": "^9.5",
        "symfony/browser-kit": "^6.4 || ^7.1",
        "symfony/debug-bundle": "^6.4 || ^7.1",
        "symfony/dotenv": "^6.4 || ^7.1",
        "symfony/webpack-encore-bundle": "^2.2",
        "theofidry/alice-data-fixtures": "^1.7"
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.0-dev"
        },
        "symfony": {
            "require": "^7.1"
        }
    },
    "autoload": {
        "psr-4": {
            "Sylius\\Bundle\\ApiBundle\\": ""
        },
        "exclude-from-classmap": [
            "spec/",
            "Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\Sylius\\Bundle\\ApiBundle\\": "spec/",
            "Sylius\\Bundle\\ApiBundle\\Application\\": "Tests/Application/src/",
            "Sylius\\Bundle\\ApiBundle\\Tests\\": "Tests/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../*/*"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
