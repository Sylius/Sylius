<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="sylius.form.type.money" class="Sylius\Bundle\MoneyBundle\Form\Type\MoneyType">
            <tag name="form.type" />
        </service>

        <service id="sylius.formatter.money" class="Sylius\Bundle\MoneyBundle\Formatter\MoneyFormatter" />
        <service id="Sylius\Bundle\MoneyBundle\Formatter\MoneyFormatterInterface" alias="sylius.formatter.money" />

        <service id="sylius.twig.extension.format_money" class="Sylius\Bundle\MoneyBundle\Twig\FormatMoneyExtension" public="false">
            <argument type="service" id="sylius.formatter.money" />
            <tag name="twig.extension" />
        </service>
    </services>
</container>
