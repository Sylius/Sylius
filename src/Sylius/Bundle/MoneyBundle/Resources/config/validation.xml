<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                                        http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">

    <class name="Sylius\Component\Money\Model\ExchangeRate">
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">currency</option>
            <option name="message">sylius.exchange_rate.unique</option>
        </constraint>
        <property name="currency">
            <constraint name="NotBlank">
                <option name="message">sylius.exchange_rate.currency.not_blank</option>
            </constraint>
            <constraint name="Length">
                <option name="min">3</option>
                <option name="max">3</option>
                <option name="exactMessage">sylius.exchange_rate.currency.exact_length</option>
            </constraint>
        </property>
        <property name="rate">
            <constraint name="NotBlank">
                <option name="message">sylius.exchange_rate.rate.not_blank</option>
            </constraint>
        </property>
    </class>

</constraint-mapping>
