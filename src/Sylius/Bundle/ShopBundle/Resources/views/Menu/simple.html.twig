{% extends 'knp_menu.html.twig' %}

{% block root %}
    <div>{{ item.label|trans }}</div>
    {{ block('list') }}
{% endblock %}

{% block list %}
    {% for item in item.children %}
        {{ block('item') }}
    {% endfor %}
{% endblock %}

{% block item %}
    <a href="{{ item.uri }}">
        {{ block('icon') }}
        {{ item.label|trans }}
    </a>
{% endblock %}

{% block icon %}
    {% set icon = item.labelAttribute('icon') %}
    {% if icon %}<i class="{{ icon }}"></i> {% endif %}
{% endblock %}
