{% if locales|length > 1 %}
    <div class="ui pointing dropdown link item" id="sylius-locale-selector" xmlns="http://www.w3.org/1999/html">
        <span class="text sylius-active-locale">{{ active|sylius_locale_name }}</span>
        <i class="dropdown icon"></i>
        <div class="menu">
            {% for code in locales %}
                {% if code is not same as(active) %}
                    <form action="{{ path('sylius_shop_switch_locale', {'code': code}) }}" method="post" >
                        <button type="submit" class="item sylius-available-locale">
                            {{ code|sylius_locale_name }}
                        </button>
                    </form>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endif %}
