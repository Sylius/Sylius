{% extends '@SyliusShop/Email/layout.html.twig' %}

{% block subject %}
    Email address verification
{% endblock %}

{% block content %}
    {% set url = channel.hostname is not null ? 'http://' ~ channel.hostname ~ path('sylius_shop_user_verification', { 'token': user.emailVerificationToken}) : url('sylius_shop_user_verification', { 'token': user.emailVerificationToken}) %}

    <div style="text-align: center; margin-bottom: 30px;">
        <div style="font-size: 24px;">Hello <strong>{{ user.username }}</strong><br></div>
        To verify your email address - click the link below:
    </div>

    <div style="text-align: center;">
        <a href="{{ url|raw }}" style="display: inline-block; text-align: center; background: #1abb9c; padding: 18px 28px; color: #fff; text-decoration: none; border-radius: 3px;">
            Verify your email address
        </a>
    </div>
{% endblock %}
