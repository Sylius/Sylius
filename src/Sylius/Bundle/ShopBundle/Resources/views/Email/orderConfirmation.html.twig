{% block subject %}
    {{ 'sylius.emails.order.confirmation.subject'|trans }}
{% endblock %}

{% block body %}
    {% set url = order.channel.hostname is not null ? 'http://' ~ order.channel.hostname ~ path('sylius_shop_order_show', {'tokenValue': order.tokenValue, '_locale': order.localeCode}) : url('sylius_shop_order_show', {'tokenValue': order.tokenValue, '_locale': order.localeCode}) %}
    {% autoescape %}
        {{ 'sylius.emails.order.confirmation.body.success_message'|trans({'%order_number%': order.number})|raw }}
        <br/><br/>
        {{ 'sylius.emails.order.confirmation.body.order_view_link'|trans({'%order_number%': order.number, '%url%': url})|raw }}
        <br/><br/>
        {{ 'sylius.emails.order.confirmation.body.thanks_message'|trans|raw }}
    {% endautoescape %}
{% endblock %}
