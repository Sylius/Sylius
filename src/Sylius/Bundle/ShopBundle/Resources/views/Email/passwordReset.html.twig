{% block subject %}
    {{ 'sylius.emails.user.password_reset.subject'|trans }}
{% endblock %}

{% block body %}
    {% set url = channel.hostname is not null ? 'http://' ~ channel.hostname ~ path('sylius_shop_password_reset', { 'token': user.passwordResetToken}) : url('sylius_shop_password_reset', { 'token': user.passwordResetToken}) %}
    {% autoescape %}
        {{ 'sylius.emails.user.password_reset.body.hello_message'|trans({'%username%': user.username})|raw }}
        <br/><br/>
        {{ 'sylius.emails.user.password_reset.body.reset_link'|trans({'%url%': url})|raw }}
        <br/><br/>
        {{ 'sylius.emails.user.password_reset.body.regards_message'|trans|raw }}
    {% endautoescape %}
{% endblock %}
