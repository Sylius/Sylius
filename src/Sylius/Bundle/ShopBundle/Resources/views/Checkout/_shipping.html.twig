{% import "@SyliusShop/Common/Macro/money.html.twig" as money %}

{% for shipment in order.shipments %}
    <div class="ui large icon message">
        <i class="truck icon"></i>
        <div class="content">
            <div class="header">
                {{ shipment.method.name }}
            </div>
            <p>{{ shipment.method.description }}</p>
        </div>
    </div>
{% endfor %}
<p id="shipping-total" style="font-size: 1.5em;">{{ 'sylius.ui.total'|trans}} : {{ money.convertAndFormat(order.getShippingTotal) }}</p>
