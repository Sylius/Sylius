{% import "@SyliusShop/Common/Macro/money.html.twig" as money %}

<div id="variantsPrices" data-unavailable-text="{{ 'sylius.ui.unavailable'|trans }}">
{% for variantPrice in variantsPrices %}
    <div {% for option, value in variantPrice %}data-{{ option }}="{% if option == 'value' %}{{ money.convertAndFormat(value) }}{% else %}{{ value }}{% endif %}" {% endfor %}></div>
{% endfor %}
</div>
