{% if currencies|length > 1 %}
    <div class="ui pointing dropdown link item" id="sylius-currency-selector">
        <span class="text sylius-active-currency">{{ active }}</span>
        <i class="dropdown icon"></i>
        <div class="menu">
            {% for code in currencies %}
                {% if code is not same as(active) %}
                    <form action="{{ path('sylius_shop_switch_currency', {'code': code}) }}" method="post" >
                        <button type="submit" class="item sylius-available-currency">
                            {{ code }}
                        </button>
                    </form>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endif %}
