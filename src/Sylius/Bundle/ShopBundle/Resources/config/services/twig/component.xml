<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service
            id="sylius_shop.twig.component.latest_deals"
            class="Sylius\Bundle\ShopBundle\Twig\Component\Common\LatestDealsComponent"
        >
            <argument type="service" id="sylius.repository.product" />
            <argument type="service" id="sylius.context.locale" />
            <argument type="service" id="sylius.context.channel" />

            <tag
                name="twig.component"
                key="sylius_shop:common:latest_deals"
                template="@SyliusShop/common/latest_deals.html.twig"
            />
        </service>

        <service
            id="sylius_shop.twig.component.latest_products"
            class="Sylius\Bundle\ShopBundle\Twig\Component\Common\LatestProductsComponent"
        >
            <argument type="service" id="sylius.repository.product" />
            <argument type="service" id="sylius.context.locale" />
            <argument type="service" id="sylius.context.channel" />

            <tag
                name="twig.component"
                key="sylius_shop:common:latest_products"
                template="@SyliusShop/common/latest_products.html.twig"
            />
        </service>

        <service
            id="sylius_shop.twig.component.product_card"
            class="Sylius\Bundle\ShopBundle\Twig\Component\Common\ProductCardComponent"
        >
            <argument type="service" id="sylius.repository.product" />
            <argument type="service" id="Sylius\Component\Product\Resolver\ProductVariantResolverInterface" />
            <argument type="service" id="sylius.context.channel" />
            <argument type="service" id="sylius.context.locale" />
            <argument type="service" id="sylius.calculator.product_variant_price" />

            <tag
                name="twig.component"
                key="sylius_shop:common:product_card"
                template="@SyliusShop/product/common/card.html.twig"
            />
        </service>

        <service
            id="sylius_shop.twig.component.product_price"
            class="Sylius\Bundle\ShopBundle\Twig\Component\Common\ProductPriceComponent"
        >
            <argument type="service" id="sylius.calculator.product_variant_price" />
            <argument type="service" id="sylius.templating.helper.format_money" />
            <argument type="service" id="sylius.context.channel" />
            <argument type="service" id="sylius.context.locale" />
            <argument type="service" id="sylius.context.currency" />

            <tag
                name="twig.component"
                key="sylius_shop:common:product_price"
                template="@SyliusShop/product/common/price.html.twig"
            />
        </service>

        <service
            id="sylius_shop.twig.component.product_original_price"
            class="Sylius\Bundle\ShopBundle\Twig\Component\Common\ProductOriginalPriceComponent"
        >
            <argument type="service" id="sylius.calculator.product_variant_price" />
            <argument type="service" id="sylius.templating.helper.format_money" />
            <argument type="service" id="sylius.context.channel" />
            <argument type="service" id="sylius.context.locale" />
            <argument type="service" id="sylius.context.currency" />

            <tag
                name="twig.component"
                key="sylius_shop:common:product_original_price"
                template="@SyliusShop/product/common/original_price.html.twig"
            />
        </service>

        <service
            id="sylius_shop.twig.component.product_summary"
            class="Sylius\Bundle\ShopBundle\Twig\Component\Product\SummaryComponent"
        >
            <argument type="service" id="sylius.product_variant_resolver.default" />

            <tag
                name="sylius.live_component"
                key="sylius_shop:product:show_summary"
                template="@SyliusShop/product/show/page/info/summary.html.twig"
            />
        </service>

        <service
            id="sylius_shop.twig.component.product_show_price"
            class="Sylius\Bundle\ShopBundle\Twig\Component\Product\PriceComponent"
        >
            <argument type="service" id="sylius.calculator.product_variant_price" />
            <argument type="service" id="sylius.templating.helper.format_money" />
            <argument type="service" id="sylius.context.channel" />
            <argument type="service" id="sylius.context.locale" />
            <argument type="service" id="sylius.context.currency" />

            <tag
                name="twig.component"
                key="sylius_shop:product:show_price"
                template="@SyliusShop/product/show/page/info/summary/prices/price.html.twig"
            />
        </service>

        <service
            id="sylius_shop.twig.component.product_add_to_cart_form"
            class="Sylius\Bundle\ShopBundle\Twig\Component\Product\AddToCartFormComponent"
        >
            <argument type="service" id="form.factory" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="router" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="sylius.context.cart" />
            <argument type="service" id="sylius.factory.add_to_cart_command" />
            <argument type="service" id="sylius.factory.order_item" />
            <argument>Sylius\Bundle\ShopBundle\Form\Type\AddToCartType</argument>

            <call method="setLiveResponder">
                <argument type="service" id="ux.live_component.live_responder"/>
            </call>

            <tag
                name="sylius.live_component"
                key="sylius_shop:product:add_to_cart_form"
                template="@SyliusShop/product/show/page/info/summary/add_to_cart.html.twig"
            />
        </service>

        <service
            id="sylius_shop.twig.component.product_association"
            class="Sylius\Bundle\ShopBundle\Twig\Component\Product\AssociationComponent"
        >
            <argument type="service" id="sylius.repository.product_association" />
            <argument type="service" id="sylius.context.channel" />

            <tag
                name="twig.component"
                key="sylius_shop:product:association"
                template="@SyliusShop/product/show/page/product_listing/association.html.twig"
            />
        </service>

        <service
            id="sylius_shop.twig.component.cart.form"
            class="Sylius\Bundle\ShopBundle\Twig\Component\Cart\FormComponent"
        >
            <argument type="service" id="form.factory" />
            <argument>Sylius\Bundle\ShopBundle\Form\Type\CartType</argument>
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="event_dispatcher" />

            <call method="setLiveResponder">
                <argument type="service" id="ux.live_component.live_responder"/>
            </call>

            <tag
                name="sylius.live_component"
                key="sylius_shop:cart:form"
                template="@SyliusShop/cart/index/form.html.twig"
            />
        </service>

        <service
            id="sylius_shop.twig.component.cart.summary"
            class="Sylius\Bundle\ShopBundle\Twig\Component\Cart\SummaryComponent"
        >

            <tag
                name="sylius.live_component"
                key="sylius_shop:cart:summary"
                template="@SyliusShop/cart/index/form/sections/general/summary.html.twig"
            />
        </service>

        <service
            id="sylius_shop.twig.component.common.header.cart"
            class="Sylius\Bundle\ShopBundle\Twig\Component\Common\CartComponent"
        >
            <argument type="service" id="sylius.context.cart" />

            <tag
                name="sylius.live_component"
                key="sylius_shop:common:header:cart"
                template="@SyliusShop/shared/components/header/cart.html.twig"
            />
        </service>

        <service
            id="sylius_shop.twig.component.common.offcanvas_cart"
            class="Sylius\Bundle\ShopBundle\Twig\Component\Common\CartComponent"
        >
            <argument type="service" id="sylius.context.cart" />

            <tag
                name="sylius.live_component"
                key="sylius_shop:common:offcanvas:cart"
                template="@SyliusShop/shared/layout/base/offcanvas/cart.html.twig"
            />
        </service>

        <service
            id="sylius_shop.twig.component.register.form"
            class="Sylius\Bundle\ShopBundle\Twig\Component\Common\Account\FormComponent"
        >
            <argument type="service" id="form.factory" />
            <argument>Sylius\Bundle\ShopBundle\Form\Type\CustomerRegistrationType</argument>

            <tag
                name="sylius.live_component"
                key="sylius_shop:account:register:form"
                template="@SyliusShop/account/register/form.html.twig"
            />
        </service>

        <service
            id="sylius_shop.twig.component.locale_switcher"
            class="Sylius\Bundle\ShopBundle\Twig\Component\Common\LocaleSwitcher"
        >
            <argument type="service" id="sylius.context.locale" />
            <argument type="service" id="sylius.locale_provider" />

            <tag
                name="twig.component"
                key="sylius_shop:common:locale_switcher"
                template="@SyliusShop/shared/layout/base/header/top_bar/locale_switch.html.twig"
            />
        </service>

        <service
            id="sylius_shop.twig.component.product_reviews"
            class="Sylius\Bundle\ShopBundle\Twig\Component\Product\ReviewsComponent"
        >
            <argument type="service" id="sylius.repository.product_review" />

            <tag
                name="twig.component"
                key="sylius_shop:product:review"
                template="@SyliusShop/shared/product_review/list.html.twig"
            />
        </service>

        <service
            id="sylius_shop.twig.component.count_product_reviews"
            class="Sylius\Bundle\ShopBundle\Twig\Component\Product\CountReviewsComponent"
        >
            <argument type="service" id="sylius.repository.product_review" />

            <tag
                name="twig.component"
                key="sylius_shop:product:count_reviews"
                template="@SyliusShop/product/show/page/info/summary/average_rating/number_of_reviews.html.twig"
            />
        </service>

        <service
            id="sylius_shop.twig.component.profile_update.form"
            class="Sylius\Bundle\ShopBundle\Twig\Component\Common\Account\FormComponent"
        >
            <argument type="service" id="form.factory" />
            <argument>Sylius\Bundle\ShopBundle\Form\Type\CustomerProfileType</argument>

            <tag
                name="sylius.live_component"
                key="sylius_shop:account:profile_update:form"
                template="@SyliusShop/account/profile_update/form.html.twig"
            />
        </service>

        <service
            id="sylius_shop.twig.component.change_password.form"
            class="Sylius\Bundle\ShopBundle\Twig\Component\Account\ChangePassword\FormComponent"
        >
            <argument type="service" id="form.factory" />
            <argument>Sylius\Bundle\ShopBundle\Form\Type\UserChangePasswordType</argument>

            <tag
                name="sylius.live_component"
                key="sylius_shop:account:change_password:form"
                template="@SyliusShop/account/change_password/form.html.twig"
            />
        </service>
    </services>
</container>
