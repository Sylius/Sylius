<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service
            id="sylius_shop.twig.component.product_review.list"
            class="Sylius\Bundle\ShopBundle\Twig\Component\ProductReview\ListComponent"
        >
            <argument type="service" id="sylius.repository.product_review" />

            <tag
                name="twig.component"
                key="sylius_shop:product_review:list"
                template="@SyliusShop/shared/product_review/list.html.twig"
            />
        </service>

        <service
            id="sylius_shop.twig.component.product_review.count"
            class="Sylius\Bundle\ShopBundle\Twig\Component\ProductReview\CountComponent"
        >
            <argument type="service" id="sylius.repository.product_review" />

            <tag
                name="twig.component"
                key="sylius_shop:product_review.count"
                template="@SyliusShop/product/show/page/info/summary/average_rating/number_of_reviews.html.twig"
            />
        </service>

        <service
            id="sylius_shop.twig.component.product_review.form"
            class="Sylius\Bundle\ShopBundle\Twig\Component\ProductReview\FormComponent"
        >
            <argument type="service" id="form.factory" />
            <argument>Sylius\Bundle\ShopBundle\Form\Type\Product\ProductReviewType</argument>

            <tag
                name="sylius.live_component"
                key="sylius_shop:product_review:form"
                template="@SyliusShop/product_review/create/main/form.html.twig"
            />
        </service>
    </services>
</container>
