<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius.routing.loader.route_collection_builder">Sylius\Bundle\ResourceBundle\Routing\Builder\RouteCollectionBuilder</parameter>
        <parameter key="sylius.routing.loader.api.class">Sylius\Bundle\ResourceBundle\Routing\Loader\ApiLoader</parameter>
        <parameter key="sylius.routing.loader.generic.class">Sylius\Bundle\ResourceBundle\Routing\Loader\GenericLoader</parameter>
    </parameters>

    <services>
        <service id="sylius.routing.loader.route_collection_builder" class="%sylius.routing.loader.route_collection_builder%"/>
        <service id="sylius.routing.loader.api" class="%sylius.routing.loader.api.class%">
            <argument type="service" id="sylius.routing.loader.route_collection_builder" />
            <argument>%sylius.config.classes%</argument>
            <argument>%sylius_resource.router.api.config%</argument>
            <tag name="routing.loader" />
        </service>
        <service id="sylius.routing.loader.generic" class="%sylius.routing.loader.generic.class%">
            <argument type="service" id="sylius.routing.loader.route_collection_builder" />
            <argument>%sylius.config.classes%</argument>
            <argument>%sylius_resource.router.generic.config%</argument>
            <tag name="routing.loader" />
        </service>
    </services>

</container>
