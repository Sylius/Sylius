{
    "name": "sylius/payum-bundle",
    "type": "symfony-bundle",
    "description": "Payum integration for Symfony e-commerce applications.",
    "keywords": [
        "payments",
        "payment",
        "payum"
    ],
    "homepage": "https://sylius.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Paweł Jędrzejewski",
            "homepage": "https://pjedrzejewski.com"
        },
        {
            "name": "Kotlyar Maksim",
            "email": "kotlyar.maksim@gmail.com"
        },
        {
            "name": "Sylius project",
            "homepage": "https://sylius.com"
        },
        {
            "name": "Community contributions",
            "homepage": "https://github.com/Sylius/Sylius/contributors"
        }
    ],
    "require": {
        "php": "^8.2",
        "payum/offline": "^1.7.3",
        "payum/payum-bundle": "^2.5",
        "sylius/core": "^2.0",
        "sylius/currency": "^2.0",
        "sylius/order-bundle": "^2.0",
        "sylius/payment-bundle": "^2.0",
        "sylius/resource-bundle": "^1.10 || dev-symfony-7",
        "php-http/httplug": "^2.4"
    },
    "require-dev": {
        "matthiasnoback/symfony-dependency-injection-test": "^5.1",
        "phpspec/phpspec": "^7.2",
        "symfony/dependency-injection": "^6.4.1 || ^7.0"
    },
    "suggest": {
        "payum/paypal-express-checkout-nvp": "To use PayPal Express Chekout NVP",
        "payum/stripe": "To use Stripe Checkout"
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.0-dev"
        },
        "symfony": {
            "require": "7.0.*"
        }
    },
    "autoload": {
        "psr-4": {
            "Sylius\\Bundle\\PayumBundle\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sylius\\Bundle\\PayumBundle\\spec\\": "spec/",
            "Sylius\\Bundle\\PayumBundle\\Tests\\": "Tests/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../*/*"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
