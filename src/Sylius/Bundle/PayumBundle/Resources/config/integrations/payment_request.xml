<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="Sylius\Bundle\PayumBundle\PaymentRequest\Processor\PayumRequestProcessorInterface" class="Sylius\Bundle\PayumBundle\PaymentRequest\Processor\PayumRequestProcessor">
            <argument type="service" id="payum" />
            <argument type="service" id="sylius.payment_request.payum.context" />
        </service>

        <service id="Sylius\Bundle\PayumBundle\PaymentRequest\Factory\PayumTokenFactoryInterface" class="Sylius\Bundle\PayumBundle\PaymentRequest\Factory\PayumTokenFactory">
            <argument type="service" id="payum" />
        </service>

        <service id="sylius.payment_request.payum.capture" class="Sylius\Bundle\PayumBundle\CommandHandler\CapturePaymentRequestHandler">
            <argument type="service" id="sylius.repository.payment_request" />
            <argument type="service" id="Sylius\Bundle\PayumBundle\PaymentRequest\Factory\PayumTokenFactoryInterface" />
            <argument type="service" id="Sylius\Bundle\PayumBundle\PaymentRequest\Processor\PayumRequestProcessorInterface" />
            <argument type="service" id="sylius.factory.payum_capture" />
            <tag name="messenger.message_handler" bus="sylius.command_bus" />
            <tag name="messenger.message_handler" bus="sylius_default.bus" />
        </service>

        <service id="sylius.payment_request.payum.authorize" class="Sylius\Bundle\PayumBundle\CommandHandler\AuthorizePaymentRequestHandler">
            <argument type="service" id="sylius.repository.payment_request" />
            <argument type="service" id="Sylius\Bundle\PayumBundle\PaymentRequest\Factory\PayumTokenFactoryInterface" />
            <argument type="service" id="Sylius\Bundle\PayumBundle\PaymentRequest\Processor\PayumRequestProcessorInterface" />
            <argument type="service" id="sylius.factory.payum_authorize" />
            <tag name="messenger.message_handler" bus="sylius.command_bus" />
            <tag name="messenger.message_handler" bus="sylius_default.bus" />
        </service>

        <service id="sylius.payment_request.payum.status" class="Sylius\Bundle\PayumBundle\CommandHandler\StatusPaymentRequestHandler">
            <argument type="service" id="sylius.repository.payment_request" />
            <argument type="service" id="Sylius\Bundle\PayumBundle\PaymentRequest\Processor\PayumRequestProcessorInterface" />
            <argument type="service" id="sylius.factory.payum_get_status_action" />
            <tag name="messenger.message_handler" bus="sylius.command_bus" />
            <tag name="messenger.message_handler" bus="sylius_default.bus" />
        </service>

        <service id="sylius.payment_request.payum.context" class="Sylius\Bundle\PayumBundle\PaymentRequest\PayumPaymentRequestContext" />

        <service id="sylius_payment_request.action.get_http_request" class="Sylius\Bundle\PayumBundle\Action\PaymentRequest\SyliusGetHttpRequestAction">
            <argument type="service" id="sylius.payment_request.payum.context" />

            <tag name="payum.action" all="true" prepend="true" />
        </service>

        <service id="sylius_payment_request.action.render_template" class="Sylius\Bundle\PayumBundle\Action\PaymentRequest\SyliusRenderTemplateAction">
            <argument type="service" id="sylius.payment_request.payum.context" />

            <tag name="payum.action" all="true" prepend="true" />
        </service>

    </services>
</container>
