<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <parameters>
        <parameter key="sylius_api.payment_request.payum.capture.class">Payum\Core\Request\Capture</parameter>
        <parameter key="sylius_api.payment_request.payum.status.class">Sylius\Bundle\PayumBundle\Request\GetStatus</parameter>
    </parameters>
    <services>
        <defaults public="true" />

        <service id="Sylius\Bundle\PayumBundle\Api\PayumRequestProcessorInterface" class="Sylius\Bundle\PayumBundle\Api\PayumRequestProcessor">
            <argument type="service" id="payum" />
            <argument type="service" id="sylius.api.payment.payum.context" />
        </service>

        <service id="Sylius\Bundle\PayumBundle\Api\PayumTokenFactoryInterface" class="Sylius\Bundle\PayumBundle\Api\PayumTokenFactory">
            <argument type="service" id="payum" />
        </service>

        <service id="sylius.api.payment_request.payum.capture" class="Sylius\Bundle\PayumBundle\CommandHandler\PaymentRequestHandler">
            <argument type="service" id="sylius.repository.payment_request" />
            <argument type="service" id="Sylius\Bundle\PayumBundle\Api\PayumTokenFactoryInterface" />
            <argument type="service" id="Sylius\Bundle\PayumBundle\Api\PayumRequestProcessorInterface" />
            <argument type="string">%sylius_api.payment_request.payum.capture.class%</argument>
            <tag name="messenger.message_handler" bus="sylius.command_bus" />
            <tag name="messenger.message_handler" bus="sylius_default.bus" />
        </service>

        <service id="sylius.api.payment_request.payum.status" class="Sylius\Bundle\PayumBundle\CommandHandler\PaymentRequestHandler">
            <argument type="service" id="sylius.repository.payment_request" />
            <argument type="service" id="Sylius\Bundle\PayumBundle\Api\PayumTokenFactoryInterface" />
            <argument type="service" id="Sylius\Bundle\PayumBundle\Api\PayumRequestProcessorInterface" />
            <argument type="string">%sylius_api.payment_request.payum.status.class%</argument>
            <tag name="messenger.message_handler" bus="sylius.command_bus" />
            <tag name="messenger.message_handler" bus="sylius_default.bus" />
        </service>

        <service id="sylius.api.payment.payum.context" class="Sylius\Bundle\PayumBundle\Api\PayumApiContext" />

        <service id="sylius_api.action.get_http_request" class="Sylius\Bundle\PayumBundle\Action\SyliusApiGetHttpRequestAction">
            <argument type="service" id="sylius.api.payment.payum.context" />

            <tag name="payum.action" all="true" prepend="true" />
        </service>

        <service id="sylius_api.action.render_template" class="Sylius\Bundle\PayumBundle\Action\SyliusApiRenderTemplateAction">
            <argument type="service" id="sylius.api.payment.payum.context" />

            <tag name="payum.action" all="true" prepend="true" />
        </service>

    </services>
</container>
