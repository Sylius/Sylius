<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="Sylius\Bundle\PayumBundle\PaymentRequest\Provider\PaymentRequestProviderInterface" class="Sylius\Bundle\PayumBundle\PaymentRequest\Provider\PaymentRequestProvider">
            <argument type="service" id="sylius.repository.payment_request" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service id="Sylius\Bundle\PayumBundle\PaymentRequest\Processor\RequestProcessorInterface" class="Sylius\Bundle\PayumBundle\PaymentRequest\Processor\RequestProcessor">
            <argument type="service" id="payum" />
            <argument type="service" id="sylius.payment_request.payum.context" />
        </service>

        <service id="Sylius\Bundle\PayumBundle\PaymentRequest\Processor\AfterTokenRequestProcessorInterface" class="Sylius\Bundle\PayumBundle\PaymentRequest\Processor\AfterTokenRequestProcessor">
            <argument type="service" id="sylius.custom_factory.payment_request" />
            <argument type="service" id="Sylius\Bundle\PaymentBundle\CommandDispatcher\PaymentRequestCommandDispatcherInterface" />
        </service>

        <service id="Sylius\Bundle\PayumBundle\PaymentRequest\Factory\PayumTokenFactoryInterface" class="Sylius\Bundle\PayumBundle\PaymentRequest\Factory\PayumTokenFactory">
            <argument type="service" id="payum" />
        </service>

        <service id="Sylius\Bundle\PayumBundle\CommandHandler\TokenPaymentRequestHandler" abstract="true">
            <argument type="service" id="Sylius\Bundle\PayumBundle\PaymentRequest\Provider\PaymentRequestProviderInterface" />
            <argument type="service" id="Sylius\Bundle\PayumBundle\PaymentRequest\Factory\PayumTokenFactoryInterface" />
            <argument type="service" id="Sylius\Bundle\PayumBundle\PaymentRequest\Processor\RequestProcessorInterface" />
            <argument type="service" id="Sylius\Bundle\PayumBundle\PaymentRequest\Processor\AfterTokenRequestProcessorInterface" />
        </service>

        <service id="sylius.payment_request.payum.capture" parent="Sylius\Bundle\PayumBundle\CommandHandler\TokenPaymentRequestHandler">
            <argument type="service" id="sylius.factory.payum_capture" />
            <tag name="messenger.message_handler" bus="sylius.command_bus" handles="Sylius\Bundle\PayumBundle\Command\CapturePaymentRequest" />
            <tag name="messenger.message_handler" bus="sylius_default.bus" handles="Sylius\Bundle\PayumBundle\Command\CapturePaymentRequest" />
        </service>

        <service id="sylius.payment_request.payum.authorize" parent="Sylius\Bundle\PayumBundle\CommandHandler\TokenPaymentRequestHandler">
            <argument type="service" id="sylius.factory.payum_authorize" />
            <tag name="messenger.message_handler" bus="sylius.command_bus" handles="Sylius\Bundle\PayumBundle\Command\AuthorizePaymentRequest" />
            <tag name="messenger.message_handler" bus="sylius_default.bus" handles="Sylius\Bundle\PayumBundle\Command\AuthorizePaymentRequest" />
        </service>

        <service id="Sylius\Bundle\PayumBundle\CommandHandler\ModelPaymentRequestHandler" abstract="true">
            <argument type="service" id="Sylius\Bundle\PayumBundle\PaymentRequest\Provider\PaymentRequestProviderInterface" />
            <argument type="service" id="Sylius\Bundle\PayumBundle\PaymentRequest\Processor\RequestProcessorInterface" />
        </service>

        <service id="sylius.payment_request.payum.status" parent="Sylius\Bundle\PayumBundle\CommandHandler\ModelPaymentRequestHandler">
            <argument type="service" id="sylius.factory.payum_get_status_action" />
            <tag name="messenger.message_handler" bus="sylius.command_bus" handles="Sylius\Bundle\PayumBundle\Command\StatusPaymentRequest" />
            <tag name="messenger.message_handler" bus="sylius_default.bus" handles="Sylius\Bundle\PayumBundle\Command\StatusPaymentRequest" />
        </service>

        <service id="sylius.payment_request.payum.context" class="Sylius\Bundle\PayumBundle\PaymentRequest\PaymentRequestContext" />
        <service id="Sylius\Bundle\PayumBundle\PaymentRequest\PaymentRequestContextInterface" alias="sylius.payment_request.payum.context" />

        <service id="sylius_payment_request.action.get_http_request" class="Sylius\Bundle\PayumBundle\Action\PaymentRequest\SyliusGetHttpRequestAction">
            <argument type="service" id="sylius.payment_request.payum.context" />

            <tag name="payum.action" all="true" prepend="true" />
        </service>

        <service id="sylius_payment_request.action.render_template" class="Sylius\Bundle\PayumBundle\Action\PaymentRequest\SyliusRenderTemplateAction">
            <argument type="service" id="sylius.payment_request.payum.context" />

            <tag name="payum.action" all="true" prepend="true" />
        </service>

    </services>
</container>
