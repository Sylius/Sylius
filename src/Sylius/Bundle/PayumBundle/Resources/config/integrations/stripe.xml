<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="sylius.api.payment_request.command_provider.payum.stripe.capture" class="Sylius\Bundle\ApiBundle\Payment\Payum\PayumCapturePaymentRequestCommandProvider">
            <tag name="sylius.api.payment_request.command_provider" factory="stripe" type="capture" />
        </service>

        <service id="sylius.api.payment_request.command_provider.payum.stripe.status" class="Sylius\Bundle\ApiBundle\Payment\Payum\PayumStatusPaymentRequestCommandProvider">
            <tag name="sylius.api.payment_request.command_provider" factory="stripe" type="status" />
        </service>

    </services>
</container>
