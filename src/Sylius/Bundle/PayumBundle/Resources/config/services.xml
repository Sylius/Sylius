<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="services/action.xml" />
        <import resource="services/controller.xml" />
        <import resource="services/extension.xml" />
        <import resource="services/factory.xml" />
        <import resource="services/form.xml" />
        <import resource="services/provider.xml" />
    </imports>

    <services>
        <defaults public="true" />

        <service id="sylius.payum.guzzle_http.client" class="GuzzleHttp\Client" public="false" />

        <service id="sylius.payum.guzzle.http_client" class="Payum\Core\Bridge\Guzzle\HttpClient">
            <argument type="service" id="sylius.payum.guzzle_http.client"/>
        </service>

        <service id="sylius.payum.http_client" alias="sylius.payum.guzzle.http_client"/>

        <service id="sylius.form_registry.payum_gateway_config" class="Sylius\Bundle\ResourceBundle\Form\Registry\FormTypeRegistry" />
    </services>
</container>
