<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius.form.type.content_choice.class">Sylius\Bundle\ContentBundle\Form\Type\ContentChoiceType</parameter>
    </parameters>

    <services>
        <service id="sylius.form.type.content_choice" class="%sylius.form.type.content_choice.class%">
            <argument>%sylius.model.static_content.class%</argument>
            <tag name="form.type" alias="sylius_content_choice" />
        </service>
    </services>
</container>
