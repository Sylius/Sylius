<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius.form.type.tax_calculator_choice.class">Sylius\TaxationBundle\Form\Type\CalculatorChoiceType</parameter>

        <parameter key="sylius.tax_calculation_strategy.interface">Sylius\Core\Taxation\Strategy\TaxCalculationStrategyInterface</parameter>
        <parameter key="sylius.registry.tax_calculation_strategy.class">Sylius\Registry\PrioritizedServiceRegistry</parameter>

        <parameter key="sylius.tax_calculator.interface">Sylius\Taxation\Calculator\CalculatorInterface</parameter>
        <parameter key="sylius.registry.tax_calculator.class">Sylius\Registry\ServiceRegistry</parameter>

        <parameter key="sylius.tax_calculator.class">Sylius\Taxation\Calculator\DelegatingCalculator</parameter>
        <parameter key="sylius.tax_calculator.default.class">Sylius\Taxation\Calculator\DefaultCalculator</parameter>

        <parameter key="sylius.tax_rate_resolver.class">Sylius\Taxation\Resolver\TaxRateResolver</parameter>
    </parameters>

    <services>
        <service id="sylius.form.type.tax_calculator_choice" class="%sylius.form.type.tax_calculator_choice.class%">
            <argument>%sylius.tax_calculators%</argument>
            <tag name="form.type" alias="sylius_tax_calculator_choice" />
        </service>

        <service id="sylius.registry.tax_calculation_strategy" class="%sylius.registry.tax_calculation_strategy.class%">
            <argument>%sylius.tax_calculation_strategy.interface%</argument>
            <argument>Tax calculation strategy</argument>
        </service>

        <service id="sylius.registry.tax_calculator" class="%sylius.registry.tax_calculator.class%">
            <argument>%sylius.tax_calculator.interface%</argument>
            <argument>Tax calculator</argument>
        </service>

        <service id="sylius.tax_calculator" class="%sylius.tax_calculator.class%">
            <argument type="service" id="sylius.registry.tax_calculator" />
        </service>

        <service id="sylius.tax_calculator.default" class="%sylius.tax_calculator.default.class%">
            <tag name="sylius.tax_calculator" calculator="default" />
        </service>

        <service id="sylius.tax_rate_resolver" class="%sylius.tax_rate_resolver.class%">
            <argument type="service" id="sylius.repository.tax_rate" />
        </service>
    </services>

</container>
