<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <imports>
        <import resource="pages/admin.xml" />
        <import resource="pages/shop.xml" />
        <import resource="pages/test_plugin.xml" />
    </imports>

    <parameters>
        <parameter key="sylius.behat.page.error.class">Sylius\Behat\Page\ErrorPage</parameter>
    </parameters>

    <services>

        <service id="sylius.behat.page" class="FriendsOfBehat\PageObjectExtension\Page\Page" abstract="true">
            <argument type="service" id="behat.mink.default_session" />
            <argument type="service" id="behat.mink.parameters" />
        </service>
        <service id="FriendsOfBehat\PageObjectExtension\Page\PageInterface" alias="sylius.behat.page" />

        <service id="sylius.behat.symfony_page" class="FriendsOfBehat\PageObjectExtension\Page\SymfonyPage" parent="sylius.behat.page" abstract="true">
            <argument type="service" id="router" />
        </service>
        <service id="FriendsOfBehat\PageObjectExtension\Page\SymfonyPageInterface" alias="sylius.behat.symfony_page" />

        <service id="sylius.behat.page.error" class="%sylius.behat.page.error.class%" parent="sylius.behat.page" public="false" />
        <service id="Sylius\Behat\Page\ErrorPageInterface" alias="sylius.behat.page.error" />

        <service id="sylius.behat.page.external.paypal_checkout_express" class="Sylius\Behat\Page\External\PaypalExpressCheckoutPage" parent="sylius.behat.page">
            <argument type="service" id="sylius.repository.payment_security_token" />
        </service>
        <service id="Sylius\Behat\Page\External\PaypalExpressCheckoutPageInterface" alias="sylius.behat.page.external.paypal_checkout_express" />
    </services>
</container>
