<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius.context.currency.class">Sylius\Currency\Context\CurrencyContext</parameter>

        <parameter key="sylius.currency_converter.class">Sylius\Currency\Converter\CurrencyConverter</parameter>
        <parameter key="sylius.converter.currency_name.class">Sylius\Currency\Converter\CurrencyNameConverter</parameter>
        <parameter key="sylius.currency_provider.class">Sylius\Currency\Provider\CurrencyProvider</parameter>

        <parameter key="sylius.form.type_extension.money.class">Sylius\CurrencyBundle\Form\Extension\MoneyTypeExtension</parameter>
        <parameter key="sylius.form.type.currency_code_choice.class">Sylius\CurrencyBundle\Form\Type\CurrencyCodeChoiceType</parameter>
        <parameter key="sylius.form.type.currency_choice.class">Sylius\CurrencyBundle\Form\Type\CurrencyChoiceType</parameter>
    </parameters>

    <services>
        <service id="sylius.form.type.currency_code_choice" class="%sylius.form.type.currency_code_choice.class%">
            <argument type="service" id="sylius.currency_provider" />
            <tag name="form.type" alias="sylius_currency_code_choice" />
        </service>

        <service id="sylius.form.type_extension.money" class="%sylius.form.type_extension.money.class%">
            <argument type="service" id="sylius.context.currency" />
            <tag name="form.type_extension" />
        </service>

        <service id="sylius.context.currency" class="%sylius.context.currency.class%">
            <argument /> <!-- Storage service name comes from config -->
            <argument>%sylius.money.currency%</argument>
        </service>

        <service id="sylius.currency_converter" class="%sylius.currency_converter.class%">
            <argument type="service" id="sylius.repository.currency" />
        </service>

        <service id="sylius.converter.currency_name" class="%sylius.converter.currency_name.class%" />

        <service id="sylius.currency_provider" class="%sylius.currency_provider.class%">
            <argument type="service" id="sylius.repository.currency" />
        </service>
    </services>

</container>
