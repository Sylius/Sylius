{% from 'SyliusWebBundle:Frontend/Product:macros.html.twig' import sylius_display_price %}
<div class="product-box">
    <a href="{{ path(product) }}"><h4>{{ product.name|truncate(18) }}</h4></a>
    <a href="{{ path(product) }}">
        {% set image = (product.variants|length > 0 and product.image) ? product.image.path|imagine_filter('sylius_medium') : 'http://placehold.it/262x255' %}
        <img class="img-rounded img-responsive" src="{{ image }}" alt="{{ product.name }}" />
        {{ sylius_display_price(product.firstVariant) }}
        <button class="btn btn-success btn-xs pull-right"><i class="icon-shopping-cart icon-white"></i> {{ 'sylius.ui.add_to_cart'|trans }}</button>
    </a>
</div>
