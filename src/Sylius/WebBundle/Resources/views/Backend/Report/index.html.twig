        {{ buttons.create(path('sylius_backend_report_create'), 'sylius.ui.create_report'|trans) }}
    </div>
    <h1><i class="glyphicon glyphicon-cog"></i> {{ 'sylius.ui.reports'|trans|raw }}</h1>
</div>

{{ pagination(reports) }}
{{ list(reports) }}
