{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% from 'SyliusResourceBundle:Macros:actions.html.twig' import create %}

{% block javascripts %}
{{ parent() }}
{% javascripts output='assets/compiled/backend_product_attribute.js'
    'bundles/syliusweb/js/sylius-attribute-choices.js'
%}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.ui.assortment'|trans }}</li>
    <li><a href="{{ path('sylius_backend_product_attribute_index') }}">{{ 'sylius.ui.attributes'|trans }}</a></li>
    <li>{{ 'sylius.ui.new'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <h1><i class="glyphicon glyphicon-plus-sign"></i> {{ 'sylius.ui.new_product_attribute'|trans|raw }}</h1>
</div>

{{ form_errors(form) }}
<form action="{{ path('sylius_backend_product_attribute_create', { 'type': app.request.attributes.get('type') }) }}" method="post" class="form-horizontal" novalidate>
    {% include 'SyliusWebBundle:Backend/ProductAttribute:_form.html.twig' %}
    {{ create() }}
</form>
{% endblock %}
