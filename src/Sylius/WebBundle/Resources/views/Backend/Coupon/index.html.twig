{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% set promotionId = app.request.get('promotionId') %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% from 'SyliusWebBundle:Backend/Macros:misc.html.twig' import pagination %}
{% from 'SyliusWebBundle:Backend/Coupon:macros.html.twig' import list %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.ui.sales'|trans }}</li>
    <li><a href="{{ path('sylius_backend_promotion_index') }}">{{ 'sylius.ui.promotions'|trans }}</a></li>
    <li>{{ 'sylius.ui.coupons'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <div class="actions-menu">
        {{ buttons.show(path('sylius_backend_promotion_show', {'id': promotionId}), 'sylius.ui.details'|trans) }}
        {{ buttons.create(path('sylius_backend_promotion_coupon_create', {'promotionId': promotionId}), 'sylius.ui.add_coupon'|trans) }}
        {{ buttons.manage(path('sylius_backend_promotion_coupon_generate', {'promotionId': promotionId}), 'sylius.promotion_coupon.generate'|trans) }}
    </div>
    <h1><i class="glyphicon glyphicon-ticket"></i> {{ 'sylius.ui.coupons'|trans|raw }}</h1>
</div>

{{ pagination(promotion_coupons) }}
{{ list(promotion_coupons) }}
{{ pagination(promotion_coupons) }}

{% endblock %}
