<div class="modal fade" id="confirmation-modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">{{ 'sylius.ui.confirmation_title'|trans }}</h4>
            </div>

            <div class="modal-body">
                {{ 'sylius.confirmation.message'|trans }}
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> {{ 'sylius.ui.cancel'|trans }}</button>
                <a class="btn btn-danger" id="confirmation-modal-confirm">
                    <i class="glyphicon glyphicon-trash"></i><span>{{ message is defined ? message : 'sylius.ui.delete'|trans }}</span>
                </a>
            </div>
        </div>
    </div>
</div>
