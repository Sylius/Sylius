<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:scoped="scoped"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Smile\Component\Store\Model\ProductVariantScoped" table="smile_product_variant_scoped">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO"/>
        </id>
        <field name="price" column="price" type="integer"/>
        <field name="scope" column="scope" type="string" length="255"/>
        <scoped:scope-aware field="scopeAware" scope="scope"/>
    </entity>

</doctrine-mapping>