        "symfony/property-access":              "^2.7",
        "symfony/swiftmailer-bundle":           "^2.3",
        "symfony/symfony":                      "^2.7",
        "symfony/twig-bundle":                  "^2.7",
        "twig/extensions":                      "~1.0",
        "twig/twig":                            "~1.11",
        "white-october/pagerfanta-bundle":      "~1.0",
        "willdurand/hateoas-bundle":            "@stable",
        "winzou/state-machine":                 "~0.1",
