{
    "@context": "\/api\/v2\/contexts\/CatalogPromotion",
    "@id": "\/api\/v2\/admin\/catalog-promotions\/tshirts_discount",
    "@type": "CatalogPromotion",
    "id": @integer@,
    "name": "T-Shirts discount",
    "code": "tshirts_discount",
    "startDate": "2022-01-01",
    "endDate": "2022-02-01",
    "channels": [
        "\/api\/v2\/admin\/channels\/WEB"
    ],
    "scopes": [
        {
            "@type": "CatalogPromotionScope",
            "@id": @string@,
            "id": @integer@,
            "type": "for_variants",
            "configuration": {
                "variants": [
                    "MUG"
                ]
            }
        }
    ],
    "actions": [
        {
            "@type": "CatalogPromotionAction",
            "@id": @string@,
            "id": @integer@,
            "type": "percentage_discount",
            "configuration": {
                "amount": 0.5
            }
        }
    ],
  "enabled": @boolean@,
  "translations": {
        "en_US": {
            "@id": "\/api\/v2\/admin\/catalog-promotion-translations\/@integer@",
            "@type": "CatalogPromotionTranslation",
            "id": @integer@,
            "label": "T-Shirts discount",
            "description": "50% discount on every T-Shirt"
        }
    }
}
